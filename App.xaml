<Application x:Class="TestCaseEditorApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:TestCaseEditorApp.MVVM.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Register the converter here so {StaticResource BoolToVisibilityConverter} is available app-wide -->
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" CollapseWhenFalse="True" />

            <ResourceDictionary.MergedDictionaries>
                <!-- existing merged dictionaries -->
                <ResourceDictionary Source="/EditableDataControl;component/Themes/Generic.xaml" />
                <ResourceDictionary Source="/TestCaseEditorApp;component/Resources/MainWindowResources.xaml" />
                <ResourceDictionary Source="/TestCaseEditorApp;component/Resources/ComboBoxStyles.xaml" />
                <ResourceDictionary Source="Resources/MenuTemplates.xaml" />
                <ResourceDictionary Source="Resources/CommonHeaderResources.xaml" />
                <!-- add your shared styles file -->
                <ResourceDictionary Source="/TestCaseEditorApp;component/Resources/SharedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>