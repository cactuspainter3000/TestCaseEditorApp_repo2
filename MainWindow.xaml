<Window x:Class="TestCaseEditorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:TestCaseEditorApp.ViewModels"
        xmlns:views="clr-namespace:TestCaseEditorApp.Views"
        xmlns:models="clr-namespace:TestCaseEditorApp.Models"
        Height="665" Width="1200"
        WindowStyle="None"
        Title="{Binding DisplayName}"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        d:DesignHeight="665" d:DesignWidth="1200">

    <!-- NOTE: DataContext is set from DI in MainWindow.xaml.cs constructor -->

    <Window.Resources>
        <ResourceDictionary>
            <!-- Resource dictionary is merged at application startup (App.OnStartup)
                 so we don't merge it again here. This avoids duplication and load-order issues. -->

            <!-- DataTemplates map VM types to Views (vm prefix is available here) -->
            <DataTemplate DataType="{x:Type vm:RequirementsViewModel}">
                <views:RequirementsView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ClarifyingQuestionsViewModel}">
                <views:ClarifyingQuestionsView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:TestCaseCreationViewModel}">
                <views:TestCaseCreationView />
            </DataTemplate>

            <!-- Placeholder viewmodel template -->
            <DataTemplate DataType="{x:Type vm:PlaceholderViewModel}">
                <Border Padding="10" Background="White" CornerRadius="6">
                    <TextBlock Text="{Binding Title}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </Border>
            </DataTemplate>

            <!-- Reusable StepDescriptor template used as ItemTemplate for menu listboxes.
                 It references the MenuButtonTheme style which is provided by the application-level merged dictionary. -->
            <DataTemplate x:Key="StepDescriptorTemplate" DataType="{x:Type models:StepDescriptor}">
                <RadioButton Style="{StaticResource MenuButtonTheme}"
                             IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected, Mode=TwoWay}"
                             Margin="0,2,0,2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding DisplayName}" Foreground="White"/>
                        <TextBlock Text="{Binding Badge}" Foreground="DarkOrange" Margin="6,0,0,0"/>
                    </StackPanel>
                </RadioButton>
            </DataTemplate>

        </ResourceDictionary>
    </Window.Resources>

    <!-- rest of XAML unchanged -->
    <Border Background="#2e2e2e"
            MouseDown="Border_MouseDown"
            CornerRadius="20">
        <Grid Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="4"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Header-->
            <Border 
                Grid.Column="0" 
                Grid.ColumnSpan="3"
                CornerRadius="5" 
                BorderBrush="DarkOrange" 
                BorderThickness="2">
                <Grid HorizontalAlignment="Stretch">
                    <TextBlock 
                        Text="Product Tracker"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Foreground="DarkOrange"
                        FontSize="25"
                        Margin="2,0,0,0"/>
                    <DockPanel Width="75" HorizontalAlignment="Right" Margin="3">

                        <Button 
                            DockPanel.Dock="Right"
                            Content="X"
                            Style="{StaticResource MainWindowButtonControls}"
                            Click="CloseButton_Click"/>
                        <Button 
                            DockPanel.Dock="Right"
                            Content="☐"
                            Style="{StaticResource MainWindowButtonControls}"
                            Click="WindowStateButton_Click"/>
                        <Button
                            DockPanel.Dock="Right"
                            Content="_🗕"
                            Style="{StaticResource MainWindowButtonControls}"
                            Click="ButtonMinimize_Click"/>
                    </DockPanel>
                </Grid>
            </Border>

            <!--Side Menu-->
            <Border 
    Grid.Column="0" 
    Grid.Row="2"
    CornerRadius="5" 
    BorderBrush="DarkOrange" 
    BorderThickness="2">
                <Grid Background="#252525" Margin="5" Grid.Row="1">
                    <StackPanel>

                        <!-- FILE menu at the top (click header to open dropdown) le and Popup content with this (keeps the File header at the top). -->

                            <!-- File header (click to open menu) -->
                            <ToggleButton x:Name="FileToggle"
              Style="{StaticResource MenuHeaderToggleStyle}"
              HorizontalAlignment="Stretch"
              Cursor="Hand">
                                <TextBlock Text="File" Style="{StaticResource MenuHeaderTheme}" />
                            </ToggleButton>

                            <!-- Popup for the File menu -->
                            <Popup IsOpen="{Binding IsChecked, ElementName=FileToggle, Mode=TwoWay}"
       PlacementTarget="{Binding ElementName=FileToggle}"
       Placement="Bottom"
       StaysOpen="False"
       AllowsTransparency="True"
       Focusable="False">

                                <Border Background="{StaticResource MenuListBackground}"
            BorderBrush="#33000000"
            BorderThickness="1"
            CornerRadius="4"
            Padding="4"
            MinWidth="220"
            SnapsToDevicePixels="True">
                                    <StackPanel>
                                        <Button Command="{Binding ImportWordCommand}"
                    Style="{StaticResource MenuPopupButtonStyle}">
                                            <TextBlock Text="Import New Requirements…" />
                                        </Button>

                                        <Button Command="{Binding LoadWorkspaceCommand}"
                    Style="{StaticResource MenuPopupButtonStyle}">
                                            <TextBlock Text="Import In-Process Requirements…" />
                                        </Button>

                                        <Separator Margin="0,4"/>

                                        <Button Command="{Binding SaveWorkspaceCommand}"
                    Style="{StaticResource MenuPopupButtonStyle}">
                                            <TextBlock Text="Save Workspace" />
                                        </Button>

                                        <Separator Margin="0,4"/>

                                        <Button Command="{Binding ReloadCommand}"
                    Style="{StaticResource MenuPopupButtonStyle}">
                                            <TextBlock Text="Reload Source (from DOCX)" />
                                        </Button>

                                        <Button Command="{Binding ExportAllToJamaCommand}"
                    Style="{StaticResource MenuPopupButtonStyle}">
                                            <TextBlock Text="Export All to Jama…" />
                                        </Button>

                                        <Separator Margin="0,8"/>

                                        <Button Command="{Binding HelpCommand}"
                    Style="{StaticResource MenuPopupButtonStyle}">
                                            <TextBlock Text="Help" />
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Popup>
                            <!-- Test Cases group -->
                        <TextBlock Text="Test Case Creator" Style="{StaticResource MenuHeaderTheme}"/>

                        <ListBox ItemsSource="{Binding TestCaseCreationSteps, PresentationTraceSources.TraceLevel=High}"
                     SelectedItem="{Binding SelectedStep, Mode=TwoWay}"
                     ItemTemplate="{StaticResource StepDescriptorTemplate}"
                     Background="Transparent"
                     BorderThickness="0"
                     SelectionMode="Single"
                     Margin="0" d:ItemsSource="{d:SampleData ItemCount=5}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>

                        <!-- Repair group -->
                        <TextBlock Text="Repair" Style="{StaticResource MenuHeaderTheme}"/>
                        <ListBox ItemsSource="{Binding RepairSteps}"
                     ItemContainerStyle="{StaticResource MenuListBoxItemStyle}"
                     SelectedItem="{Binding SelectedStep, Mode=TwoWay}"
                     ItemTemplate="{StaticResource StepDescriptorTemplate}"
                     Background="Transparent"
                     BorderThickness="0"
                     SelectionMode="Single"
                     Margin="0"/>

                        <!-- Reports group -->
                        <TextBlock Text="Reports" Style="{StaticResource MenuHeaderTheme}"/>
                        <ListBox ItemsSource="{Binding ReportsSteps}"
                     ItemContainerStyle="{StaticResource MenuListBoxItemStyle}"
                     SelectedItem="{Binding SelectedStep, Mode=TwoWay}"
                     ItemTemplate="{StaticResource StepDescriptorTemplate}"
                     Background="Transparent"
                     BorderThickness="0"
                     SelectionMode="Single"
                     Margin="0"/>

                        <!-- General group -->
                        <TextBlock Text="General" Style="{StaticResource MenuHeaderTheme}"/>
                        <ListBox ItemsSource="{Binding GeneralSteps}"
                     ItemContainerStyle="{StaticResource MenuListBoxItemStyle}"
                     SelectedItem="{Binding SelectedStep, Mode=TwoWay}"
                     ItemTemplate="{StaticResource StepDescriptorTemplate}"
                     Background="Transparent"
                     BorderThickness="0"
                     SelectionMode="Single"
                     Margin="0"/>

                        <!-- Quick Links group -->
                        <TextBlock Text="Quick Links" Style="{StaticResource MenuHeaderTheme}"/>
                        <ListBox ItemsSource="{Binding QuickLinksSteps}"
                     ItemContainerStyle="{StaticResource MenuListBoxItemStyle}"
                     SelectedItem="{Binding SelectedStep, Mode=TwoWay}"
                     ItemTemplate="{StaticResource StepDescriptorTemplate}"
                     Background="Transparent"
                     BorderThickness="0"
                     SelectionMode="Single"
                     Margin="0"/>

                        <TextBlock VerticalAlignment="Bottom"
                       Text="{Binding SapStatus}"
                       HorizontalAlignment="Center"
                       Foreground="{Binding SapForegroundStatus}"
                       Style="{StaticResource MenuHeaderTheme}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content area -->
            <Border 
                Grid.Column="2" 
                Grid.Row="2" 
                Margin="5,0,0,0" 
                CornerRadius="5" 
                BorderBrush="DarkOrange" 
                BorderThickness="2">

                <ContentControl 
                    Margin="5"
                    Grid.Row="1"
                    Grid.Column="1"
                    Background="Transparent"
                    Content="{Binding CurrentStepViewModel}"/>
            </Border>
        </Grid>
    </Border>
</Window>