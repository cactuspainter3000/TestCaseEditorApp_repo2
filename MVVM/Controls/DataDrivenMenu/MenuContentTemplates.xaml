<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:menu="clr-namespace:TestCaseEditorApp.MVVM.Models.DataDrivenMenu"
                    xmlns:local="clr-namespace:TestCaseEditorApp.MVVM.Controls.DataDrivenMenu">

    <local:MenuLevelColorConverter x:Key="MenuLevelColorConverter"/>
    <local:MenuLevelFontSizeConverter x:Key="MenuLevelFontSizeConverter"/>

    <!-- Required converter for templates -->
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

    <DataTemplate DataType="{x:Type menu:SectionHeader}">
        <Border Background="Transparent"
                Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal" Margin="8,8,8,4">
                <TextBlock Text="{Binding Icon}" 
                          FontSize="{Binding Level, Converter={StaticResource MenuLevelFontSizeConverter}}" 
                          Foreground="Orange"
                          Margin="0,0,6,0"
                          VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Text}" 
                          FontSize="{Binding Level, Converter={StaticResource MenuLevelFontSizeConverter}}"
                          Foreground="Orange"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </DataTemplate>

    <!-- MenuAction Template - Supports both simple buttons and dropdowns -->
    <DataTemplate DataType="{x:Type menu:MenuAction}">
        <Border Background="Transparent"
                Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            
            <!-- Single Grid container to hold both modes -->
            <Grid>
                <!-- Simple button mode when IsDropdown = false -->
                <Border x:Name="SimpleMode">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDropdown}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    
                    <Button Style="{StaticResource SideMenuPopupButtonStyle}"
                            Command="{Binding Command}"
                            CommandParameter="{Binding CommandParameter}"
                            ToolTip="{Binding Tooltip}"
                            Margin="0,1"
                            Padding="6,5"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left">
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Icon}" 
                                      FontSize="{Binding Level, Converter={StaticResource MenuLevelFontSizeConverter}}" 
                                      Margin="0,0,6,0"
                                      VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Text}" 
                                      FontSize="{Binding Level, Converter={StaticResource MenuLevelFontSizeConverter}}"
                                      TextWrapping="Wrap"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>
                
                <!-- Dropdown mode when IsDropdown = true -->
                <Border x:Name="DropdownMode">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDropdown}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    
                    <StackPanel Orientation="Vertical">
                        <!-- Dropdown Header with chevron and accent color -->
                        <ToggleButton Style="{StaticResource ActionToggleButton}"
                                      IsChecked="{Binding IsExpanded, Mode=TwoWay}"
                                      Command="{Binding Command}"
                                      CommandParameter="{Binding CommandParameter}"
                                      HorizontalAlignment="Stretch"
                                      HorizontalContentAlignment="Stretch"
                                      FontWeight="Normal"
                                      Margin="0,1"
                                      Padding="6,5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>     <!-- Content (Icon + Text) -->
                                    <ColumnDefinition Width="24"/>    <!-- Chevron with fixed width for right alignment -->
                                </Grid.ColumnDefinitions>
                                
                                <!-- Content area with icon and text -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Icon}" 
                                              FontSize="{Binding Level, Converter={StaticResource MenuLevelFontSizeConverter}}" 
                                              Foreground="{Binding Level, Converter={StaticResource MenuLevelColorConverter}}"
                                              Margin="0,0,6,0"
                                              VerticalAlignment="Center"/>
                                    
                                    <TextBlock Text="{Binding Text}" 
                                              FontSize="{Binding Level, Converter={StaticResource MenuLevelFontSizeConverter}}"
                                              Foreground="{Binding Level, Converter={StaticResource MenuLevelColorConverter}}"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <!-- Chevron positioned at far right like original menu -->
                                <TextBlock Grid.Column="1" 
                                          Text="▼"
                                          FontSize="12" 
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Right"
                                          Margin="0,0,4,0">
                                    <TextBlock.RenderTransform>
                                        <RotateTransform Angle="0"/>
                                    </TextBlock.RenderTransform>
                                    <TextBlock.RenderTransformOrigin>0.5,0.5</TextBlock.RenderTransformOrigin>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <!-- Spin to 180° at same speed as menu expand -->
                                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                                               To="180" Duration="0:0:0.6"
                                                                               AccelerationRatio="0.2" DecelerationRatio="0.8"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                    <DataTrigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <!-- Spin back to 0° at same speed as menu collapse -->
                                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                                               To="0" Duration="0:0:0.5"
                                                                               AccelerationRatio="0.2" DecelerationRatio="0.8"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.ExitActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </ToggleButton>
                        
                        <!-- Children Container - Auto-sizing smooth animation -->
                        <ItemsControl ItemsSource="{Binding Children}"
                                     Margin="16,0,0,0"
                                     x:Name="ChildrenContainer">
                            <ItemsControl.LayoutTransform>
                                <ScaleTransform ScaleY="0"/>
                            </ItemsControl.LayoutTransform>
                            <ItemsControl.Style>
                                <Style TargetType="ItemsControl">
                                    <Setter Property="Opacity" Value="0"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <!-- Auto-sizing expand animation -->
                                                        <DoubleAnimation Storyboard.TargetProperty="LayoutTransform.ScaleY"
                                                                       To="1" Duration="0:0:0.4"
                                                                       AccelerationRatio="0.2" DecelerationRatio="0.8"/>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                       To="1" Duration="0:0:0.3"
                                                                       AccelerationRatio="0.2" DecelerationRatio="0.8"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <!-- Auto-sizing collapse animation -->
                                                        <DoubleAnimation Storyboard.TargetProperty="LayoutTransform.ScaleY"
                                                                       To="0" Duration="0:0:0.3"
                                                                       AccelerationRatio="0.2" DecelerationRatio="0.8"/>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                       To="0" Duration="0:0:0.2"
                                                                       AccelerationRatio="0.2" DecelerationRatio="0.8"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ItemsControl.Style>
                            
                            <!-- Items panel - vertical stack -->
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            
                            <!-- Container style to ensure proper stretching -->
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </DataTemplate>

    <DataTemplate DataType="{x:Type menu:ConditionalGroup}">
        <Border Background="Transparent"
                Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding Children}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>
        </Border>
    </DataTemplate>

    <DataTemplate DataType="{x:Type menu:ComplexAction}">
        <Border Background="Transparent"
                Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Button Style="{StaticResource SideMenuPopupButtonStyle}"
                    Command="{Binding Command}"
                    CommandParameter="{Binding CommandParameter}"
                    ToolTip="{Binding Tooltip}"
                    Margin="0,1"
                    Padding="6,5"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left">
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Icon}" 
                              FontSize="14" 
                              Margin="0,0,6,0"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Text}" 
                              FontSize="{DynamicResource CaptionFontSize}"
                              TextWrapping="Wrap"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Border>
    </DataTemplate>
</ResourceDictionary>


