<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.Requirements.Views.RequirementsSearchAttachmentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             xmlns:controls="clr-namespace:TestCaseEditorApp.MVVM.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <conv:InvertedBoolToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <conv:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    
    <Grid Background="{StaticResource Brush.Background.InformationBox}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Workflow Action Buttons Section -->
        <Border Grid.Row="0" Background="Transparent" Padding="16,4">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Command="{Binding SearchAttachmentsCommand}"
                        IsEnabled="{Binding SearchAttachmentsCommand.CanExecute}"
                        Style="{StaticResource SideMenuPopupButtonStyle}"
                        Padding="12,6">
                    <Button.Content>
                        <TextBlock>
                            <Run Text="{Binding ScanButtonPrefix, Mode=OneWay}"/>
                            <Run Text=" "/>
                            <Run Text="{Binding CurrentProjectName, Mode=OneWay}"/>
                            <Run Text=" for Attachments"/>
                        </TextBlock>
                    </Button.Content>
                    <Button.ToolTip>
                        <ToolTip Content="Scan the selected project for attachments and documents"/>
                    </Button.ToolTip>
                </Button>
            </StackPanel>
        </Border>

        <!-- Attachment Selection Section -->
        <Border Grid.Row="1" Background="Transparent" Padding="16,4" Margin="0,2,0,0"
                Visibility="{Binding HasAttachmentsAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                          
                <!-- Custom Dropdown Control -->
                <controls:NavigationDropdownControl 
                    ItemsSource="{Binding AvailableAttachments}"
                    SelectedItem="{Binding SelectedAttachmentFilter}"
                    EmptyText="Select attachment to scan..."
                    SelectedItemDisplayPath="DisplayName"
                    Command="{Binding SelectAttachmentCommand}"
                    MinWidth="300"
                    Margin="0,0,16,0"
                    IsEnabled="{Binding ParseSelectedAttachmentCommand.CanExecute}">
                </controls:NavigationDropdownControl>
                
                <!-- Attachment Action Buttons -->
                <Button Content="Scrape Attachment for Requirements" 
                        Command="{Binding ParseSelectedAttachmentCommand}"
                        IsEnabled="{Binding ParseSelectedAttachmentCommand.CanExecute}"
                        Style="{StaticResource SideMenuPopupButtonStyle}"
                        Margin="0,0,16,0" 
                        Padding="12,6">
                    <Button.ToolTip>
                        <ToolTip Content="Extract requirements from the selected attachment"/>
                    </Button.ToolTip>
                </Button>
                
                <Button Content="Open Attachment" 
                        Style="{StaticResource SideMenuPopupButtonStyle}"
                        Command="{Binding OpenAttachmentCommand}"
                        IsEnabled="{Binding OpenAttachmentCommand.CanExecute}"
                        Padding="12,6">
                    <Button.ToolTip>
                        <ToolTip Content="Download and open the selected attachment"/>
                    </Button.ToolTip>
                </Button>
            </StackPanel>
        </Border>

        <!-- Results Section -->
        <Border Grid.Row="2" Background="{StaticResource Brush.Background.InformationBox}" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                          Text="Requirements Found:" 
                          FontSize="{StaticResource FontSize.H2}" 
                          FontWeight="SemiBold"
                          Foreground="{StaticResource Brush.Text.Primary}"
                          Margin="0,0,0,12"/>

                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Disabled">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
                    </ScrollViewer.Resources>
                    
                    <Grid>
                        <!-- Placeholder when no requirements -->
                        <Border Background="{StaticResource Brush.Background.InformationBox}" 
                               BorderBrush="{StaticResource Brush.Border.Subtle}" 
                               BorderThickness="1" 
                               CornerRadius="4" 
                               Padding="20"
                               Visibility="{Binding HasExtractedRequirements, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="ðŸ“„" 
                                          FontSize="48" 
                                          HorizontalAlignment="Center" 
                                          Foreground="{StaticResource Brush.Text.Secondary}"
                                          Margin="0,0,0,16"/>
                                <TextBlock Text="No requirements extracted yet" 
                                          FontSize="{StaticResource FontSize.Body}" 
                                          Foreground="{StaticResource Brush.Text.Secondary}"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="Search Jama project for attachments and scan selected documents to extract requirements" 
                                          FontSize="{StaticResource FontSize.Caption}" 
                                          Foreground="{StaticResource Brush.Text.Tertiary}"
                                          HorizontalAlignment="Center"
                                          TextAlignment="Center"
                                          TextWrapping="Wrap"
                                          MaxWidth="300"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Requirements list when extracted -->
                        <ItemsControl ItemsSource="{Binding ExtractedRequirements}"
                                     Visibility="{Binding HasExtractedRequirements, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource Brush.Background.Header}" 
                                           BorderBrush="{StaticResource Brush.Border.Subtle}" 
                                           BorderThickness="1" 
                                           CornerRadius="4" 
                                           Padding="16"
                                           Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- ID and Type Header -->
                                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0"
                                                          Text="{Binding GlobalId}" 
                                                          FontSize="{StaticResource FontSize.Caption}"
                                                          FontWeight="Medium"
                                                          Foreground="{StaticResource Brush.Text.Secondary}"/>
                                                
                                                <Border Grid.Column="1"
                                                       Background="{StaticResource Brush.Accent.Primary}"
                                                       CornerRadius="4"
                                                       Padding="6,2">
                                                    <TextBlock Text="{Binding ItemType}" 
                                                              FontSize="{StaticResource FontSize.Caption}"
                                                              FontWeight="Medium"
                                                              Foreground="White"/>
                                                </Border>
                                            </Grid>
                                            
                                            <!-- Requirement Name -->
                                            <TextBlock Grid.Row="1" 
                                                      Text="{Binding Name}" 
                                                      FontSize="{StaticResource FontSize.Body}"
                                                      FontWeight="SemiBold"
                                                      Foreground="{StaticResource Brush.Text.Primary}"
                                                      TextWrapping="Wrap"
                                                      Margin="0,0,0,8"/>
                                            
                                            <!-- Requirement Description -->
                                            <TextBlock Grid.Row="2" 
                                                      Text="{Binding Description}" 
                                                      FontSize="{StaticResource FontSize.Caption}"
                                                      Foreground="{StaticResource Brush.Text.Secondary}"
                                                      TextWrapping="Wrap"
                                                      LineHeight="18"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>