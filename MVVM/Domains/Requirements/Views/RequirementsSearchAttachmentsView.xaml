<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.Requirements.Views.RequirementsSearchAttachmentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             xmlns:controls="clr-namespace:TestCaseEditorApp.MVVM.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <conv:InvertedBoolToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <conv:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    
    <Grid Background="{StaticResource Brush.Background.Menu}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Section -->
        <Border Grid.Row="0" Background="{StaticResource Brush.Background.Menu}" Padding="20,16">
            <StackPanel>
                <TextBlock Text="ðŸ” Search Attachments" 
                          FontSize="{StaticResource FontSize.H1}" 
                          FontWeight="SemiBold"
                          Foreground="{StaticResource Brush.Text.Primary}"
                          Margin="0,0,0,8"/>
                <TextBlock Text="Search for document attachments and scan them for requirements" 
                          FontSize="{StaticResource FontSize.Body}" 
                          Foreground="{StaticResource Brush.Text.Secondary}"/>
            </StackPanel>
        </Border>

        <!-- Search Controls -->
        <Border Grid.Row="1" Background="{StaticResource Brush.Background.Header}" Padding="16,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Attachment Filter Row -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                              Text="Select:" 
                              VerticalAlignment="Center" 
                              FontWeight="SemiBold" 
                              FontSize="{StaticResource FontSize.Body}"
                              Foreground="{StaticResource Brush.Text.Primary}"
                              Margin="0,0,12,0"/>

                    <!-- Custom Dropdown Control -->
                    <controls:NavigationDropdownControl 
                        Grid.Column="1"
                        ItemsSource="{Binding AvailableAttachments}"
                        SelectedItem="{Binding SelectedAttachmentFilter}"
                        EmptyText="Select attachment to scan..."
                        SelectedItemDisplayPath="DisplayName"
                        Command="{Binding SelectAttachmentCommand}">
                        <controls:NavigationDropdownControl.IsEnabled>
                            <Binding Path="IsBackgroundScanningInProgress" Converter="{StaticResource InvertBoolConverter}"/>
                        </controls:NavigationDropdownControl.IsEnabled>
                    </controls:NavigationDropdownControl>
                    
                    <!-- Open Attachment Button -->
                    <Button Grid.Column="2" 
                            Content="ðŸ“„ Open" 
                            Style="{StaticResource ActionButton}"
                            Command="{Binding OpenAttachmentCommand}"
                            IsEnabled="{Binding SelectedAttachment}"
                            Margin="8,0,0,0"
                            Padding="12,6">
                        <Button.ToolTip>
                            <ToolTip Content="Download and open the selected attachment"/>
                        </Button.ToolTip>
                    </Button>
                </Grid>

                <!-- Workflow Action Buttons Row -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                            Content="Search for Attachments" 
                            Style="{StaticResource ActionButton}"
                            Command="{Binding SearchAttachmentsCommand}"
                            Margin="0,0,8,0">
                        <Button.IsEnabled>
                            <Binding Path="IsBackgroundScanningInProgress" Converter="{StaticResource InvertBoolConverter}"/>
                        </Button.IsEnabled>
                    </Button>

                    <Button Grid.Column="1" 
                            Content="Scrape Document for Requirements" 
                            Style="{StaticResource ActionButton}"
                            Command="{Binding ParseSelectedAttachmentCommand}"
                            IsEnabled="{Binding ParseSelectedAttachmentCommand.CanExecute}"
                            Margin="4,0">
                        <Button.ToolTip>
                            <ToolTip Content="Scan selected attachment for requirements"/>
                        </Button.ToolTip>
                    </Button>

                    <Button Grid.Column="2" 
                            Content="Import Requirements" 
                            Style="{StaticResource ActionButton}"
                            Command="{Binding ImportRequirementsCommand}"
                            IsEnabled="{Binding CanImportRequirements}"
                            Margin="8,0,0,0">
                        <Button.ToolTip>
                            <ToolTip Content="Import scanned requirements to test case generator"/>
                        </Button.ToolTip>
                    </Button>
                </Grid>

                <!-- Search Progress Status Row -->
                <Border Grid.Row="1" 
                        Background="{StaticResource Brush.Background.Header}" 
                        BorderBrush="{StaticResource Brush.Accent.Primary}" 
                        BorderThickness="1"
                        CornerRadius="4"
                        Margin="0,8,0,0"
                        Padding="12,8"
                        Visibility="{Binding IsBackgroundScanningInProgress, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Progress Icon -->
                        <TextBlock Grid.Column="0" 
                                  Text="ðŸ”" 
                                  FontSize="16" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,12,0"/>
                        
                        <!-- Progress Text and Bar -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding BackgroundScanProgressText}" 
                                      FontWeight="Medium"
                                      FontSize="{StaticResource FontSize.Body}"
                                      Foreground="{StaticResource Brush.Text.Primary}"
                                      Margin="0,0,0,4"/>
                            <ProgressBar Value="{Binding BackgroundScanProgress}"
                                        Maximum="{Binding BackgroundScanTotal}"
                                        Height="6"
                                        Background="{StaticResource Brush.Background.Header}"
                                        Foreground="{StaticResource Brush.Accent.Primary}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Results Section -->
        <Border Grid.Row="2" Background="{StaticResource Brush.Background.Menu}" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                          Text="Requirements Found:" 
                          FontSize="{StaticResource FontSize.H2}" 
                          FontWeight="SemiBold"
                          Foreground="{StaticResource Brush.Text.Primary}"
                          Margin="0,0,0,12"/>

                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Disabled">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
                    </ScrollViewer.Resources>
                    
                    <Grid>
                        <!-- Placeholder when no requirements -->
                        <Border Background="{StaticResource Brush.Background.Header}" 
                               BorderBrush="{StaticResource Brush.Border.Subtle}" 
                               BorderThickness="1" 
                               CornerRadius="4" 
                               Padding="20"
                               Visibility="{Binding HasExtractedRequirements, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="ðŸ“„" 
                                          FontSize="48" 
                                          HorizontalAlignment="Center" 
                                          Foreground="{StaticResource Brush.Text.Secondary}"
                                          Margin="0,0,0,16"/>
                                <TextBlock Text="No requirements extracted yet" 
                                          FontSize="{StaticResource FontSize.Body}" 
                                          Foreground="{StaticResource Brush.Text.Secondary}"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="Search for attachments and scan selected documents to extract requirements" 
                                          FontSize="{StaticResource FontSize.Caption}" 
                                          Foreground="{StaticResource Brush.Text.Tertiary}"
                                          HorizontalAlignment="Center"
                                          TextAlignment="Center"
                                          TextWrapping="Wrap"
                                          MaxWidth="300"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Requirements list when extracted -->
                        <ItemsControl ItemsSource="{Binding ExtractedRequirements}"
                                     Visibility="{Binding HasExtractedRequirements, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource Brush.Background.Header}" 
                                           BorderBrush="{StaticResource Brush.Border.Subtle}" 
                                           BorderThickness="1" 
                                           CornerRadius="4" 
                                           Padding="16"
                                           Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- ID and Type Header -->
                                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0"
                                                          Text="{Binding GlobalId}" 
                                                          FontSize="{StaticResource FontSize.Caption}"
                                                          FontWeight="Medium"
                                                          Foreground="{StaticResource Brush.Text.Secondary}"/>
                                                
                                                <Border Grid.Column="1"
                                                       Background="{StaticResource Brush.Accent.Primary}"
                                                       CornerRadius="4"
                                                       Padding="6,2">
                                                    <TextBlock Text="{Binding ItemType}" 
                                                              FontSize="{StaticResource FontSize.Caption}"
                                                              FontWeight="Medium"
                                                              Foreground="White"/>
                                                </Border>
                                            </Grid>
                                            
                                            <!-- Requirement Name -->
                                            <TextBlock Grid.Row="1" 
                                                      Text="{Binding Name}" 
                                                      FontSize="{StaticResource FontSize.Body}"
                                                      FontWeight="SemiBold"
                                                      Foreground="{StaticResource Brush.Text.Primary}"
                                                      TextWrapping="Wrap"
                                                      Margin="0,0,0,8"/>
                                            
                                            <!-- Requirement Description -->
                                            <TextBlock Grid.Row="2" 
                                                      Text="{Binding Description}" 
                                                      FontSize="{StaticResource FontSize.Caption}"
                                                      Foreground="{StaticResource Brush.Text.Secondary}"
                                                      TextWrapping="Wrap"
                                                      LineHeight="18"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>