<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.Requirements.Views.RequirementsSearchAttachmentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,15">
            <StackPanel>
                <TextBlock Text="ðŸ” Requirements Search in Attachments" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock Text="Search and extract requirements from Jama Connect attachments using AI-powered document parsing" 
                          FontSize="14" 
                          Foreground="#BDC3C7" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Search Controls -->
        <Border Grid.Row="1" Background="#ECF0F1" Padding="20,15" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Status Message (more prominent) -->
                <TextBlock Grid.Row="0" 
                          Text="{Binding StatusMessage}" 
                          FontSize="14"
                          FontWeight="SemiBold"
                          Foreground="#2C3E50"
                          TextWrapping="Wrap"
                          MinHeight="20"
                          VerticalAlignment="Center"/>
                
                <!-- Action Controls -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Attachment Filter Dropdown -->
                    <TextBlock Grid.Column="0" Text="Select:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <Grid Grid.Column="1">
                        <ComboBox ItemsSource="{Binding AvailableAttachments}"
                                 SelectedItem="{Binding SelectedAttachmentFilter}"
                                 VerticalAlignment="Center"
                                 Padding="8,5"
                                 ToolTip="Select a specific attachment or leave blank to see all">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsBackgroundScanningInProgress}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsJamaConfigured}" Value="False">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" MaxWidth="300" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text=" (" Foreground="Gray" Margin="5,0,0,0"/>
                                        <TextBlock Text="{Binding FileSize, StringFormat={}{0:N0}}" Foreground="Gray"/>
                                        <TextBlock Text=" bytes)" Foreground="Gray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        
                        <!-- Background Scan Progress Overlay -->
                        <Border x:Name="BackgroundProgress"
                               Background="#F0F8FF" 
                               BorderBrush="#3498DB" 
                               BorderThickness="1"
                               CornerRadius="3"
                               Padding="10,5">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsBackgroundScanningInProgress}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="â³" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding BackgroundScanProgressText}" 
                                          FontSize="13" 
                                          FontWeight="SemiBold"
                                          Foreground="#2C3E50" 
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Search Button -->
                    <Button Grid.Column="3" 
                            Content="ðŸ” Search Attachments"
                            Command="{Binding SearchAttachmentsCommand}"
                            Background="#3498DB"
                            Foreground="White"
                            Padding="15,8"
                            BorderThickness="0"
                            FontWeight="SemiBold"/>
                            
                    <!-- Test Connection Button -->
                    <Button Grid.Column="5" 
                            Content="ðŸ”§ Test"
                            Command="{Binding TestConnectionCommand}"
                            ToolTip="Test Jama connection and debug current workspace"
                            Background="#6F42C1"
                            Foreground="White"
                            Padding="10,8"
                            BorderThickness="0"
                            FontSize="11"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Attachments List -->
            <Border Grid.Column="0" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Attachments Header -->
                    <Border Grid.Row="0" Background="#34495E" Padding="15,10">
                        <TextBlock Text="ðŸ“Ž Found Attachments" 
                                  FontWeight="Bold" 
                                  Foreground="White" 
                                  FontSize="16"/>
                    </Border>

                    <!-- Attachments List -->
                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding SearchResults}"
                             SelectedItem="{Binding SelectedAttachment}"
                             Background="White"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10" BorderBrush="#ECF0F1" BorderThickness="0,0,0,1">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" 
                                                  FontWeight="SemiBold" 
                                                  TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding Description}" 
                                                  FontSize="12" 
                                                  Foreground="#7F8C8D" 
                                                  TextWrapping="Wrap"
                                                  Margin="0,2,0,0"/>
                                        <TextBlock FontSize="11" 
                                                  Foreground="#95A5A6" 
                                                  Margin="0,2,0,0">
                                            <Run Text="Size: "/>
                                            <Run Text="{Binding FileSize, StringFormat={}{0:N0} bytes}"/>
                                            <Run Text=" â€¢ ID: "/>
                                            <Run Text="{Binding Id}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Parse Button -->
                    <Border Grid.Row="2" Background="#F8F9FA" Padding="15,10">
                        <Button Content="ðŸ¤– Parse Selected for Requirements"
                                Command="{Binding ParseSelectedAttachmentCommand}"
                                Background="#E67E22"
                                Foreground="White"
                                Padding="10,8"
                                BorderThickness="0"
                                FontWeight="SemiBold"
                                HorizontalAlignment="Stretch"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Right Panel: Extracted Requirements -->
            <Border Grid.Column="2" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Requirements Header -->
                    <Border Grid.Row="0" Background="#27AE60" Padding="15,10">
                        <TextBlock Text="ðŸ“‹ Extracted Requirements" 
                                  FontWeight="Bold" 
                                  Foreground="White" 
                                  FontSize="16"/>
                    </Border>

                    <!-- Requirements List -->
                    <ScrollViewer Grid.Row="1" Background="White" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ExtractedRequirements}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="15" BorderBrush="#ECF0F1" BorderThickness="0,0,0,1">
                                        <StackPanel>
                                            <TextBlock FontWeight="SemiBold" TextWrapping="Wrap">
                                                <Run Text="REQ-"/>
                                                <Run Text="{Binding Id}"/>
                                                <Run Text=": "/>
                                                <Run Text="{Binding Title}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Description}" 
                                                      FontSize="13" 
                                                      TextWrapping="Wrap"
                                                      Margin="0,8,0,0"/>
                                            <Border Background="#E8F5E8" 
                                                   Padding="8,4" 
                                                   CornerRadius="3" 
                                                   Margin="0,8,0,0"
                                                   HorizontalAlignment="Left">
                                                <TextBlock Text="{Binding Category}" 
                                                          FontSize="11" 
                                                          Foreground="#27AE60"
                                                          FontWeight="SemiBold"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Import Button -->
                    <Border Grid.Row="2" Background="#F8F9FA" Padding="15,10">
                        <Button Content="ðŸ“¥ Import All Requirements"
                                Command="{Binding ImportExtractedRequirementsCommand}"
                                Background="#27AE60"
                                Foreground="White"
                                Padding="10,8"
                                BorderThickness="0"
                                FontWeight="SemiBold"
                                HorizontalAlignment="Stretch"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#34495E" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="{Binding StatusMessage}" 
                          Foreground="White" 
                          VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Visibility="{Binding IsSearching, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="ðŸ”„ Processing..." 
                              Foreground="#E74C3C" 
                              VerticalAlignment="Center" 
                              Margin="0,0,10,0"/>
                    <ProgressBar IsIndeterminate="True" 
                                Width="100" 
                                Height="4" 
                                VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>