<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.Requirements.Views.RequirementsSearchAttachmentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <conv:InvertedBoolToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Background="{StaticResource Brush.Background.Surface}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="{StaticResource Brush.Background.Header}" Padding="16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="ðŸ”" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Requirements Search in Attachments" 
                              FontSize="{StaticResource FontSize.H1}" 
                              FontWeight="SemiBold" 
                              Foreground="{StaticResource Brush.Accent.Primary}"
                              VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Search and extract requirements from Jama Connect attachments using AI-powered document parsing" 
                          FontSize="{StaticResource FontSize.Body}" 
                          Foreground="{StaticResource Brush.Text.Secondary}"/>
            </StackPanel>
        </Border>

        <!-- Search Controls -->
        <Border Grid.Row="1" Background="{StaticResource Brush.Background.Surface}" Padding="16,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Attachment Filter Row -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Attachment Filter Dropdown -->
                    <TextBlock Grid.Column="0" 
                              Text="Select:" 
                              VerticalAlignment="Center" 
                              FontWeight="SemiBold" 
                              FontSize="{StaticResource FontSize.Body}"
                              Foreground="{StaticResource Brush.Text.Primary}"
                              Margin="0,0,12,0"/>
                    <Grid Grid.Column="1">
                        <ComboBox ItemsSource="{Binding AvailableAttachments}"
                                 SelectedItem="{Binding SelectedAttachmentFilter}"
                                 VerticalAlignment="Center"
                                 Padding="12,8"
                                 FontSize="{StaticResource FontSize.Body}"
                                 ToolTip="Select a specific attachment or leave blank to see all">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsBackgroundScanningInProgress}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontWeight="SemiBold" MaxWidth="300" TextTrimming="CharacterEllipsis">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="{Binding Name}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Name}" Value="">
                                                            <Setter Property="Text" Value="{Binding FileName}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Name}" Value="{x:Null}">
                                                            <Setter Property="Text" Value="{Binding FileName}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        
                        <!-- Background Scan Progress Overlay -->
                        <Border x:Name="BackgroundProgress"
                               Background="{StaticResource Brush.Background.Header}" 
                               BorderBrush="{StaticResource Brush.Accent.Primary}" 
                               BorderThickness="1"
                               CornerRadius="3"
                               Padding="12,8">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsBackgroundScanningInProgress}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding BackgroundScanProgressText}" 
                                          FontSize="{StaticResource FontSize.Caption}" 
                                          FontWeight="SemiBold"
                                          Foreground="{StaticResource Brush.Accent.Primary}" 
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
                
                <!-- Action Buttons Row -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="ðŸ” Search for Attachments" 
                            Command="{Binding SearchAttachmentsCommand}"
                            Style="{StaticResource ActionButton}"
                            Margin="0,0,12,0" 
                            Padding="12,8"/>
                    <Button Content="ðŸ“„ Scan Selected for Requirements" 
                            Command="{Binding ScanSelectedAttachmentCommand}"
                            IsEnabled="{Binding HasSelectedAttachment}"
                            Style="{StaticResource ActionButton}"
                            Margin="0,0,12,0" 
                            Padding="12,8"/>
                    <Button Content="ðŸ“¥ Import Selected Requirements" 
                            Command="{Binding ImportSelectedRequirementsCommand}"
                            IsEnabled="{Binding HasExtractedRequirements}"
                            Style="{StaticResource ActionButton}"
                            Margin="0" 
                            Padding="12,8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Single Panel: Extracted Requirements -->
            <Border Grid.Column="0" 
                    BorderBrush="{StaticResource Brush.Border.Default}" 
                    BorderThickness="1" 
                    CornerRadius="8"
                    Background="{StaticResource Brush.Background.Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Requirements Header -->
                    <Border Grid.Row="0" 
                            Background="#27AE60" 
                            Padding="16,12"
                            CornerRadius="8,8,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‹" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Extracted Requirements" 
                                      FontWeight="SemiBold" 
                                      Foreground="White" 
                                      FontSize="{StaticResource FontSize.H2}"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Requirements List -->
                    <ScrollViewer Grid.Row="1" 
                                  Background="{StaticResource Brush.Background.Card}" 
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Extracted Requirements List -->
                            <ItemsControl ItemsSource="{Binding ExtractedRequirements}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="16" 
                                                BorderBrush="{StaticResource Brush.Border.Light}" 
                                                BorderThickness="0,0,0,1"
                                                Background="{StaticResource Brush.Background.Card}">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                    <TextBlock Text="REQ-" 
                                                              FontWeight="SemiBold"
                                                              FontSize="{StaticResource FontSize.Body}"
                                                              Foreground="{StaticResource Brush.Accent.Primary}"/>
                                                    <TextBlock Text="{Binding Id}" 
                                                              FontWeight="SemiBold"
                                                              FontSize="{StaticResource FontSize.Body}"
                                                              Foreground="{StaticResource Brush.Accent.Primary}"/>
                                                    <TextBlock Text=": " 
                                                              FontWeight="SemiBold"
                                                              FontSize="{StaticResource FontSize.Body}"
                                                              Foreground="{StaticResource Brush.Text.Primary}"/>
                                                    <TextBlock Text="{Binding Title}" 
                                                              FontWeight="SemiBold"
                                                              FontSize="{StaticResource FontSize.Body}"
                                                              Foreground="{StaticResource Brush.Text.Primary}"
                                                              TextWrapping="Wrap"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Description}" 
                                                          FontSize="{StaticResource FontSize.Caption}" 
                                                          Foreground="{StaticResource Brush.Text.Secondary}"
                                                          TextWrapping="Wrap"
                                                          Margin="0,0,0,8"/>
                                                <Border Background="{StaticResource Brush.Background.Menu}" 
                                                       Padding="8,4" 
                                                       CornerRadius="12" 
                                                       HorizontalAlignment="Left">
                                                    <TextBlock Text="{Binding Category}" 
                                                              FontSize="{StaticResource FontSize.Caption}" 
                                                              Foreground="{StaticResource Brush.Accent.Primary}"
                                                              FontWeight="SemiBold"/>
                                                </Border>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <!-- Empty State -->
                            <Border Padding="32" 
                                    Background="{StaticResource Brush.Background.Card}"
                                    Visibility="{Binding HasExtractedRequirements, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="ðŸ“„" 
                                              FontSize="48" 
                                              HorizontalAlignment="Center" 
                                              Opacity="0.3"
                                              Margin="0,0,0,16"/>
                                    <TextBlock Text="No requirements extracted yet" 
                                              FontSize="{StaticResource FontSize.Body}" 
                                              Foreground="{StaticResource Brush.Text.Secondary}"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,8"/>
                                    <TextBlock Text="Search for attachments and scan selected documents to extract requirements" 
                                              FontSize="{StaticResource FontSize.Caption}" 
                                              Foreground="{StaticResource Brush.Text.Tertiary}"
                                              HorizontalAlignment="Center"
                                              TextAlignment="Center"
                                              TextWrapping="Wrap"
                                              MaxWidth="300"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>