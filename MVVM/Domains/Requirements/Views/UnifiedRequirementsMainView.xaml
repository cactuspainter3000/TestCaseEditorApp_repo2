<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.Requirements.Views.UnifiedRequirementsMainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:TestCaseEditorApp.Converters"
             xmlns:mvvmConverters="clr-namespace:TestCaseEditorApp.MVVM.Converters"
             xmlns:requirements="clr-namespace:TestCaseEditorApp.MVVM.Domains.Requirements.Enums"
             xmlns:views="clr-namespace:TestCaseEditorApp.MVVM.Views"
             xmlns:edc="clr-namespace:EditableDataControl.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:InvertBoolConverter x:Key="InverseBooleanConverter"/>
        <mvvmConverters:RequirementViewModeToVisibilityConverter x:Key="ViewModeToVisibilityConverter"/>
        
        <!-- Chip Style for metadata display -->
        <Style x:Key="MetadataChipStyle" TargetType="Border">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="BorderBrush" Value="#2196F3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
        </Style>

        <!-- Core Chip Style (more prominent) -->
        <Style x:Key="CoreChipStyle" TargetType="Border" BasedOn="{StaticResource MetadataChipStyle}">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="BorderBrush" Value="#0D47A1"/>
        </Style>

        <!-- Tab button style with orange theme matching image -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1,1,1,0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="1,0"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="IsHitTestVisible" Value="True"/>
            <Setter Property="Focusable" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4,4,0,0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#777777"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Details Tab Style -->
        <Style x:Key="DetailsTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedViewMode}" Value="{x:Static requirements:RequirementViewMode.Details}">
                    <Setter Property="Background" Value="#1E1E1E"/>
                    <Setter Property="BorderBrush" Value="#FF8C00"/>
                    <Setter Property="BorderThickness" Value="1,1,1,0"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Foreground" Value="#FF8C00"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Tables Tab Style -->
        <Style x:Key="TablesTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedViewMode}" Value="{x:Static requirements:RequirementViewMode.Tables}">
                    <Setter Property="Background" Value="#1E1E1E"/>
                    <Setter Property="BorderBrush" Value="#FF8C00"/>
                    <Setter Property="BorderThickness" Value="1,1,1,0"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Foreground" Value="#FF8C00"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Analysis Tab Style -->
        <Style x:Key="AnalysisTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedViewMode}" Value="{x:Static requirements:RequirementViewMode.Analysis}">
                    <Setter Property="Background" Value="#1E1E1E"/>
                    <Setter Property="BorderBrush" Value="#FF8C00"/>
                    <Setter Property="BorderThickness" Value="1,1,1,0"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Foreground" Value="#FF8C00"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Requirements Scraper Tab Style -->
        <Style x:Key="RequirementsScraperTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedViewMode}" Value="{x:Static requirements:RequirementViewMode.RequirementsScraper}">
                    <Setter Property="Background" Value="#1E1E1E"/>
                    <Setter Property="BorderBrush" Value="#FF8C00"/>
                    <Setter Property="BorderThickness" Value="1,1,1,0"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Foreground" Value="#FF8C00"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Disabled tab button style -->
        <Style x:Key="DisabledTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="IsEnabled" Value="False"/>
            <Setter Property="Opacity" Value="0.5"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Tab navigation -->
            <RowDefinition Height="*"/>    <!-- Content area -->
            <RowDefinition Height="Auto"/> <!-- Action buttons -->
        </Grid.RowDefinitions>

        <!-- Tab Navigation -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,0" Background="Transparent">
            
            <!-- Details Tab (always available) -->
            <Button Content="Details" 
                    Command="{Binding SelectDetailsCommand}"
                    Style="{StaticResource DetailsTabButtonStyle}"
                    IsHitTestVisible="True"
                    Focusable="True"
                    Cursor="Hand"/>
            
            <!-- Tables Tab (always available) -->
            <Button Content="Tables" 
                    Command="{Binding SelectTablesCommand}"
                    Style="{StaticResource TablesTabButtonStyle}"
                    IsHitTestVisible="True"
                    Focusable="True"
                    Cursor="Hand"/>
            
            <!-- Analysis Tab (always available) -->
            <Button Content="LLM Analysis" 
                    Command="{Binding SelectAnalysisCommand}"
                    Style="{StaticResource AnalysisTabButtonStyle}"
                    IsHitTestVisible="True"
                    Focusable="True"
                    Cursor="Hand"/>
            
            <!-- Requirements Scraper Tab (always available) -->
            <Button Content="Attachment Scraper" 
                    Command="{Binding SelectRequirementsScraperCommand}"
                    Style="{StaticResource RequirementsScraperTabButtonStyle}"
                    IsHitTestVisible="True"
                    Focusable="True"
                    Cursor="Hand"/>
                    
        </StackPanel>

        <!-- Content Area -->
        <Border Grid.Row="1" BorderBrush="#666666" BorderThickness="0,2,0,0" Margin="10,0">
            <Grid Background="Transparent">
                
                <!-- Details View -->
                <ScrollViewer Visibility="{Binding SelectedViewMode, 
                                 Converter={StaticResource ViewModeToVisibilityConverter}, 
                                 ConverterParameter={x:Static requirements:RequirementViewMode.Details}}"
                              VerticalScrollBarVisibility="Auto" Padding="15" Background="Transparent">
                    <StackPanel>
                        <!-- Requirement Content Section -->
                        <Border Background="Transparent" BorderBrush="#5A5A5C" BorderThickness="1" 
                                CornerRadius="4" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Requirement Description" FontWeight="SemiBold" FontSize="14" 
                                           Foreground="White" Margin="0,0,0,10"/>
                                <TextBlock Text="{Binding CurrentRequirement.Description}" 
                                           TextWrapping="Wrap" FontSize="12" Foreground="#E0E0E0" 
                                           LineHeight="18"/>
                            </StackPanel>
                        </Border>

                        <!-- Supplemental Information Section -->
                        <Border Background="Transparent" BorderBrush="#5A5A5C" BorderThickness="1" 
                                CornerRadius="4" Padding="15" Margin="0,0,0,20"
                                Visibility="{Binding HasParagraphs, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="Supplemental Info" FontWeight="SemiBold" FontSize="14" 
                                               Foreground="White" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                    <Button Content="Select All" Command="{Binding SelectAllParagraphsCommand}"
                                            Style="{DynamicResource SmallButtonStyle}" Margin="0,0,5,0"/>
                                    <Button Content="Clear All" Command="{Binding ClearAllParagraphsCommand}"
                                            Style="{DynamicResource SmallButtonStyle}"/>
                                </StackPanel>

                                <ItemsControl ItemsSource="{Binding SelectedParagraphVMs}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#252526" BorderBrush="#404040" BorderThickness="1" 
                                                    CornerRadius="3" Margin="0,2" Padding="8">
                                                <StackPanel>
                                                    <CheckBox IsChecked="{Binding IsSelected}" 
                                                              Content="{Binding DisplayText}" 
                                                              FontSize="11" Foreground="#E0E0E0" Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Paragraph.SupplementalInfo}" 
                                                               FontSize="10" FontStyle="Italic" Foreground="#AAAAAA"
                                                               Visibility="{Binding Paragraph.SupplementalInfo, 
                                                                          Converter={StaticResource BooleanToVisibilityConverter}}"
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <!-- Metadata Grid - Structured Layout Matching Image -->
                        <Border Background="Transparent" BorderBrush="#5A5A5C" BorderThickness="1" 
                                CornerRadius="4" Padding="15">
                            <StackPanel>
                                <!-- Metadata Header -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="Global ID" FontWeight="SemiBold" FontSize="14" Foreground="#FF8C00"/>
                                    <TextBlock Text="Type" FontWeight="SemiBold" FontSize="14" Foreground="#FF8C00" Margin="200,0,0,0"/>
                                    <TextBlock Text="Status" FontWeight="SemiBold" FontSize="14" Foreground="#FF8C00" Margin="200,0,0,0"/>
                                    <TextBlock Text="Version" FontWeight="SemiBold" FontSize="14" Foreground="#FF8C00" Margin="150,0,0,0"/>
                                </StackPanel>

                                <!-- First Row Values -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                    <TextBlock Text="{Binding CurrentRequirement.GlobalId}" FontSize="12" Foreground="White" Width="180"/>
                                    <TextBlock Text="Requirement" FontSize="12" Foreground="White" Width="180" Margin="20,0,0,0"/>
                                    <TextBlock Text="{Binding CurrentRequirement.Status}" FontSize="12" Foreground="White" Width="150" Margin="20,0,0,0"/>
                                    <TextBlock FontSize="12" Foreground="#888888" Text="(not set)" FontStyle="Italic" Margin="20,0,0,0"/>
                                </StackPanel>

                                <!-- Metadata Grid - 3 columns layout -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Column 1 -->
                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,5">
                                        <TextBlock Text="Safety" FontSize="12" Foreground="#FF8C00" FontWeight="SemiBold"/>
                                        <TextBlock Text="(not set)" FontSize="11" Foreground="#888888" FontStyle="Italic"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,5">
                                        <TextBlock Text="FDAL" FontSize="12" Foreground="#FF8C00" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding CurrentRequirement.Fdal}" FontSize="11" Foreground="White"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,5">
                                        <TextBlock Text="Project" FontSize="12" Foreground="#FF8C00" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding CurrentRequirement.Project}" FontSize="11" Foreground="White"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,5">
                                        <TextBlock Text="API ID" FontSize="12" Foreground="#FF8C00" FontWeight="SemiBold"/>
                                        <TextBlock Text="(not set)" FontSize="11" Foreground="#888888" FontStyle="Italic"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,5">
                                        <TextBlock Text="Modified By" FontSize="12" Foreground="#FF8C00" FontWeight="SemiBold"/>
                                        <TextBlock Text="(not set)" FontSize="11" Foreground="#888888" FontStyle="Italic"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="5" Grid.Column="0" Margin="0,5">
                                        <TextBlock Text="Downstream Links" FontSize="12" Foreground="#FF8C00" FontWeight="SemiBold"/>
                                        <TextBlock Text="0" FontSize="11" Foreground="White"/>
                                    </StackPanel>

                                    <!-- Column 2 -->
                                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,5">
                                        <TextBlock Text="Security" FontSize="12" Foreground="#FF8C00" FontWeight="SemiBold"/>
                                        <TextBlock Text="(not set)" FontSize="11" Foreground="#888888" FontStyle="Italic"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,5">
                                        <TextBlock Text="Derived" FontSize="12" Foreground="#FF8C00" FontWeight="SemiBold"/>
                                        <TextBlock Text="(not set)" FontSize="11" Foreground="#888888" FontStyle="Italic"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,5">
                                        <TextBlock Text="Set" FontSize="12" Foreground="#FF8C00" FontWeight="SemiBold"/>
                                        <TextBlock Text="(not set)" FontSize="11" Foreground="#888888" FontStyle="Italic"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,5">
                                        <TextBlock Text="Change Driver" FontSize="12" Foreground="#FF8C00" FontWeight="SemiBold"/>
                                        <TextBlock Text="(not set)" FontSize="11" Foreground="#888888" FontStyle="Italic"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="4" Grid.Column="1" Margin="0,5">
                                        <TextBlock Text="Locked By" FontSize="12" Foreground="#FF8C00" FontWeight="SemiBold"/>
                                        <TextBlock Text="(not set)" FontSize="11" Foreground="#888888" FontStyle="Italic"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="5" Grid.Column="1" Margin="0,5">
                                        <TextBlock Text="Comments" FontSize="12" Foreground="#FF8C00" FontWeight="SemiBold"/>
                                        <TextBlock Text="0" FontSize="11" Foreground="White"/>
                                    </StackPanel>

                                    <!-- Column 3 -->
                                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,5">
                                        <TextBlock Text="Key Characteristics" FontSize="12" Foreground="#FF8C00" FontWeight="SemiBold"/>
                                        <TextBlock Text="(not set)" FontSize="11" Foreground="#888888" FontStyle="Italic"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,5">
                                        <TextBlock Text="Export Controlled" FontSize="12" Foreground="#FF8C00" FontWeight="SemiBold"/>
                                        <TextBlock Text="(not set)" FontSize="11" Foreground="#888888" FontStyle="Italic"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,5">
                                        <TextBlock Text="Heading" FontSize="12" Foreground="#FF8C00" FontWeight="SemiBold"/>
                                        <TextBlock Text="(not set)" FontSize="11" Foreground="#888888" FontStyle="Italic"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="3" Grid.Column="2" Margin="0,5">
                                        <TextBlock Text="Created By" FontSize="12" Foreground="#FF8C00" FontWeight="SemiBold"/>
                                        <TextBlock Text="(not set)" FontSize="11" Foreground="#888888" FontStyle="Italic"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="4" Grid.Column="2" Margin="0,5">
                                        <TextBlock Text="Upstream Links" FontSize="12" Foreground="#FF8C00" FontWeight="SemiBold"/>
                                        <TextBlock Text="0" FontSize="11" Foreground="White"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="5" Grid.Column="2" Margin="0,5">
                                        <TextBlock Text="Attachments" FontSize="12" Foreground="#FF8C00" FontWeight="SemiBold"/>
                                        <TextBlock Text="0" FontSize="11" Foreground="White"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Date Information Footer -->
                                <Border Background="Transparent" BorderBrush="#666666" BorderThickness="0,1,0,0" Margin="0,15,0,0" Padding="0,10,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="â— Created : " FontSize="11" Foreground="#CCCCCC"/>
                                        <TextBlock Text="{Binding CurrentRequirement.CreatedDate, StringFormat='{}{0:M/d/yyyy h:mm tt}'}" 
                                                   FontSize="11" Foreground="#CCCCCC" Margin="0,0,20,0"/>
                                        <TextBlock Text="â— Modified : " FontSize="11" Foreground="#CCCCCC"/>
                                        <TextBlock Text="{Binding CurrentRequirement.ModifiedDate, StringFormat='{}{0:M/d/yyyy h:mm tt}'}" 
                                                   FontSize="11" Foreground="#CCCCCC"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Tables View -->
                <ScrollViewer Visibility="{Binding SelectedViewMode, 
                                 Converter={StaticResource ViewModeToVisibilityConverter}, 
                                 ConverterParameter={x:Static requirements:RequirementViewMode.Tables}}"
                              VerticalScrollBarVisibility="Auto" Padding="15" Background="Transparent">
                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding SelectedTableVMs}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" BorderBrush="#5A5A5C" BorderThickness="1" 
                                            CornerRadius="4" Margin="0,5" Padding="10">
                                        <StackPanel>
                                            <!-- Header section with edit button -->
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Hidden selection checkbox -->
                                                <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}" 
                                                          Visibility="Collapsed"/>
                                                
                                                <!-- Enter/Exit Edit button -->
                                                <Button Grid.Column="1" Padding="12,4" FontSize="11"
                                                        ToolTip="{Binding DebugInfo}"
                                                        Background="Transparent"
                                                        Foreground="{StaticResource Brush.Accent.Primary}"
                                                        BorderThickness="0">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Content" Value="Enter Editing Mode"/>
                                                            <Setter Property="Command" Value="{Binding EditTableCommand}"/>
                                                            <Setter Property="Cursor" Value="Hand"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                                                    <Setter Property="Content" Value="Exit Editing Mode"/>
                                                                    <Setter Property="Command" Value="{Binding ExitEditingModeCommand}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </Grid>
                                            
                                            <!-- Table content -->
                                            <edc:EditableDataControl EditorViewModel="{Binding EditorViewModel}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.Style>
                                <Style TargetType="ItemsControl">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedTableVMs.Count}" Value="0">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate>
                                                        <Border Background="#3E3E42" BorderBrush="#5A5A5C" BorderThickness="1" 
                                                                CornerRadius="4" Padding="15" Margin="10">
                                                            <StackPanel HorizontalAlignment="Center">
                                                                <TextBlock Text="ðŸ“Š" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                                                <TextBlock Text="No Tables Found" FontSize="14" FontWeight="SemiBold" 
                                                                           Foreground="White" HorizontalAlignment="Center"/>
                                                                <TextBlock Text="No tables were found in this requirement or its associated attachments." 
                                                                           FontSize="11" Foreground="#CCCCCC" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,5,0,0"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ItemsControl.Style>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

                <!-- Analysis View -->
                <ScrollViewer Visibility="{Binding SelectedViewMode, 
                                 Converter={StaticResource ViewModeToVisibilityConverter}, 
                                 ConverterParameter={x:Static requirements:RequirementViewMode.Analysis}}"
                              VerticalScrollBarVisibility="Auto" Padding="15" Background="Transparent">
                    <StackPanel>
                        <!-- Requirement Analysis ViewModel Integration -->
                        <Border Background="Transparent" BorderBrush="#5A5A5C" BorderThickness="1" 
                                CornerRadius="4" Padding="0" Margin="0"
                                Visibility="{Binding RequirementAnalysisVM, Converter={StaticResource NullToVisibilityConverter}}">
                            <ContentPresenter Content="{Binding RequirementAnalysisVM}"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Requirements Scraper View -->
                <Border Visibility="{Binding SelectedViewMode, 
                           Converter={StaticResource ViewModeToVisibilityConverter}, 
                           ConverterParameter={x:Static requirements:RequirementViewMode.RequirementsScraper}}"
                        Background="Transparent" Padding="0">
                    <ContentPresenter Content="{Binding RequirementsSearchAttachmentsViewModel}"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>