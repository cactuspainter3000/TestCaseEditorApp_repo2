<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.Requirements.Views.RequirementsHeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="1200">
    
    <!-- Requirements Domain Header View -->
    <!-- Displays contextual information, statistics, and quick status -->
    
    <Border Background="White" BorderBrush="#E1E8ED" BorderThickness="0,0,0,1">
        <Grid Margin="20,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title Row -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Title and Context -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Path Data="M4,6H20V8H4V6M4,11H20V13H4V11M4,16H20V18H4V16Z" 
                          Fill="#3498DB" Width="20" Height="20" Margin="0,0,8,0"/>
                    <TextBlock Text="Requirements Management" FontSize="18" FontWeight="SemiBold" 
                               Foreground="#2C3E50" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Import Source -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Source: " FontSize="12" Foreground="#7F8C8D" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ImportSource}" FontSize="12" FontWeight="Medium" 
                               Foreground="#34495E" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
            
            <!-- Statistics Row -->
            <Grid Grid.Row="1" Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Total Requirements -->
                <Border Grid.Column="0" Background="#3498DB" CornerRadius="6" Padding="12,6" Margin="0,0,15,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding TotalRequirements}" FontSize="16" FontWeight="Bold" 
                                   Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Text="Total" FontSize="11" Foreground="White" 
                                   VerticalAlignment="Center" Margin="6,0,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Analyzed Requirements -->
                <Border Grid.Column="1" Background="#27AE60" CornerRadius="6" Padding="12,6" Margin="0,0,15,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding AnalyzedRequirements}" FontSize="16" FontWeight="Bold" 
                                   Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Text="Analyzed" FontSize="11" Foreground="White" 
                                   VerticalAlignment="Center" Margin="6,0,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Pending Requirements -->
                <Border Grid.Column="2" Background="#E67E22" CornerRadius="6" Padding="12,6" Margin="0,0,15,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding PendingRequirements}" FontSize="16" FontWeight="Bold" 
                                   Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Text="Pending" FontSize="11" Foreground="White" 
                                   VerticalAlignment="Center" Margin="6,0,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Progress Bar -->
                <Border Grid.Column="3" Background="#ECF0F1" CornerRadius="6" Padding="12,6" Margin="0,0,15,0">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Analysis Progress" FontSize="11" 
                                       Foreground="#7F8C8D" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="{Binding AnalysisProgress}" FontSize="12" 
                                       FontWeight="SemiBold" Foreground="#2C3E50" VerticalAlignment="Center"/>
                        </Grid>
                        
                        <!-- Progress Bar Visual -->
                        <Border Background="#D5DBDB" Height="6" CornerRadius="3" Margin="0,4,0,0">
                            <Border Background="#27AE60" CornerRadius="3" HorizontalAlignment="Left"
                                    Width="{Binding AnalyzedRequirements, 
                                           Converter={StaticResource ProgressToWidthConverter}, 
                                           ConverterParameter={Binding TotalRequirements}}"/>
                        </Border>
                    </StackPanel>
                </Border>
                
                <!-- Status Indicators -->
                <StackPanel Grid.Column="4" Orientation="Horizontal">
                    <!-- Has Requirements Indicator -->
                    <Border Background="{Binding HasRequirements, 
                                        Converter={StaticResource BoolToStatusColorConverter}}" 
                            CornerRadius="10" Width="12" Height="12" Margin="0,0,8,0">
                        <Border.ToolTip>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} requirements loaded">
                                        <Binding Path="TotalRequirements"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </Border.ToolTip>
                    </Border>
                    
                    <!-- Analysis Status Text -->
                    <TextBlock Text="{Binding RequirementsStatus}" FontSize="11" 
                               Foreground="#7F8C8D" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding AnalysisStatus}" FontSize="11" 
                               Foreground="#7F8C8D" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
    
    <UserControl.Resources>
        <!-- Basic styling for the header -->
        <Style TargetType="Border">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F9FA"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Note: Converters would need to be implemented for full functionality -->
        <!-- This provides the basic structure and bindings -->
    </UserControl.Resources>
</UserControl>