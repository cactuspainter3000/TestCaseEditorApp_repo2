<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.Requirements.Views.RequirementsHeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             xmlns:controls="clr-namespace:TestCaseEditorApp.MVVM.Controls.DataDrivenMenu"
             mc:Ignorable="d"
             d:DesignHeight="75" d:DesignWidth="800">
    
    <UserControl.Resources>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <conv:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <conv:InvertedBoolToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <conv:StatusTextWithOrangePipesConverter x:Key="StatusTextWithOrangePipesConverter" />
        <controls:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter" />
    </UserControl.Resources>

    <!--
      Compact header:
      - "File" uses the app theme PillActionButtonStyle
      - Description now spans columns 1–2 (center + right) while reserving safe space for the right stack
      - Full description available on hover via ToolTip (ShowDuration increased for readability)
      - Background left transparent to match your request
    -->

    <Grid Margin="3" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>  <!-- description gets available space -->
            <ColumnDefinition Width="Auto"/>  <!-- parsing status takes needed space -->
        </Grid.ColumnDefinitions>

        <!-- DESCRIPTION: Left side shows requirement description when no operation is active -->
        <Border Grid.Column="0"
                Style="{StaticResource HeaderDescriptionBorderStyle}"
                Padding="8,4"
                Margin="0,3,8,0" 
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                MaxHeight="60"
                Visibility="{Binding IsAnyOperationActive, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Disabled"
                         PanningMode="VerticalOnly">
                <ScrollViewer.Resources>
                    <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
                </ScrollViewer.Resources>
                <TextBlock Text="{Binding RequirementDescription}"
                           Style="{StaticResource DescriptionText}"
                           ToolTip="{Binding RequirementDescription}"
                           ToolTipService.ShowDuration="60000" />
            </ScrollViewer>
        </Border>

        <!-- OPERATION STATUS: Takes full width when any operation is active -->
        <Grid Grid.Column="0" 
              Grid.ColumnSpan="2"
              Margin="3"
              Visibility="{Binding IsAnyOperationActive, Converter={StaticResource BooleanToVisibilityConverter}}">
            
            <!-- Operation Status Content -->
            <Border Background="{StaticResource Brush.Background.Header}"
                    BorderThickness="0"
                    CornerRadius="4"
                    Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Operation Status Text -->
                    <ContentPresenter Grid.Column="0"
                                    Content="{Binding CurrentOperationStatus, Converter={StaticResource StatusTextWithOrangePipesConverter}}"
                                    VerticalAlignment="Center"/>
                    
                    <!-- Processing Counter and Timer -->
                    <StackPanel Grid.Column="1" 
                               Orientation="Horizontal" 
                               VerticalAlignment="Center"
                               Margin="12,0,0,0">
                        
                        <!-- Cancel Button (positioned to the left of the timer) -->
                        <Button Content="Cancel" 
                                Command="{Binding CancelParseCommand}"
                                IsEnabled="{Binding CancelParseCommand.CanExecute}"
                                Style="{StaticResource ActionButton}"
                                Foreground="DarkRed"
                                Margin="0,0,12,0" 
                                Padding="8,4"
                                FontSize="11"
                                VerticalAlignment="Center"
                                Visibility="{Binding IsAnyOperationActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Button.ToolTip>
                                <ToolTip Content="Cancel the current parsing operation"/>
                            </Button.ToolTip>
                        </Button>
                        
                        <!-- Parsing Timer -->
                        <TextBlock Text="{Binding ParsingTimerDisplay}"
                                  FontFamily="Consolas"
                                  FontWeight="Bold"
                                  FontSize="13"
                                  Foreground="DarkOrange"
                                  VerticalAlignment="Center"
                                  Margin="0,0,12,0"
                                  Visibility="{Binding IsParsingTimerVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        
                        <!-- Processing Counter -->
                        <TextBlock Text="{Binding CurrentOperationCount}"
                                  FontWeight="Bold"
                                  FontSize="{StaticResource FontSize.H3}"
                                  Foreground="{StaticResource Brush.State.Success}"
                                  VerticalAlignment="Center"
                                  Visibility="{Binding ShouldShowCounter, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>