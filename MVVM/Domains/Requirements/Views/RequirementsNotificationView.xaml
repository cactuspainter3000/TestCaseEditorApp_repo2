<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.Requirements.Views.RequirementsNotificationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             mc:Ignorable="d"
             d:DesignHeight="32" d:DesignWidth="800">

    <UserControl.Resources>
        <conv:EmptyStringToCollapsedConverter x:Key="EmptyStringToCollapsedConverter" />
    </UserControl.Resources>

    <!-- Test Case Generator notification area layout -->
    <Border Background="#222222" 
            Padding="10,4"
            Height="28">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- AnythingLLM Status - Left Side -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" 
                            Fill="{Binding AnythingLlmStatusColor}" 
                            VerticalAlignment="Center" 
                            Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding AnythingLlmStatusText}" 
                              FontSize="11" 
                              Foreground="#BBBBBB" 
                              VerticalAlignment="Center"
                              TextTrimming="CharacterEllipsis"/>
                </StackPanel>
                
                <!-- Center Content - Expanded Text -->
                <TextBlock Grid.Column="1" 
                          Text="{Binding RequirementsProgressText}"
                          FontSize="11" 
                          Foreground="#BBBBBB" 
                          VerticalAlignment="Center"
                          TextTrimming="CharacterEllipsis"
                          TextWrapping="NoWrap"
                          Margin="10,0,10,0"
                          HorizontalAlignment="Stretch"/>
                
                <!-- Current Requirement Verification Method -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           Margin="0,0,8,0"
                           Visibility="{Binding CurrentRequirementVerificationMethod, Converter={StaticResource EmptyStringToCollapsedConverter}}">
                    <TextBlock Text="Method:" 
                              Width="50"
                              FontSize="11" 
                              Foreground="#999999" 
                              VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentRequirementVerificationMethod}" 
                              FontSize="11" 
                              Foreground="#DDDDDD" 
                              VerticalAlignment="Center"
                              FontWeight="SemiBold"/>
                    <TextBlock Text=" | " 
                              FontSize="11" 
                              Foreground="#666666" 
                              VerticalAlignment="Center"
                              Margin="8,0,0,0"/>
                </StackPanel>
                
                <!-- Right Side Status -->
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <!-- Space for future status indicators -->
                </StackPanel>
            </Grid>
        </Border>
</UserControl>