<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.Requirements.Views.JamaRequirementsMainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             xmlns:req="clr-namespace:TestCaseEditorApp.MVVM.Domains.Requirements.Views"
             xmlns:shared="clr-namespace:TestCaseEditorApp.MVVM.Domains.Shared.Views"
             mc:Ignorable="d"
             MinHeight="400" MinWidth="800"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
             d:DesignHeight="600" d:DesignWidth="1200"
             Background="{StaticResource Brush.Background.Menu}">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <conv:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisibilityConverter" />
        <conv:InvertedBoolToVisibilityConverter x:Key="InvertedBoolToVisibilityConverter" />
        <conv:StringToParagraphsConverter x:Key="StringToParagraphsConverter" />
        <conv:RequirementContentConverter x:Key="RequirementContentConverter" />
        
        <!-- DataTemplate for paragraph content -->
        <DataTemplate x:Key="ParagraphTemplate">
            <TextBlock Text="{Binding}" Style="{StaticResource ParagraphStyle}" />
        </DataTemplate>
        <Style x:Key="RichContentStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="LineHeight" Value="20" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="0,8,0,8" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsAnalyzing}" Value="True">
                    <Setter Property="Opacity" Value="0.6" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Brush.Accent.Primary}" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,16,0,8" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsAnalyzing}" Value="True">
                    <Setter Property="Opacity" Value="0.6" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="MetadataValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Brush.Text.Secondary}" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="0,4" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsAnalyzing}" Value="True">
                    <Setter Property="Opacity" Value="0.6" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ParagraphStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="LineHeight" Value="20" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="0,0,0,12" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsAnalyzing}" Value="True">
                    <Setter Property="Opacity" Value="0.6" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- toolbar -->
            <RowDefinition Height="*"/>    <!-- main content -->
        </Grid.RowDefinitions>

        <!-- Toolbar: Content tabs + action buttons -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="8,8,8,4">
            <!-- Left: Content view tabs -->
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                
                <!-- Requirement Details tab -->
                <ToggleButton Style="{StaticResource ActionToggleButtonSelected}"
                              IsChecked="{Binding IsRichContentSelected, Mode=TwoWay}"
                              ToolTip="Full requirement description with rich formatting">
                    <TextBlock Text="Details" VerticalAlignment="Center" Margin="12,0" 
                               Foreground="{StaticResource Brush.Text.Secondary}"/>
                </ToggleButton>

                <!-- Metadata tab -->
                <ToggleButton Style="{StaticResource ActionToggleButtonSelected}"
                              Margin="8,0,0,0"
                              IsChecked="{Binding IsMetadataSelected, Mode=TwoWay}"
                              ToolTip="Requirement metadata and field information">
                    <TextBlock Text="Metadata" VerticalAlignment="Center" Margin="12,0" 
                               Foreground="{StaticResource Brush.Text.Secondary}"/>
                </ToggleButton>
                
                <!-- Attachment Scrapper tab -->
                <ToggleButton Style="{StaticResource ActionToggleButtonSelected}"
                              Margin="8,0,0,0"
                              IsChecked="{Binding IsAttachmentScrapperSelected, Mode=OneWay}"
                              Command="{Binding SelectAttachmentScrapperCommand}"
                              ToolTip="Search and scrape requirements from attachment files">
                    <TextBlock Text="Attachment Scrapper" VerticalAlignment="Center" Margin="12,0" 
                               Foreground="{StaticResource Brush.Text.Secondary}"/>
                </ToggleButton>
            </StackPanel>

            <!-- Right: Action buttons -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                
                <!-- Analysis timer (counter next to Run Analysis button) -->
                <TextBlock Text="{Binding AnalysisElapsedTime}" 
                           FontSize="12" 
                           Foreground="#888888" 
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"
                           Visibility="{Binding AnalysisElapsedTime, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"/>
                
                <!-- Run Analysis button with tracer -->
                <Grid>
                    <Button Command="{Binding QuickAnalyzeCommand}"
                            ToolTip="Run quality analysis on current requirement"
                            Style="{StaticResource PillActionButtonStyle}"
                            Visibility="{Binding HasCurrentRequirement, Converter={StaticResource BoolToVisibilityConverter}}"
                            Loaded="RunAnalysisButton_Loaded">
                        <Button.Content>
                            <TextBlock Text="{Binding IsAnalyzing, Converter={StaticResource BooleanToTextConverter}, ConverterParameter='Running Analysis|Run Analysis'}" />
                        </Button.Content>
                    </Button>
                    
                    <!-- Animated tracer border overlay (appears only during analysis) -->
                    <Border x:Name="AnalysisTracerBorder"
                            Background="Transparent"
                            BorderThickness="2"
                            CornerRadius="{StaticResource Radius.SM}"
                            Margin="0"
                            IsHitTestVisible="False"
                            Visibility="{Binding IsAnalyzing, Converter={StaticResource BoolToVisibilityConverter}}">
                    </Border>
                </Grid>

            </StackPanel>
        </DockPanel>

        <!-- Main content area with side-by-side layout -->
        <Grid Grid.Row="1" Margin="8,4,8,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>      <!-- Main content takes full width -->
            </Grid.ColumnDefinitions>

            <!-- Main content display -->
            <Border Grid.Column="0" Background="Transparent" 
                    CornerRadius="6" Padding="16" Margin="0,0,4,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
                    </ScrollViewer.Resources>
                    
                    <ContentControl Content="{Binding}">
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Setter Property="ContentTemplate">
                                    <Setter.Value>
                                        <!-- Default: Rich Content View -->
                                        <DataTemplate>
                                            <StackPanel>
                                                <!-- Rich content display with inline tables (Name/ID shown in header and navigation) -->
                                                <ItemsControl ItemsSource="{Binding CurrentRequirement, Converter={StaticResource RequirementContentConverter}}"
                                                             Visibility="{Binding HasCurrentRequirement, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <ContentPresenter Content="{Binding}" />
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                
                                                <!-- Key characteristics -->
                                                <TextBlock Text="Key Characteristics:" Style="{StaticResource SectionHeaderStyle}" 
                                                           Visibility="{Binding CurrentRequirement.KeyCharacteristics, Converter={StaticResource StringNotEmptyToVisibilityConverter}}" />
                                                <!-- Key characteristics with paragraph formatting -->
                                                <ItemsControl ItemsSource="{Binding CurrentRequirement.KeyCharacteristics, Converter={StaticResource StringToParagraphsConverter}}"
                                                             Visibility="{Binding CurrentRequirement.KeyCharacteristics, Converter={StaticResource StringNotEmptyToVisibilityConverter}}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding}" Style="{StaticResource ParagraphStyle}" />
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                
                                                <!-- Rationale (if available from Jama) -->
                                                <TextBlock Text="Rationale:" Style="{StaticResource SectionHeaderStyle}" 
                                                           Visibility="{Binding CurrentRequirement.Rationale, Converter={StaticResource StringNotEmptyToVisibilityConverter}}" />
                                                <!-- Rationale with paragraph formatting -->
                                                <ItemsControl ItemsSource="{Binding CurrentRequirement.Rationale, Converter={StaticResource StringToParagraphsConverter}}"
                                                             Visibility="{Binding CurrentRequirement.Rationale, Converter={StaticResource StringNotEmptyToVisibilityConverter}}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding}" Style="{StaticResource ParagraphStyle}" />
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                
                                                <!-- Analysis Results Section -->
                                                <Border Margin="0,20,0,0"
                                                        Visibility="{Binding HasAnalysis, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <StackPanel>
                                                        <!-- Include the full analysis control which has its own header -->
                                                        <req:Requirements_AnalysisControl DataContext="{Binding RequirementAnalysisVM}" />
                                                    </StackPanel>
                                                </Border>
                                                           
                                                <!-- No requirement selected state -->
                                                <StackPanel Visibility="{Binding HasCurrentRequirement, Converter={StaticResource InvertedBoolToVisibilityConverter}}"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Margin="0,40">
                                                    <TextBlock Text="No requirement selected" 
                                                               Style="{StaticResource SectionHeaderStyle}"
                                                               HorizontalAlignment="Center"
                                                               Foreground="{StaticResource Brush.Text.Secondary}" />
                                                    <TextBlock Text="Select a requirement from the navigation to view its details" 
                                                               Style="{StaticResource RichContentStyle}"
                                                               HorizontalAlignment="Center"
                                                               Foreground="{StaticResource Brush.Text.Secondary}" />
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                                
                                
                                <!-- Metadata View Template -->
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMetadataSelected}" Value="True">
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <StackPanel>
                                                        <TextBlock Text="Requirement Metadata" Style="{StaticResource SectionHeaderStyle}" />
                                                        
                                                        <!-- Core metadata -->
                                                        <Grid Margin="0,8">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="120"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            
                                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" FontWeight="Medium" />
                                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentRequirement.Status}" Style="{StaticResource MetadataValueStyle}" />
                                                            
                                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Type:" FontWeight="Medium" />
                                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentRequirement.RequirementType}" Style="{StaticResource MetadataValueStyle}" />
                                                            
                                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Priority:" FontWeight="Medium" />
                                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentRequirement.Priority}" Style="{StaticResource MetadataValueStyle}" />
                                                            
                                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Verification:" FontWeight="Medium" />
                                                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentRequirement.VerificationMethodText}" Style="{StaticResource MetadataValueStyle}" />
                                                            
                                                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Validation:" FontWeight="Medium" />
                                                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CurrentRequirement.ValidationMethodText}" Style="{StaticResource MetadataValueStyle}" />
                                                            
                                                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Created By:" FontWeight="Medium" />
                                                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding CurrentRequirement.CreatedBy}" Style="{StaticResource MetadataValueStyle}" />
                                                            
                                                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Global ID:" FontWeight="Medium" />
                                                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding CurrentRequirement.GlobalId}" Style="{StaticResource MetadataValueStyle}" />
                                                        </Grid>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    
                                    <!-- Requirements Search in Attachments: show attachment search view -->
                                    <DataTrigger Binding="{Binding SelectedSupportView}" Value="RequirementsSearchAttachments">
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <shared:DocumentScrapperView />
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    
                                    <!-- Attachment Scrapper tab content -->
                                    <DataTrigger Binding="{Binding SelectedSupportView}" Value="AttachmentScrapper">
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <shared:DocumentScrapperView />
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>
                </ScrollViewer>
            </Border>

            <!-- Splitter -->
        </Grid>
    </Grid>
</UserControl>