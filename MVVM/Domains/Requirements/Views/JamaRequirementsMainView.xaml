<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.Requirements.Views.JamaRequirementsMainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             xmlns:req="clr-namespace:TestCaseEditorApp.MVVM.Domains.Requirements.Views"
             mc:Ignorable="d"
             MinHeight="400" MinWidth="800"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
             d:DesignHeight="600" d:DesignWidth="1200"
             Background="{StaticResource Brush.Background.Menu}">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <conv:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisibilityConverter" />
        <conv:InvertedBoolToVisibilityConverter x:Key="InvertedBoolToVisibilityConverter" />
        <Style x:Key="RichContentStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="LineHeight" Value="20" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="0,8,0,8" />
        </Style>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Brush.Accent.Primary}" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,16,0,8" />
        </Style>
        <Style x:Key="MetadataValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Brush.Text.Secondary}" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="0,4" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- toolbar -->
            <RowDefinition Height="*"/>    <!-- main content -->
        </Grid.RowDefinitions>

        <!-- Toolbar: Content tabs + action buttons -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="8,8,8,4">
            <!-- Left: Content view tabs -->
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                
                <!-- Rich Content tab -->
                <ToggleButton Style="{StaticResource ActionToggleButtonSelected}"
                              IsChecked="{Binding IsRichContentSelected, Mode=TwoWay}"
                              ToolTip="Full requirement description with rich formatting">
                    <TextBlock Text="Rich Content" VerticalAlignment="Center" Margin="12,0" 
                               Foreground="{StaticResource Brush.Accent.Primary}"/>
                </ToggleButton>

                <!-- Analysis tab -->
                <ToggleButton Style="{StaticResource ActionToggleButtonSelected}"
                              Margin="8,0,0,0"
                              IsChecked="{Binding IsAnalysisSelected, Mode=TwoWay}"
                              ToolTip="Requirement analysis and quality assessment">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Analysis" VerticalAlignment="Center" Margin="6,0" 
                                   Foreground="{StaticResource Brush.Accent.Primary}"/>
                        <!-- Analysis status indicator -->
                        <Border Grid.Column="1" Style="{StaticResource BadgeStyle}"
                                Visibility="{Binding HasAnalysis, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="âœ“" Foreground="White" FontSize="10"/>
                        </Border>
                    </Grid>
                </ToggleButton>

                <!-- Tables tab -->
                <ToggleButton Style="{StaticResource ActionToggleButtonSelected}"
                              Margin="8,0,0,0"
                              IsChecked="{Binding IsTablesSelected, Mode=TwoWay}"
                              ToolTip="{Binding TableCount, StringFormat={}{0} tables found}"
                              Visibility="{Binding HasTables, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Tables" VerticalAlignment="Center" Margin="6,0" 
                                   Foreground="{StaticResource Brush.Accent.Primary}"/>
                        <Border Grid.Column="1" Style="{StaticResource BadgeStyle}">
                            <TextBlock Text="{Binding TableCount}" Foreground="White" FontSize="11"/>
                        </Border>
                    </Grid>
                </ToggleButton>

                <!-- Metadata tab -->
                <ToggleButton Style="{StaticResource ActionToggleButtonSelected}"
                              Margin="8,0,0,0"
                              IsChecked="{Binding IsMetadataSelected, Mode=TwoWay}"
                              ToolTip="Requirement metadata and field information">
                    <TextBlock Text="Metadata" VerticalAlignment="Center" Margin="12,0" 
                               Foreground="{StaticResource Brush.Accent.Primary}"/>
                </ToggleButton>
            </StackPanel>

            <!-- Right: Action buttons -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                
                <!-- Quick Analyze button -->
                <Button Content="Quick Analyze"
                        Command="{Binding QuickAnalyzeCommand}"
                        Margin="0,0,8,0"
                        ToolTip="Run quick quality analysis on current requirement"
                        Style="{StaticResource PillActionButtonStyle}"
                        Visibility="{Binding HasCurrentRequirement, Converter={StaticResource BoolToVisibilityConverter}}" />

                <!-- Generate Tests button -->
                <Button Content="Generate Tests"
                        Command="{Binding GenerateTestsCommand}"
                        ToolTip="Generate test cases for this requirement"
                        Style="{StaticResource PillActionButtonStyle}"
                        Visibility="{Binding CanGenerateTests, Converter={StaticResource BoolToVisibilityConverter}}"
                        Background="{StaticResource Brush.Accent.Primary}"
                        Foreground="White" />
            </StackPanel>
        </DockPanel>

        <!-- Main content area with side-by-side layout -->
        <Grid Grid.Row="1" Margin="8,4,8,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>      <!-- Main content -->
                <ColumnDefinition Width="8"/>       <!-- Splitter -->
                <ColumnDefinition Width="1*"/>      <!-- Analysis panel -->
            </Grid.ColumnDefinitions>

            <!-- Main content display -->
            <Border Grid.Column="0" Background="{StaticResource Brush.Background.Card}" 
                    CornerRadius="6" Padding="16" Margin="0,0,4,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
                    </ScrollViewer.Resources>
                    
                    <ContentControl Content="{Binding}">
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Setter Property="ContentTemplate">
                                    <Setter.Value>
                                        <!-- Default: Rich Content View -->
                                        <DataTemplate>
                                            <StackPanel>
                                                <!-- Requirement header -->
                                                <StackPanel Visibility="{Binding HasCurrentRequirement, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding CurrentRequirement.Item}" 
                                                               Style="{StaticResource SectionHeaderStyle}" 
                                                               FontSize="18" 
                                                               Foreground="{StaticResource Brush.Accent.Primary}"
                                                               Margin="0,0,0,4" />
                                                    <TextBlock Text="{Binding CurrentRequirement.Name}" 
                                                               Style="{StaticResource SectionHeaderStyle}" 
                                                               FontSize="16" 
                                                               FontWeight="Medium" 
                                                               Margin="0,0,0,16" />
                                                </StackPanel>
                                                
                                                <!-- Rich description with HTML rendering -->
                                                <TextBlock Text="Description:" Style="{StaticResource SectionHeaderStyle}" 
                                                           Visibility="{Binding CurrentRequirement.Description, Converter={StaticResource StringNotEmptyToVisibilityConverter}}" />
                                                <!-- TODO: Replace with HTML rendering control for rich content -->
                                                <TextBlock Text="{Binding CurrentRequirement.Description}" 
                                                           Style="{StaticResource RichContentStyle}"
                                                           Foreground="{StaticResource Brush.Text.Primary}" />
                                                
                                                <!-- Key characteristics -->
                                                <TextBlock Text="Key Characteristics:" Style="{StaticResource SectionHeaderStyle}" 
                                                           Visibility="{Binding CurrentRequirement.KeyCharacteristics, Converter={StaticResource StringNotEmptyToVisibilityConverter}}" />
                                                <TextBlock Text="{Binding CurrentRequirement.KeyCharacteristics}" 
                                                           Style="{StaticResource RichContentStyle}"
                                                           Foreground="{StaticResource Brush.Text.Primary}" />
                                                
                                                <!-- Rationale (if available from Jama) -->
                                                <TextBlock Text="Rationale:" Style="{StaticResource SectionHeaderStyle}" 
                                                           Visibility="{Binding CurrentRequirement.Rationale, Converter={StaticResource StringNotEmptyToVisibilityConverter}}" />
                                                <TextBlock Text="{Binding CurrentRequirement.Rationale}" 
                                                           Style="{StaticResource RichContentStyle}" />
                                                           
                                                <!-- No requirement selected state -->
                                                <StackPanel Visibility="{Binding HasCurrentRequirement, Converter={StaticResource InvertedBoolToVisibilityConverter}}"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Margin="0,40">
                                                    <TextBlock Text="No requirement selected" 
                                                               Style="{StaticResource SectionHeaderStyle}"
                                                               HorizontalAlignment="Center"
                                                               Foreground="{StaticResource Brush.Text.Secondary}" />
                                                    <TextBlock Text="Select a requirement from the navigation to view its details" 
                                                               Style="{StaticResource RichContentStyle}"
                                                               HorizontalAlignment="Center"
                                                               Foreground="{StaticResource Brush.Text.Secondary}" />
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                                
                                <!-- Analysis View Template -->
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAnalysisSelected}" Value="True">
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <!-- Embed the existing analysis control -->
                                                    <req:Requirements_AnalysisControl />
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    
                                    <!-- Tables View Template -->
                                    <DataTrigger Binding="{Binding IsTablesSelected}" Value="True">
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <!-- Embed the existing tables control -->
                                                    <req:Requirements_TablesControl />
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    
                                    <!-- Metadata View Template -->
                                    <DataTrigger Binding="{Binding IsMetadataSelected}" Value="True">
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <StackPanel>
                                                        <TextBlock Text="Requirement Metadata" Style="{StaticResource SectionHeaderStyle}" />
                                                        
                                                        <!-- Core metadata -->
                                                        <Grid Margin="0,8">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="120"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            
                                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" FontWeight="Medium" />
                                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentRequirement.Status}" Style="{StaticResource MetadataValueStyle}" />
                                                            
                                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Type:" FontWeight="Medium" />
                                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentRequirement.RequirementType}" Style="{StaticResource MetadataValueStyle}" />
                                                            
                                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Priority:" FontWeight="Medium" />
                                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentRequirement.Priority}" Style="{StaticResource MetadataValueStyle}" />
                                                            
                                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Verification:" FontWeight="Medium" />
                                                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentRequirement.VerificationMethodText}" Style="{StaticResource MetadataValueStyle}" />
                                                            
                                                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Validation:" FontWeight="Medium" />
                                                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CurrentRequirement.ValidationMethodText}" Style="{StaticResource MetadataValueStyle}" />
                                                            
                                                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Created By:" FontWeight="Medium" />
                                                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding CurrentRequirement.CreatedBy}" Style="{StaticResource MetadataValueStyle}" />
                                                            
                                                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Global ID:" FontWeight="Medium" />
                                                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding CurrentRequirement.GlobalId}" Style="{StaticResource MetadataValueStyle}" />
                                                        </Grid>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>
                </ScrollViewer>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="8" HorizontalAlignment="Stretch" 
                         Background="Transparent" ShowsPreview="False" />

            <!-- Analysis side panel -->
            <Border Grid.Column="2" Background="{StaticResource Brush.Background.Card}" 
                    CornerRadius="6" Padding="16" Margin="4,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
                    </ScrollViewer.Resources>
                    
                    <StackPanel>
                        <TextBlock Text="Quick Analysis" Style="{StaticResource SectionHeaderStyle}" />
                        
                        <!-- Quality Score -->
                        <StackPanel Visibility="{Binding HasCurrentRequirement, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="Quality Score" FontWeight="Medium" Margin="0,8,0,4" />
                            <Border Background="{StaticResource Brush.Background.Menu}" CornerRadius="4" Padding="8">
                                <TextBlock Text="{Binding QualityScoreDisplay, FallbackValue='Not analyzed'}" 
                                           HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" />
                            </Border>
                        </StackPanel>
                        
                        <!-- Quick actions -->
                        <TextBlock Text="Quick Actions" FontWeight="Medium" Margin="0,16,0,8" />
                        <StackPanel>
                            <Button Content="Analyze Quality" 
                                    Command="{Binding QuickAnalyzeCommand}"
                                    Style="{StaticResource PillActionButtonStyle}" 
                                    Margin="0,4" HorizontalAlignment="Stretch" />
                            <Button Content="Generate Tests" 
                                    Command="{Binding GenerateTestsCommand}"
                                    Style="{StaticResource PillActionButtonStyle}" 
                                    Margin="0,4" HorizontalAlignment="Stretch"
                                    Background="{StaticResource Brush.Accent.Primary}" Foreground="White" />
                            <Button Content="View in TestGen" 
                                    Command="{Binding ViewInTestGenCommand}"
                                    Style="{StaticResource PillActionButtonStyle}" 
                                    Margin="0,4" HorizontalAlignment="Stretch" />
                        </StackPanel>
                        
                        <!-- Analysis summary -->
                        <StackPanel Visibility="{Binding HasAnalysis, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="Analysis Summary" FontWeight="Medium" Margin="0,16,0,8" />
                            <Border Background="{StaticResource Brush.Background.Menu}" CornerRadius="4" Padding="8">
                                <TextBlock Text="{Binding AnalysisSummary}" Style="{StaticResource MetadataValueStyle}" 
                                           TextWrapping="Wrap" />
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>