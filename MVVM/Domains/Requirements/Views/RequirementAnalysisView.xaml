<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.Requirements.Views.RequirementAnalysisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:TestCaseEditorApp.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InvertedBoolToVisibilityConverter x:Key="InvertedBoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="Auto"/>  <!-- Engine Status -->
            <RowDefinition Height="*"/>     <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="{DynamicResource HeaderBackgroundBrush}" 
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Requirement Analysis" 
                               Style="{StaticResource Text.H2}"
                               Foreground="{DynamicResource HeaderTextBrush}"/>
                    <TextBlock Text="AI-powered requirement quality assessment" 
                               Style="{StaticResource Text.Caption}"
                               Foreground="{DynamicResource HeaderTextBrush}"
                               Opacity="0.8"/>
                </StackPanel>
                
                <!-- Analysis Button -->
                <Button Grid.Column="1" 
                        Content="Analyze Requirement"
                        Command="{Binding AnalyzeRequirementCommand}"
                        Style="{StaticResource Button.Primary}"
                        Padding="20,8"
                        Visibility="{Binding IsAnalyzing, Converter={StaticResource InvertedBoolToVisibilityConverter}}"/>
                        
                <!-- Cancel Button (shown during analysis) -->
                <Button Grid.Column="1" 
                        Content="Cancel Analysis"
                        Command="{Binding CancelAnalysisCommand}"
                        Style="{StaticResource Button.Secondary}"
                        Padding="20,8"
                        Visibility="{Binding IsAnalyzing, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </Border>

        <!-- Engine Status Bar -->
        <Border Grid.Row="1" 
                Background="{DynamicResource InfoBackgroundBrush}"
                Padding="16,8"
                Visibility="{Binding EngineStatusText, Converter={StaticResource StringToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="ðŸ”§" 
                           FontSize="14" 
                           VerticalAlignment="Center" 
                           Margin="0,0,8,0"/>
                           
                <TextBlock Grid.Column="1" 
                           Text="{Binding EngineStatusText}"
                           Style="{StaticResource Text.Body}"
                           VerticalAlignment="Center"/>
                           
                <Button Grid.Column="2" 
                        Content="Refresh"
                        Command="{Binding RefreshEngineStatusCommand}"
                        Style="{StaticResource Button.Link}"
                        Padding="8,4"/>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled">
            <Grid>
                <!-- Loading State -->
                <Grid Visibility="{Binding IsAnalyzing, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Border Background="{DynamicResource OverlayBackgroundBrush}" 
                            Opacity="0.9"/>
                    <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" 
                                     Width="200" 
                                     Height="4" 
                                     Margin="0,0,0,16"/>
                        <TextBlock Text="{Binding AnalysisStatusMessage}" 
                                   Style="{StaticResource Text.H3}"
                                   TextAlignment="Center"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Analyzing requirement quality using AI..." 
                                   Style="{StaticResource Text.Body}"
                                   TextAlignment="Center"
                                   Opacity="0.7"/>
                    </StackPanel>
                </Grid>

                <!-- Analysis Results -->
                <StackPanel Margin="16" 
                            Visibility="{Binding HasAnalysis, Converter={StaticResource BoolToVisibilityConverter}}">

                    <!-- Quality Score Card -->
                    <Border Background="{DynamicResource CardBackgroundBrush}"
                            BorderBrush="{DynamicResource AccentBrush}"
                            BorderThickness="0,0,0,3"
                            Padding="20"
                            Margin="0,0,0,16"
                            CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="Your Requirement Quality" 
                                       Style="{StaticResource Text.H3}"
                                       Margin="0,0,0,8"
                                       ToolTip="Quality score of your original requirement (before any AI improvements)"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="{Binding QualityScore}" 
                                               FontSize="48" 
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource AccentBrush}"/>
                                    <TextBlock Text=" / 10" 
                                               FontSize="24" 
                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                               VerticalAlignment="Bottom"
                                               Margin="4,0,0,8"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" 
                                            VerticalAlignment="Center"
                                            Margin="24,0,0,0">
                                    <TextBlock Text="Based on your original requirement text" 
                                               Style="{StaticResource Text.Caption}"
                                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                                    <TextBlock Text="{Binding AnalysisTimestamp}" 
                                               Style="{StaticResource Text.Caption}"
                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Issues Section -->
                    <Border Background="{DynamicResource CardBackgroundBrush}"
                            Padding="20"
                            Margin="0,0,0,16"
                            CornerRadius="8"
                            Visibility="{Binding Issues.Count, Converter={StaticResource CountToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="Issues Found" 
                                       Style="{StaticResource Text.H3}"
                                       Foreground="{DynamicResource WarningBrush}"
                                       Margin="0,0,0,12"/>
                            <ItemsControl ItemsSource="{Binding Issues}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource WarningBackgroundBrush}"
                                                Padding="12"
                                                Margin="0,0,0,8"
                                                CornerRadius="4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0"
                                                           Text="âš ï¸"
                                                           FontSize="16"
                                                           VerticalAlignment="Top"
                                                           Margin="0,0,12,0"/>
                                                           
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Description}" 
                                                               Style="{StaticResource Text.Body}"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Category}" 
                                                               Style="{StaticResource Text.Caption}"
                                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                                               Margin="0,4,0,0"/>
                                                </StackPanel>
                                                
                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding Severity}"
                                                           Style="{StaticResource Text.Caption}"
                                                           VerticalAlignment="Top"
                                                           FontWeight="SemiBold"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Recommendations Section -->
                    <Border Background="{DynamicResource CardBackgroundBrush}"
                            Padding="20"
                            Margin="0,0,0,16"
                            CornerRadius="8"
                            Visibility="{Binding Recommendations.Count, Converter={StaticResource CountToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="Recommendations" 
                                       Style="{StaticResource Text.H3}"
                                       Foreground="{DynamicResource SuccessBrush}"
                                       Margin="0,0,0,12"/>
                            <ItemsControl ItemsSource="{Binding Recommendations}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource SuccessBackgroundBrush}"
                                                Padding="12"
                                                Margin="0,0,0,8"
                                                CornerRadius="4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0"
                                                           Text="ðŸ’¡"
                                                           FontSize="16"
                                                           VerticalAlignment="Top"
                                                           Margin="0,0,12,0"/>
                                                           
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Description}" 
                                                               Style="{StaticResource Text.Body}"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Category}" 
                                                               Style="{StaticResource Text.Caption}"
                                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                                               Margin="0,4,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Improved Requirement Section -->
                    <Border Background="{DynamicResource CardBackgroundBrush}"
                            Padding="20"
                            CornerRadius="8"
                            Visibility="{Binding HasImprovedRequirement, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                           Text="AI-Improved Requirement" 
                                           Style="{StaticResource Text.H3}"
                                           Foreground="{DynamicResource AccentBrush}"/>
                                           
                                <Button Grid.Column="1"
                                        Content="ðŸ“‹ Copy"
                                        Style="{StaticResource Button.Link}"
                                        ToolTip="Copy improved requirement to clipboard"/>
                            </Grid>
                            
                            <Border Background="{DynamicResource CodeBackgroundBrush}"
                                    Padding="16"
                                    CornerRadius="4">
                                <TextBlock Text="{Binding ImprovedRequirement}" 
                                           Style="{StaticResource Text.Body}"
                                           TextWrapping="Wrap"
                                           FontFamily="Segoe UI, Consolas, monospace"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Freeform Feedback Section -->
                    <Border Background="{DynamicResource CardBackgroundBrush}"
                            Padding="20"
                            Margin="0,16,0,0"
                            CornerRadius="8"
                            Visibility="{Binding FreeformFeedback, Converter={StaticResource StringToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="Additional Feedback" 
                                       Style="{StaticResource Text.H3}"
                                       Margin="0,0,0,12"/>
                            <TextBlock Text="{Binding FreeformFeedback}" 
                                       Style="{StaticResource Text.Body}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                </StackPanel>

                <!-- Empty State -->
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Visibility="{Binding HasAnalysis, Converter={StaticResource InvertedBoolToVisibilityConverter}}">
                    <TextBlock Text="ðŸ“Š" 
                               FontSize="48" 
                               TextAlignment="Center"
                               Opacity="0.6"
                               Margin="0,0,0,16"/>
                    <TextBlock Text="No Analysis Available" 
                               Style="{StaticResource Text.H2}"
                               TextAlignment="Center"
                               Opacity="0.8"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Select a requirement and click 'Analyze Requirement' to get AI-powered quality feedback" 
                               Style="{StaticResource Text.Body}"
                               TextAlignment="Center"
                               Opacity="0.6"
                               TextWrapping="Wrap"
                               MaxWidth="400"/>
                </StackPanel>

                <!-- Error State -->
                <Border Background="{DynamicResource ErrorBackgroundBrush}"
                        Padding="20"
                        Margin="16"
                        CornerRadius="8"
                        Visibility="{Binding AnalysisStatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="âš ï¸ Analysis Error" 
                                   Style="{StaticResource Text.H3}"
                                   Foreground="{DynamicResource ErrorBrush}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding AnalysisStatusMessage}" 
                                   Style="{StaticResource Text.Body}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>