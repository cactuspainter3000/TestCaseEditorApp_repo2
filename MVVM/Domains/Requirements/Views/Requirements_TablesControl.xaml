<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.Requirements.Views.Requirements_TablesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:TestCaseEditorApp.Helpers"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="500">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        
        <!-- DataGrid Style -->
        <Style x:Key="DarkDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#333333"/>
            <Setter Property="VerticalGridLinesBrush" Value="#333333"/>
            <Setter Property="RowBackground" Value="#252526"/>
            <Setter Property="AlternatingRowBackground" Value="#2D2D30"/>
            <Setter Property="ColumnHeaderHeight" Value="32"/>
        </Style>
        
        <!-- DataGrid Column Header Style -->
        <Style x:Key="DarkColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource MenuSectionBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
        
        <!-- DataGrid Cell Style -->
        <Style x:Key="DarkCellStyle" TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <DockPanel LastChildFill="True" Margin="6">
        <!-- Top action row (visibility bound to ShowLocalToolbar DP on the UserControl) -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="0,0,0,8"
                    Visibility="{Binding ShowLocalToolbar, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibilityConverter}}">
            <Button Content="Select All" 
                    Command="{Binding SelectAllTablesCommand}" 
                    Style="{StaticResource PillActionButtonStyle}"
                    Margin="0,0,6,0"/>
            <Button Content="Clear All" 
                    Command="{Binding ClearAllTablesCommand}"
                    Style="{StaticResource PillActionButtonStyle}"/>
        </StackPanel>

        <!-- Tables list -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ScrollViewer.Resources>
                <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
            </ScrollViewer.Resources>
            <ItemsControl ItemsSource="{Binding SelectedTableVMs}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="12,0,12,12" 
                                Background="{DynamicResource MenuSectionBackground}"
                                Padding="12">
                            <StackPanel>
                                <!-- Header section with title and edit/save/cancel buttons -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Title and EDITING badge -->
                                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Orientation="Horizontal">
                                        <!-- Read-only title -->
                                        <TextBlock Text="{Binding Title}" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="13"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                                    </StackPanel>

                                    <!-- Toggle Edit/Exit button -->
                                    <Button Grid.Column="1"
                                            Padding="12,4"
                                            FontSize="11">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource PillActionButtonStyle}">
                                                <Setter Property="Content" Value="Enter Editing Mode"/>
                                                <Setter Property="Command" Value="{Binding EditTableCommand}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                                        <Setter Property="Content" Value="Exit Editing Mode"/>
                                                        <Setter Property="Command" Value="{Binding ExitEditingModeCommand}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>

                                <!-- Content: read-only DataGrid only - EditableDataControl removed for Requirements domain -->
                                <StackPanel>
                                    <!-- Read-only DataGrid (always visible) -->
                                    <DataGrid ItemsSource="{Binding Rows}"
                                          ColumnHeaderStyle="{StaticResource DarkColumnHeaderStyle}"
                                          CellStyle="{StaticResource DarkCellStyle}"
                                          AutoGenerateColumns="False"
                                          HeadersVisibility="Column"
                                          CanUserAddRows="False"
                                          IsReadOnly="True"
                                          MinHeight="140"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                                          helpers:DataGridColumnsBinder.ColumnsSource="{Binding Columns}"
                                          EnableRowVirtualization="True"
                                          EnableColumnVirtualization="True"
                                          ScrollViewer.CanContentScroll="True"
                                          VirtualizingPanel.IsVirtualizing="True"
                                          VirtualizingPanel.VirtualizationMode="Recycling"
                                          Style="{StaticResource DarkDataGridStyle}"/>

                                    <!-- EditableDataControl completely removed for Requirements domain -->
                            </StackPanel>
                        </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <!-- Empty state -->
                <ItemsControl.Style>
                    <Style TargetType="ItemsControl">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedTableVMs.Count}" Value="0">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ItemsControl">
                                            <Grid Margin="24">
                                                <TextBlock Foreground="{DynamicResource DisabledBrush}" 
                                                           FontStyle="Italic"
                                                           Text="No support tables found for this requirement."
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           TextAlignment="Center"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ItemsControl.Style>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>