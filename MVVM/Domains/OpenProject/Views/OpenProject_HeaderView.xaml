<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.OpenProject.Views.OpenProject_HeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="#1F2937" 
            Padding="16,12"
            BorderBrush="#374151"
            BorderThickness="0,0,0,1">
        <StackPanel>
            <TextBlock Text="{Binding HeaderTitle}" 
                      FontSize="16" 
                      FontWeight="SemiBold"
                      Foreground="#F9FAFB"
                      Margin="0,0,0,6"/>
            <TextBlock Text="{Binding Description}" 
                      FontSize="13" 
                      Foreground="#9CA3AF"/>
        </StackPanel>
    </Border>
</UserControl>