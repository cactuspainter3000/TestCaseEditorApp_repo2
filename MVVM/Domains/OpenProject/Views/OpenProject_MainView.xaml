<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.OpenProject.Views.OpenProject_MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             mc:Ignorable="d" d:DesignWidth="900"
             Background="#2B2B2B">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:InvertBoolConverter x:Key="InvertBoolConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="15">
        <ScrollViewer.Resources>
            <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
        </ScrollViewer.Resources>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Step 1: Select Project File -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="Select Project File" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="DarkOrange" 
                           Margin="0,0,0,8"/>

                <Border Background="Transparent" 
                        CornerRadius="8" 
                        Padding="15" 
                        BorderThickness="2">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="BorderBrush" Value="#444444"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsProjectSelected}" Value="True">
                                    <Setter Property="BorderBrush" Value="DarkOrange"/>
                                    <Setter Property="Background" Value="#3A3A3A"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Choose a Test Case Editor project file (.tcex.json) to open." 
                                       Foreground="#CCCCCC" 
                                       TextWrapping="Wrap" 
                                       Margin="0,0,0,15"
                                       LineHeight="20"/>

                            <DockPanel Margin="0,0,0,10">
                                <Button DockPanel.Dock="Right" 
                                        Style="{StaticResource ActionButton}"
                                        Margin="10,0,0,0"
                                        Command="{Binding SelectProjectFileCommand}"
                                        IsEnabled="{Binding IsLoadingProject, Converter={StaticResource InvertBoolConverter}}">
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Browse..."/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsProjectSelected}" Value="True">
                                                        <Setter Property="Text" Value="âœ… Selected"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsLoadingProject}" Value="True">
                                                        <Setter Property="Text" Value="Loading..."/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Button>

                                <Border Background="#444444" 
                                        CornerRadius="4" 
                                        Padding="12,8"
                                        BorderBrush="#555555"
                                        BorderThickness="1">
                                    <TextBlock Text="{Binding SelectedProjectPath, FallbackValue='No project selected'}" 
                                               Foreground="#CCCCCC"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </DockPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Step 2: Recent Projects -->
            <StackPanel Grid.Row="1" 
                        Margin="0,0,0,15"
                        Visibility="{Binding HasRecentProjects, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="Recent Projects" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="DarkOrange" 
                           Margin="0,0,0,8"/>

                <Border Background="Transparent" 
                        CornerRadius="8" 
                        Padding="15" 
                        BorderThickness="2"
                        BorderBrush="#444444">
                    <StackPanel>
                        <TextBlock Text="Quick access to recently opened projects." 
                                   Foreground="#CCCCCC" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,15"
                                   LineHeight="20"/>
                        
                        <ItemsControl ItemsSource="{Binding RecentProjects}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#444444" 
                                            CornerRadius="4" 
                                            Margin="0,0,0,8"
                                            BorderBrush="#555555"
                                            BorderThickness="1">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#4A4A4A"/>
                                                        <Setter Property="BorderBrush" Value="DarkOrange"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        
                                        <Button Background="Transparent"
                                                BorderThickness="0"
                                                Padding="12,8"
                                                HorizontalAlignment="Stretch"
                                                HorizontalContentAlignment="Stretch"
                                                Command="{Binding DataContext.OpenRecentProjectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}">
                                                                    <ContentPresenter/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                            
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Project Info -->
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding DisplayName}" 
                                                               Foreground="White" 
                                                               FontWeight="SemiBold"
                                                               FontSize="14"
                                                               Margin="0,0,0,3"/>
                                                    <TextBlock Text="{Binding FilePath}" 
                                                               Foreground="#CCCCCC" 
                                                               FontSize="11"
                                                               TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                                
                                                <!-- Time & Open -->
                                                <StackPanel Grid.Column="1" 
                                                            VerticalAlignment="Center"
                                                            Margin="15,0,10,0">
                                                    <TextBlock Text="{Binding RelativeTime}" 
                                                               Foreground="#CCCCCC" 
                                                               FontSize="11"
                                                               HorizontalAlignment="Right"/>
                                                </StackPanel>
                                                
                                                <Border Grid.Column="2"
                                                        Background="DarkOrange"
                                                        CornerRadius="3"
                                                        Padding="8,4">
                                                    <TextBlock Text="Open" 
                                                               Foreground="White" 
                                                               FontSize="11"
                                                               FontWeight="SemiBold"/>
                                                </Border>
                                            </Grid>
                                        </Button>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>