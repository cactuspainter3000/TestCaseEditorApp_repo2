<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.OpenProject.Views.OpenProject_MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             mc:Ignorable="d" d:DesignWidth="900"
             Background="#2B2B2B">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:InvertBoolConverter x:Key="InvertBoolConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="15">
        <ScrollViewer.Resources>
            <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
        </ScrollViewer.Resources>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Step 1: Select Project File -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="Search" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="DarkOrange" 
                           Margin="0,0,0,8"/>
                
                <DockPanel Margin="0,0,0,8">
                    <!-- Browse Button -->
                    <Button DockPanel.Dock="Right" 
                            Style="{StaticResource ActionButton}"
                            FontSize="11"
                            FontWeight="SemiBold"
                            Height="32"
                            Width="70"
                            Margin="10,0,0,0"
                            VerticalAlignment="Bottom"
                            Command="{Binding OpenProjectCommand}"
                            IsEnabled="{Binding IsLoadingProject, Converter={StaticResource InvertBoolConverter}}">
                        <TextBlock Text="Browse" Foreground="#CCCCCC"/>
                    </Button>

                    <Border Background="Transparent" 
                            CornerRadius="4" 
                            Padding="12,8"
                            BorderBrush="#555555"
                            BorderThickness="1"
                            Height="56">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#4A4A4A"/>
                                        <Setter Property="BorderBrush" Value="DarkOrange"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding ProjectName, FallbackValue='No project selected'}" 
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       FontSize="14"/>
                        </StackPanel>
                    </Border>
                </DockPanel>
            </StackPanel>

            <!-- Recent Projects Section -->
            <StackPanel Grid.Row="1" Margin="0,10,0,15">
                <TextBlock Text="Recent Projects" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Foreground="DarkOrange" 
                           Margin="0,0,0,10"/>
                
                <!-- Recent Projects List -->
                <ItemsControl ItemsSource="{Binding RecentProjects}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="Transparent" 
                                    CornerRadius="4" 
                                    Padding="12,8"
                                    BorderBrush="#444444"
                                    BorderThickness="1"
                                    Margin="0,0,0,6"
                                    Cursor="Hand">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#3A3A3A"/>
                                                <Setter Property="BorderBrush" Value="DarkOrange"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding ProjectName}" 
                                                   Foreground="White"
                                                   FontWeight="SemiBold"
                                                   FontSize="13"/>
                                        <TextBlock Foreground="#888888" FontSize="10" Margin="0,2,0,0">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} requirements">
                                                    <Binding Path="RequirementCount"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding LastModifiedText}" 
                                                   Foreground="#666666"
                                                   FontSize="10"
                                                   HorizontalAlignment="Right"/>
                                        <Button Content="Open" 
                                                Style="{StaticResource ActionButton}"
                                                FontSize="10"
                                                Height="24"
                                                Padding="8,2"
                                                Margin="0,4,0,0"
                                                Command="{Binding DataContext.OpenRecentProjectCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding FilePath}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- Empty state -->
                <TextBlock Text="No recent projects" 
                           Foreground="#666666"
                           FontStyle="Italic"
                           FontSize="12"
                           Margin="0,8,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RecentProjects.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>


        </Grid>
    </ScrollViewer>
</UserControl>