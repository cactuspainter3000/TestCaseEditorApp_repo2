<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.OpenProject.Views.OpenProject_MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             mc:Ignorable="d" d:DesignWidth="900"
             Background="#2B2B2B">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:InvertBoolConverter x:Key="InvertBoolConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="15">
        <ScrollViewer.Resources>
            <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
        </ScrollViewer.Resources>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Step 1: Select Project File -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="Search" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="DarkOrange" 
                           Margin="0,0,0,8"/>
                
                <DockPanel Margin="0,0,0,8">
                    <Button DockPanel.Dock="Right" 
                            Style="{StaticResource ActionButton}"
                            FontSize="11"
                            FontWeight="SemiBold"
                            Height="32"
                            Width="50"
                            Margin="10,0,0,0"
                            VerticalAlignment="Bottom"
                            Command="{Binding SelectProjectFileCommand}"
                            IsEnabled="{Binding IsLoadingProject, Converter={StaticResource InvertBoolConverter}}">
                        <TextBlock Text="Open">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#CCCCCC"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMainOpenButtonActive}" Value="True">
                                            <Setter Property="Foreground" Value="DarkOrange"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Button>

                    <Border Background="Transparent" 
                            CornerRadius="4" 
                            Padding="12,8"
                            BorderBrush="#555555"
                            BorderThickness="1"
                            Height="56">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#4A4A4A"/>
                                        <Setter Property="BorderBrush" Value="DarkOrange"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding ProjectName, FallbackValue='No project selected'}" 
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Margin="0,0,0,3"/>
                            <TextBlock Foreground="#999999" FontSize="10"
                                       Visibility="{Binding IsProjectSelected, Converter={StaticResource BoolToVis}}">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} requirements | {1}% analyzed | {2}% assigned test cases">
                                        <Binding Path="RequirementCount" FallbackValue="0"/>
                                        <Binding Path="AnalyzedPercentage" FallbackValue="0"/>
                                        <Binding Path="TestCasesPercentage" FallbackValue="0"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </DockPanel>
            </StackPanel>

            <!-- Step 2: Recent Projects -->
            <StackPanel Grid.Row="1" 
                        Margin="0,0,0,15"
                        Visibility="{Binding HasRecentProjects, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="Recent Projects" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="DarkOrange" 
                           Margin="0,0,0,8"/>

                <StackPanel>
                        
                        <ItemsControl ItemsSource="{Binding RecentProjects}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel Margin="0,0,0,8">
                                        <Button DockPanel.Dock="Right" 
                                                Style="{StaticResource ActionButton}"
                                                FontSize="11"
                                                FontWeight="SemiBold"
                                                Height="32"
                                                Width="50"
                                                Margin="10,0,0,0"
                                                VerticalAlignment="Bottom"
                                                Command="{Binding DataContext.OpenRecentProjectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}">
                                            <TextBlock Text="Open">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActiveProject}" Value="True">
                                                                <Setter Property="Foreground" Value="DarkOrange"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Button>
                                        
                                        <Border Background="Transparent" 
                                                CornerRadius="4" 
                                                Padding="12,8"
                                                BorderBrush="#555555"
                                                BorderThickness="1">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#4A4A4A"/>
                                                            <Setter Property="BorderBrush" Value="DarkOrange"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            
                                            <StackPanel>
                                                <TextBlock Text="{Binding DisplayName}" 
                                                           Foreground="White" 
                                                           FontWeight="SemiBold"
                                                           FontSize="14"
                                                           Margin="0,0,0,3"/>
                                                
                                                <!-- Metadata -->
                                                <TextBlock Margin="0,0,0,5"
                                                           Foreground="#999999" 
                                                           FontSize="10">
                                                    <Run Text="{Binding RequirementsCount, FallbackValue='0', Mode=OneWay}"/>
                                                    <Run Text="requirements"/>
                                                    <Run Text=" | "/>
                                                    <Run Text="{Binding AnalyzedPercentage, FallbackValue='0', Mode=OneWay}"/>
                                                    <Run Text="% analyzed"/>
                                                    <Run Text=" | "/>
                                                    <Run Text="{Binding TestCasesPercentage, FallbackValue='0', Mode=OneWay}"/>
                                                    <Run Text="% assigned test cases"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </DockPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>