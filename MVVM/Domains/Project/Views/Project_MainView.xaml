<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.Project.Views.Project_MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/DesignSystem.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource Brush.Background.Menu}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="10">
            <StackPanel VerticalAlignment="Top" 
                        HorizontalAlignment="Center" 
                        MaxWidth="600"
                        Margin="10,20,10,20">
            
            <!-- Project header -->
            <TextBlock Text="Project"
                       FontSize="28"
                       FontWeight="Light"
                       Foreground="{StaticResource Brush.Accent.Primary}"
                       TextAlignment="Center"
                       Margin="0,0,0,15"/>
            
            <!-- Description -->
            <TextBlock Text="Manage your test case projects and workspace settings"
                       FontSize="16"
                       Foreground="{StaticResource Brush.Text.Secondary}"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,15"/>
                       
            <!-- AnythingLLM Status Section -->
            <Border Background="{StaticResource Brush.Background.Header}"
                    CornerRadius="6"
                    Padding="15,10"
                    Margin="0,0,0,15"
                    HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Center">
                    
                    <!-- Status Indicator -->
                    <Border Width="8" Height="8" 
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            CornerRadius="4">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource Brush.State.Error}"/> <!-- Red -->
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAnythingLLMStarting}" Value="True">
                                        <Setter Property="Background" Value="Orange"/> <!-- Orange when starting -->
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsAnythingLLMAvailable}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource Brush.State.Success}"/> <!-- Green when connected -->
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        
                        <!-- Spinning animation for startup (small white dot that traverses the circle) -->
                        <Border Width="6" Height="6" 
                                Background="White" 
                                Opacity="0.8"
                                CornerRadius="3"
                                Visibility="{Binding IsAnythingLLMStarting, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Border.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotate"/>
                            </Border.RenderTransform>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                                           Storyboard.TargetProperty="Angle"
                                                           From="0" To="360" Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                        </Border>
                    </Border>
                    
                    <!-- Status Message -->
                    <TextBlock Text="{Binding AnythingLLMStatusMessage}"
                              FontSize="14"
                              Foreground="{StaticResource Brush.Text.Secondary}"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Project management section -->
            <Border Background="{StaticResource Brush.Background.Menu.Selected}"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="Project Management"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource Brush.Accent.Primary}"
                               Margin="0,0,0,15"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="•" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,0,10,0" VerticalAlignment="Top"/>
                        <TextBlock Text="Create and manage test case generation projects"
                                   Foreground="{StaticResource Brush.Text.Secondary}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="•" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,0,10,0" VerticalAlignment="Top"/>
                        <TextBlock Text="Configure workspace settings and preferences"
                                   Foreground="{StaticResource Brush.Text.Secondary}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="•" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,0,10,0" VerticalAlignment="Top"/>
                        <TextBlock Text="Set up project-specific templates and configurations"
                                   Foreground="{StaticResource Brush.Text.Secondary}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="•" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,0,10,0" VerticalAlignment="Top"/>
                        <TextBlock Text="Export and import project settings"
                                   Foreground="{StaticResource Brush.Text.Secondary}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
        </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>