<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.TestCaseCreation.Views.LLMTestCaseGeneratorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:TestCaseEditorApp.MVVM.Domains.TestCaseCreation.ViewModels"
             xmlns:models="clr-namespace:TestCaseEditorApp.MVVM.Domains.TestCaseCreation.Models"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type=vm:LLMTestCaseGeneratorViewModel}"
             Background="{StaticResource Brush.Background.Menu}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/DesignSystem.xaml"/>
                <ResourceDictionary Source="/Resources/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title & Controls -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
            <RowDefinition Height="Auto"/> <!-- Coverage Summary -->
            <RowDefinition Height="*"/>    <!-- Results Area -->
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="LLM Test Case Generator" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource Brush.Text.Primary}"
                       Margin="0,0,0,8"/>

            <TextBlock Grid.Row="1" 
                       Text="Automatically generate test cases with intelligent requirement coverage detection" 
                       FontSize="13" 
                       Foreground="{StaticResource Brush.Text.Secondary}"
                       TextWrapping="Wrap"/>
        </Grid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"
                    Margin="0,4,0,0">
            <Button Content="Generate All Test Cases" 
                    Command="{Binding GenerateTestCasesCommand}"
                    Style="{StaticResource ActionButton}"
                    Margin="0,0,8,0"/>
            <Button Content="Generate for Selection" 
                    Command="{Binding GenerateForSelectionCommand}"
                    Style="{StaticResource ActionButton}"
                    Margin="0,0,8,0"/>
            <Button Content="Find Similar Groups" 
                    Command="{Binding FindSimilarGroupsCommand}"
                    Style="{StaticResource ActionButton}"
                    Margin="0,0,8,0"/>
            <Button Content="Deduplicate" 
                    Command="{Binding DeduplicateTestCasesCommand}"
                    Style="{StaticResource ActionButton}"
                    Margin="0,0,8,0"/>
            <Button Content="Cancel" 
                    Command="{Binding CancelGenerationCommand}"
                    Style="{StaticResource ActionButton}"
                    Margin="0,0,8,0"
                    Visibility="{Binding IsGenerating, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Button Content="Clear Results" 
                    Command="{Binding ClearResultsCommand}"
                    Style="{StaticResource ActionButton}"
                    Margin="16,0,0,0"/>
        </StackPanel>

        <!-- Status Bar -->
        <Border Grid.Row="1" 
                Background="{StaticResource Brush.Background.Header}" 
                BorderBrush="{StaticResource Brush.Border.Default}" 
                BorderThickness="1" 
                CornerRadius="{StaticResource Radius.SM}" 
                Padding="12"
                Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Status:" 
                           FontWeight="SemiBold" 
                           Foreground="{StaticResource Brush.Text.Secondary}" 
                           Margin="0,0,8,0"/>
                
                <TextBlock Grid.Column="1" 
                           Text="{Binding StatusMessage}" 
                           Foreground="{StaticResource Brush.Text.Primary}"/>

                <ProgressBar Grid.Column="2" 
                             Width="150" 
                             Height="18"
                             Minimum="0" 
                             Maximum="100"
                             Value="{Binding Progress}"
                             Visibility="{Binding IsGenerating, Converter={StaticResource BoolToVisibilityConverter}}"
                             Background="{StaticResource Brush.Background.Menu}"
                             Foreground="{StaticResource Brush.State.Success}"
                             BorderBrush="{StaticResource Brush.Border.Default}"
                             BorderThickness="1"/>
            </Grid>
        </Border>

        <!-- Coverage Summary -->
        <Border Grid.Row="2" 
                Background="{StaticResource Brush.Background.Header}" 
                BorderBrush="{StaticResource Brush.Border.Default}" 
                BorderThickness="1" 
                CornerRadius="{StaticResource Radius.SM}" 
                Padding="16"
                Margin="0,0,0,12"
                Visibility="{Binding HasCoverageData, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Coverage:" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource Brush.Text.Primary}" 
                           Margin="0,0,16,0"/>

                <ProgressBar Grid.Column="1" 
                             Height="24"
                             Minimum="0" 
                             Maximum="100"
                             Value="{Binding CoveragePercentage}"
                             Background="{StaticResource Brush.Background.Menu}"
                             Foreground="{StaticResource Brush.State.Success}"
                             BorderBrush="{StaticResource Brush.Border.Default}"
                             BorderThickness="1"
                             Margin="0,0,16,0"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,24,0">
                    <TextBlock Text="{Binding CoveragePercentage, StringFormat={}{0:F1}%}" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource Brush.State.Success}"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="0,0,16,0">
                    <TextBlock Text="✓ " 
                               FontSize="16" 
                               Foreground="{StaticResource Brush.State.Success}"/>
                    <TextBlock Text="{Binding CoveredCount}" 
                               FontSize="16" 
                               Foreground="{StaticResource Brush.Text.Primary}" 
                               Margin="0,0,4,0"/>
                    <TextBlock Text="Covered" 
                               FontSize="14" 
                               Foreground="{StaticResource Brush.Text.Secondary}"/>
                </StackPanel>

                <StackPanel Grid.Column="4" Orientation="Horizontal">
                    <TextBlock Text="✗ " 
                               FontSize="16" 
                               Foreground="{StaticResource Brush.State.Error}"/>
                    <TextBlock Text="{Binding UncoveredCount}" 
                               FontSize="16" 
                               Foreground="{StaticResource Brush.Text.Primary}" 
                               Margin="0,0,4,0"/>
                    <TextBlock Text="Uncovered" 
                               FontSize="14" 
                               Foreground="{StaticResource Brush.Text.Secondary}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Results Area -->
        <TabControl Grid.Row="3" 
                    Background="{StaticResource Brush.Background.Header}" 
                    BorderBrush="{StaticResource Brush.Border.Default}"
                    BorderThickness="1">
            
            <!-- Generated Test Cases Tab -->
            <TabItem Header="Generated Test Cases">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Generated Test Cases" Margin="0,0,8,0"/>
                            <Border Background="{StaticResource Brush.State.Success}" 
                                    CornerRadius="10" 
                                    Padding="6,2"
                                    Visibility="{Binding DataContext.GeneratedTestCases.Count, 
                                                        RelativeSource={RelativeSource AncestorType=TabControl}, 
                                                        Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="{Binding DataContext.GeneratedTestCases.Count, 
                                                         RelativeSource={RelativeSource AncestorType=TabControl}}" 
                                           Foreground="{StaticResource Brush.Text.OnAccent}" 
                                           FontSize="11"/>
                            </Border>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding GeneratedTestCases}" Margin="8">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:LLMTestCase}">
                                <Border Background="#2D2D30" 
                                        BorderBrush="#3E3E42" 
                                        BorderThickness="1" 
                                        CornerRadius="4" 
                                        Margin="0,0,0,8" 
                                        Padding="12">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Title & Metadata -->
                                        <Grid Grid.Row="0" Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Id}" 
                                                           FontSize="11" 
                                                           Foreground="{StaticResource Brush.Text.Tertiary}" 
                                                           Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding Title}" 
                                                           FontSize="16" 
                                                           FontWeight="SemiBold" 
                                                           Foreground="{StaticResource Brush.Text.Primary}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <Border Background="{StaticResource Brush.State.Info}" 
                                                        CornerRadius="{StaticResource Radius.SM}" 
                                                        Padding="6,3" 
                                                        Margin="0,0,4,0">
                                                    <TextBlock Text="{Binding Priority}" 
                                                               Foreground="{StaticResource Brush.Text.OnAccent}" 
                                                               FontSize="11"/>
                                                </Border>
                                                <Border Background="{StaticResource Brush.State.Warning}" 
                                                        CornerRadius="{StaticResource Radius.SM}" 
                                                        Padding="6,3">
                                                    <TextBlock Text="{Binding GenerationConfidence, StringFormat={}Confidence: {0}%}" 
                                                               Foreground="{StaticResource Brush.Text.OnAccent}" 
                                                               FontSize="11"/>
                                                </Border>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Description -->
                                        <TextBlock Grid.Row="1" 
                                                   Text="{Binding Description}" 
                                                   Foreground="{StaticResource Brush.Text.Secondary}" 
                                                   TextWrapping="Wrap"
                                                   Margin="0,0,0,8"/>

                                        <!-- Covered Requirements -->
                                        <StackPanel Grid.Row="2" 
                                                    Orientation="Horizontal" 
                                                    Margin="0,0,0,8">
                                            <TextBlock Text="Covers:" 
                                                       FontWeight="SemiBold" 
                                                       Foreground="{StaticResource Brush.Text.Secondary}" 
                                                       Margin="0,0,8,0"/>
                                            <ItemsControl ItemsSource="{Binding CoveredRequirementIds}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="{StaticResource Brush.State.Success}" 
                                                                CornerRadius="{StaticResource Radius.SM}" 
                                                                Padding="6,2" 
                                                                Margin="0,0,4,2">
                                                            <TextBlock Text="{Binding}" 
                                                                       Foreground="{StaticResource Brush.Text.OnAccent}" 
                                                                       FontSize="11"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>

                                        <!-- Steps -->
                                        <Expander Grid.Row="3" 
                                                  Header="Test Steps" 
                                                  IsExpanded="False"
                                                  Foreground="{StaticResource Brush.Text.Primary}"
                                                  Margin="0,0,0,8">
                                            <ItemsControl ItemsSource="{Binding Steps}" Margin="8,8,0,0">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate DataType="{x:Type models:LLMTestStep}">
                                                        <Grid Margin="0,0,0,8">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>

                                                            <Border Grid.Column="0" 
                                                                    Grid.RowSpan="2"
                                                                    Background="{StaticResource Brush.State.Info}" 
                                                                    CornerRadius="12" 
                                                                    Width="24" 
                                                                    Height="24"
                                                                    Margin="0,0,8,0"
                                                                    VerticalAlignment="Top">
                                                                <TextBlock Text="{Binding StepNumber}" 
                                                                           Foreground="{StaticResource Brush.Text.OnAccent}" 
                                                                           FontSize="12"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"/>
                                                            </Border>

                                                            <TextBlock Grid.Column="1" 
                                                                       Grid.Row="0"
                                                                       Text="{Binding Action}" 
                                                                       Foreground="{StaticResource Brush.Text.Primary}" 
                                                                       TextWrapping="Wrap"
                                                                       Margin="0,0,0,4"/>
                                                            
                                                            <TextBlock Grid.Column="1" 
                                                                       Grid.Row="1"
                                                                       Foreground="{StaticResource Brush.State.Success}" 
                                                                       FontStyle="Italic"
                                                                       TextWrapping="Wrap">
                                                                <Run Text="→ "/>
                                                                <Run Text="{Binding ExpectedResult}"/>
                                                            </TextBlock>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Expander>

                                        <!-- Tags -->
                                        <ItemsControl Grid.Row="4" 
                                                      ItemsSource="{Binding Tags}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="{StaticResource Brush.Background.Menu}" 
                                                            CornerRadius="{StaticResource Radius.SM}" 
                                                            Padding="6,2" 
                                                            Margin="0,0,4,2">
                                                        <TextBlock Text="{Binding}" 
                                                                   Foreground="{StaticResource Brush.Text.Secondary}" 
                                                                   FontSize="11"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>

            <!-- Similar Groups Tab -->
            <TabItem Header="Similar Requirement Groups">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Similar Requirement Groups" Margin="0,0,8,0"/>
                            <Border Background="{StaticResource Brush.State.Info}" 
                                    CornerRadius="10" 
                                    Padding="6,2"
                                    Visibility="{Binding DataContext.SimilarRequirementGroups.Count, 
                                                        RelativeSource={RelativeSource AncestorType=TabControl}, 
                                                        Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="{Binding DataContext.SimilarRequirementGroups.Count, 
                                                         RelativeSource={RelativeSource AncestorType=TabControl}}" 
                                           Foreground="{StaticResource Brush.Text.OnAccent}" 
                                           FontSize="11"/>
                            </Border>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding SimilarRequirementGroups}" Margin="8">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:RequirementGroup}">
                                <Border Background="{StaticResource Brush.Background.Menu}" 
                                        BorderBrush="{StaticResource Brush.Border.Default}" 
                                        BorderThickness="1" 
                                        CornerRadius="{StaticResource Radius.SM}" 
                                        Margin="0,0,0,8" 
                                        Padding="12">
                                    <StackPanel>
                                        <TextBlock Text="{Binding DisplayText}" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="{StaticResource Brush.Text.Primary}"
                                                   Margin="0,0,0,8"/>
                                        
                                        <ItemsControl ItemsSource="{Binding Requirements}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="{StaticResource Brush.Background.Header}" 
                                                            BorderBrush="{StaticResource Brush.Border.Default}" 
                                                            BorderThickness="1" 
                                                            CornerRadius="{StaticResource Radius.SM}" 
                                                            Padding="8" 
                                                            Margin="0,0,0,4">
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding Item}" 
                                                                       FontWeight="SemiBold" 
                                                                       Foreground="{StaticResource Brush.State.Success}" 
                                                                       Margin="0,0,0,4"/>
                                                            <TextBlock Text="{Binding Description}" 
                                                                       Foreground="{StaticResource Brush.Text.Secondary}" 
                                                                       TextWrapping="Wrap"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
