<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.TestCaseCreation.Views.TestCaseCreation_MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:TestCaseEditorApp.MVVM.Domains.TestCaseCreation.ViewModels"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:TestCaseCreationMainVM}"
             Background="{StaticResource Brush.Background.Menu}">
    
    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <conv:NullToVisibilityConverter Invert="True" x:Key="NotNullToVisibilityConverter" />
        <conv:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter" />
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0"
                Background="{StaticResource MenuBackground}"
                BorderBrush="{StaticResource CardBorderBrush}"
                BorderThickness="1"
                CornerRadius="8,8,0,0"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Requirement Info -->
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Test Case Creation"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="{StaticResource MenuForeground}"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding RequirementInfo}"
                               FontSize="12"
                               Foreground="{StaticResource MenuForeground}"
                               Opacity="0.8"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <StackPanel.Resources>
                        <Style TargetType="Button" BasedOn="{StaticResource Button.Secondary}">
                            <Setter Property="Margin" Value="0,0,8,0"/>
                        </Style>
                    </StackPanel.Resources>
                    <Button Command="{Binding AddTestCaseCommand}"
                            Content="âž• Add Test Case"
                            Style="{StaticResource Button.Primary}"
                            ToolTip="Create a new test case"/>
                    
                    <Button Command="{Binding SaveAllCommand}"
                            Content="ðŸ’¾ Save All"
                            Style="{StaticResource Button.Secondary}"
                            ToolTip="Save all test cases to requirement"/>
                    
                    <Button Command="{Binding GenerateTestCaseCommandCommand}"
                            Content="âš™ï¸ Generate Command"
                            Style="{StaticResource Button.Secondary}"
                            ToolTip="Generate test case command for external tool"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="1"
                Background="{StaticResource MenuBackground}"
                BorderBrush="{StaticResource CardBorderBrush}"
                BorderThickness="1,0,1,1"
                Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           Foreground="{StaticResource MenuForeground}"
                           VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <StackPanel.Resources>
                        <Style TargetType="Border">
                            <Setter Property="Margin" Value="0,0,16,0"/>
                        </Style>
                    </StackPanel.Resources>
                    <!-- Unsaved Changes Indicator -->
                    <Border Background="Orange" 
                            CornerRadius="3" 
                            Padding="6,2"
                            Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="Unsaved Changes" 
                                   FontSize="10" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                    </Border>
                    
                    <!-- Test Case Count -->
                    <TextBlock Text="{Binding TestCases.Count, StringFormat='{}{0} test cases'}"
                               Foreground="{StaticResource MenuForeground}"
                               Opacity="0.8"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Test Case List -->
            <Border Grid.Column="0"
                    Background="{StaticResource MenuBackground}"
                    BorderBrush="{StaticResource CardBorderBrush}"
                    BorderThickness="1,0,0,1"
                    Padding="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- List Header -->
                    <TextBlock Grid.Row="0"
                               Text="Test Cases"
                               FontWeight="Bold"
                               Foreground="{StaticResource MenuForeground}"
                               Margin="8,8,8,12"/>
                    
                    <!-- Test Cases ListBox -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding TestCases}"
                             SelectedItem="{Binding SelectedTestCase}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
                        </ListBox.Resources>
                        
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent"
                                        Padding="8"
                                        Margin="0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Title}"
                                                       FontWeight="Bold"
                                                       FontSize="11"
                                                       Foreground="{StaticResource MenuForeground}"
                                                       TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding LastModified, StringFormat='Modified: {0:HH:mm}'}"
                                                       FontSize="9"
                                                       Foreground="{StaticResource MenuForeground}"
                                                       Opacity="0.6"/>
                                        </StackPanel>
                                        
                                        <!-- Dirty Indicator -->
                                        <Ellipse Grid.Column="1"
                                                 Width="8" Height="8"
                                                 Fill="Orange"
                                                 Visibility="{Binding IsDirty, Converter={StaticResource BoolToVisibilityConverter}}"
                                                 ToolTip="Unsaved changes"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Empty State -->
                    <TextBlock Grid.Row="1"
                               Text="No test cases yet.&#x0a;Click 'Add Test Case' to get started!"
                               FontSize="12"
                               Foreground="{StaticResource MenuForeground}"
                               Opacity="0.5"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               Visibility="{Binding TestCases.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1"
                          Background="{StaticResource CardBorderBrush}"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"/>

            <!-- Test Case Editor -->
            <Border Grid.Column="2"
                    Background="{StaticResource MenuBackground}"
                    BorderBrush="{StaticResource CardBorderBrush}"
                    BorderThickness="0,0,1,1"
                    Padding="16">
                
                <Grid>
                    <!-- Content when test case is selected -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Visibility="{Binding SelectedTestCase, Converter={StaticResource NotNullToVisibilityConverter}}">
                        <ScrollViewer.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
                        </ScrollViewer.Resources>
                        
                        <StackPanel>
                            <StackPanel.Resources>
                                <Style TargetType="Grid">
                                    <Setter Property="Margin" Value="0,0,0,16"/>
                                </Style>
                            </StackPanel.Resources>
                        <!-- Title Editor -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0"
                                       Text="Title"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource MenuForeground}"
                                       Margin="0,0,0,4"/>
                            
                            <TextBox Grid.Row="1"
                                     Text="{Binding SelectedTestCase.Title, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource MenuPopupTextBoxStyle}"/>
                        </Grid>

                        <!-- Preconditions Editor -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0"
                                       Text="Preconditions"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource MenuForeground}"
                                       Margin="0,0,0,4"/>
                            
                            <TextBox Grid.Row="1"
                                     Text="{Binding SelectedTestCase.Preconditions, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource MenuPopupTextBoxStyle}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="60"/>
                        </Grid>

                        <!-- Steps Editor -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0"
                                       Text="Test Steps"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource MenuForeground}"
                                       Margin="0,0,0,4"/>
                            
                            <TextBox Grid.Row="1"
                                     Text="{Binding SelectedTestCase.Steps, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource MenuPopupTextBoxStyle}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="120"/>
                        </Grid>

                        <!-- Expected Results Editor -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0"
                                       Text="Expected Results"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource MenuForeground}"
                                       Margin="0,0,0,4"/>
                            
                            <TextBox Grid.Row="1"
                                     Text="{Binding SelectedTestCase.ExpectedResults, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource MenuPopupTextBoxStyle}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="80"/>
                        </Grid>

                        <!-- Test Case Actions -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <StackPanel.Resources>
                                <Style TargetType="Button" BasedOn="{StaticResource Button.Secondary}">
                                    <Setter Property="Margin" Value="0,0,8,0"/>
                                </Style>
                            </StackPanel.Resources>
                            <Button Command="{Binding RemoveTestCaseCommand}"
                                    Content="ðŸ—‘ï¸ Delete"
                                    Style="{StaticResource Button.Secondary}"
                                    ToolTip="Delete this test case"/>
                        </StackPanel>
                    </StackPanel>
                    </ScrollViewer>
                    
                    <!-- Empty State when no test case selected -->
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Visibility="{Binding SelectedTestCase, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="ðŸ“"
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   Opacity="0.3"/>
                        <TextBlock Text="Select a test case to edit"
                                   FontSize="14"
                                   Foreground="{StaticResource MenuForeground}"
                                   Opacity="0.5"
                                   TextAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Error/Busy Overlay -->
        <Border Grid.Row="0" Grid.RowSpan="4"
                Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="200"
                             Height="4"
                             Margin="0,0,0,16"/>
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="White"
                           FontSize="14"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>