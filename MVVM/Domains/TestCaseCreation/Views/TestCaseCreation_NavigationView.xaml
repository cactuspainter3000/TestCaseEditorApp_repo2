<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.TestCaseCreation.Views.TestCaseCreation_NavigationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="800"
             UseLayoutRounding="True">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/DesignSystem.xaml"/>
                <ResourceDictionary Source="/Resources/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Padding="6" ClipToBounds="True">
        <Grid VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Selection Counter -->
            <Border Grid.Column="0"
                    Background="{StaticResource Brush.Background.Header}"
                    BorderBrush="{StaticResource Brush.Border.Default}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource Radius.SM}"
                    Padding="8,4"
                    VerticalAlignment="Center"
                    MinWidth="70">
                <TextBlock Foreground="{StaticResource Brush.Text.Secondary}"
                           FontSize="11"
                           TextAlignment="Center">
                    <Run Text="{Binding SelectedCount, Mode=OneWay}"/>
                    <Run Text="/"/>
                    <Run Text="{Binding TotalCount, Mode=OneWay}"/>
                </TextBlock>
            </Border>

            <!-- Custom Dropdown with Popup -->
            <Grid Grid.Column="2" 
                  Margin="0,0,8,0"
                  VerticalAlignment="Center">
                
                <!-- Dropdown Header Button -->
                <ToggleButton x:Name="RequirementsDropdownButton"
                              Style="{StaticResource ActionToggleButton}"
                              IsChecked="{Binding IsDropdownOpen, Mode=TwoWay}"
                              HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch"
                              FontWeight="Normal"
                              Padding="6,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ“‹" 
                                      FontSize="12" 
                                      Margin="0,0,6,0"
                                      VerticalAlignment="Center"/>
                            
                            <TextBlock Text="{Binding SelectionDisplayText}" 
                                      FontSize="12"
                                      Foreground="{StaticResource Brush.Text.Primary}"
                                      VerticalAlignment="Center"
                                      TextTrimming="CharacterEllipsis"/>
                        </StackPanel>

                        <TextBlock Grid.Column="1" 
                                  Text="â–¼" 
                                  FontSize="10"
                                  Foreground="{StaticResource Brush.Text.Secondary}"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center">
                            <TextBlock.RenderTransform>
                                <RotateTransform Angle="0"/>
                            </TextBlock.RenderTransform>
                            <TextBlock.RenderTransformOrigin>0.5,0.5</TextBlock.RenderTransformOrigin>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDropdownOpen}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                       To="180" Duration="0:0:0.3"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                       To="0" Duration="0:0:0.3"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </ToggleButton>

                <!-- Popup Content -->
                <Popup x:Name="RequirementsPopup"
                       IsOpen="{Binding IsDropdownOpen, Mode=TwoWay}"
                       PlacementTarget="{Binding ElementName=RequirementsDropdownButton}"
                       Placement="Bottom"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       PopupAnimation="Fade">
                    
                    <Border Background="{StaticResource Brush.Background.Menu}"
                            BorderBrush="{StaticResource Brush.Border.Default}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource Radius.SM}"
                            Padding="8"
                            MinWidth="{Binding ActualWidth, ElementName=RequirementsDropdownButton}"
                            MaxWidth="600"
                            MaxHeight="400">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <TextBlock Grid.Row="0" 
                                      Text="Choose requirements to generate test cases for" 
                                      FontSize="11" 
                                      Foreground="{StaticResource Brush.Text.Secondary}"
                                      TextWrapping="Wrap"
                                      Margin="0,0,0,8"/>

                            <!-- Requirements List with Checkboxes -->
                            <ScrollViewer Grid.Row="1"
                                         VerticalScrollBarVisibility="Auto"
                                         HorizontalScrollBarVisibility="Disabled">
                                <ItemsControl ItemsSource="{Binding AvailableRequirements}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="Transparent"
                                                    BorderBrush="{StaticResource Brush.Border.Default}"
                                                    BorderThickness="0,0,0,1"
                                                    Padding="4,2">
                                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                         Foreground="{StaticResource Brush.Text.Primary}">
                                                    <CheckBox.Content>
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding Item}" 
                                                                      FontWeight="SemiBold"
                                                                      FontSize="11"
                                                                      Foreground="{StaticResource Brush.Text.Primary}"/>
                                                            <TextBlock Text="{Binding Description}" 
                                                                      FontSize="9"
                                                                      Foreground="{StaticResource Brush.Text.Secondary}"
                                                                      TextWrapping="Wrap"
                                                                      Margin="0,0,0,0"
                                                                      MaxHeight="30"
                                                                      TextTrimming="CharacterEllipsis"/>
                                                        </StackPanel>
                                                    </CheckBox.Content>
                                                </CheckBox>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- Selection Actions -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                                <Button Content="Select All" 
                                       Command="{Binding SelectAllCommand}"
                                       Style="{StaticResource ActionButton}"
                                       FontSize="10"
                                       Padding="8,4"
                                       Margin="0,0,4,0"/>
                                <Button Content="Clear" 
                                       Command="{Binding ClearSelectionCommand}"
                                       Style="{StaticResource ActionButton}"
                                       FontSize="10"
                                       Padding="8,4"
                                       Margin="4,0,4,0"/>
                                <Button Content="Done" 
                                       Command="{Binding CloseDropdownCommand}"
                                       Style="{StaticResource PrimaryButton}"
                                       FontSize="10"
                                       Padding="12,4"
                                       Margin="4,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Popup>
            </Grid>

            <!-- Quick Actions -->
            <StackPanel Grid.Column="3" Orientation="Horizontal">
                <Button Content="âœ“ All" 
                       Command="{Binding SelectAllCommand}"
                       Style="{StaticResource ActionButton}"
                       FontSize="10"
                       Padding="6,3"
                       Margin="0,0,4,0"
                       ToolTip="Select all requirements"/>
                <Button Content="âœ— Clear" 
                       Command="{Binding ClearSelectionCommand}"
                       Style="{StaticResource ActionButton}"
                       FontSize="10"
                       Padding="6,3"
                       ToolTip="Clear selection"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
