<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.NewProject.Views.NewProjectHeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="800">
    
    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>
    
    <Border Background="#2B2B2B" Padding="4">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left: Title with Icon -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="ðŸš€" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding Title}" Foreground="DarkOrange" FontWeight="Bold" FontSize="12"/>
                    <TextBlock Text="{Binding Subtitle}" Foreground="#CCCCCC" FontSize="9"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Right: Progress Indicator and AnythingLLM Status -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                
                <!-- AnythingLLM Status Display -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                    <!-- Status indicator dot with spinning animation when starting -->
                    <Border Width="8" Height="8" 
                            Margin="0,0,6,0"
                            VerticalAlignment="Center"
                            CornerRadius="4">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#CC6666"/> <!-- Red -->
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAnythingLLMStarting}" Value="True">
                                        <Setter Property="Background" Value="Orange"/> <!-- Orange when starting -->
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsAnythingLLMAvailable}" Value="True">
                                        <Setter Property="Background" Value="#66CC66"/> <!-- Green when connected -->
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        
                        <!-- Spinning animation for startup -->
                        <Border Width="6" Height="6" 
                                Background="White" 
                                Opacity="0.8"
                                CornerRadius="3"
                                Visibility="{Binding IsAnythingLLMStarting, Converter={StaticResource BoolToVis}}">
                            <Border.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotate"/>
                            </Border.RenderTransform>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                                           Storyboard.TargetProperty="Angle"
                                                           From="0" To="360" Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                        </Border>
                    </Border>
                    
                    <!-- Status text with real-time messages -->
                    <TextBlock VerticalAlignment="Center" 
                              FontSize="10"
                              Foreground="#FFB8B8B8">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <!-- Show startup message when starting -->
                                <Setter Property="Text" Value="{Binding AnythingLLMStatusMessage}"/>
                                <Style.Triggers>
                                    <!-- Default states when not starting -->
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsAnythingLLMStarting}" Value="False"/>
                                            <Condition Binding="{Binding IsAnythingLLMAvailable}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Text" Value="AnythingLLM â€” connected"/>
                                    </MultiDataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsAnythingLLMStarting}" Value="False"/>
                                            <Condition Binding="{Binding IsAnythingLLMAvailable}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Text" Value="AnythingLLM â€” disconnected"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
                
                <!-- Project Creation Progress Steps -->
                
                <!-- Step 1: Create Workspace (combines workspace name + creation) -->
                <Border Background="Transparent" CornerRadius="10" Padding="6,3" Margin="0,0,8,0">
                    <TextBlock FontSize="10" VerticalAlignment="Center" Text="Create Workspace">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#777777"/>
                                <Setter Property="FontWeight" Value="Normal"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding HasWorkspaceName}" Value="True"/>
                                            <Condition Binding="{Binding IsWorkspaceCreated}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <MultiDataTrigger.Setters>
                                            <Setter Property="Foreground" Value="DarkOrange"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </MultiDataTrigger.Setters>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>
                
                <!-- Step 2: Select Requirements -->
                <Border Background="Transparent" CornerRadius="10" Padding="6,3" Margin="0,0,8,0">
                    <TextBlock FontSize="10" VerticalAlignment="Center" Text="Select Requirements">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#777777"/>
                                <Setter Property="FontWeight" Value="Normal"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasSelectedDocument}" Value="True">
                                        <Setter Property="Foreground" Value="DarkOrange"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>
                
                <!-- Step 3: Project Configuration (combines project name + save path) -->
                <Border Background="Transparent" CornerRadius="10" Padding="6,3">
                    <TextBlock FontSize="10" VerticalAlignment="Center" Text="Project Configuration">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#777777"/>
                                <Setter Property="FontWeight" Value="Normal"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding HasProjectName}" Value="True"/>
                                            <Condition Binding="{Binding HasProjectSavePath}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <MultiDataTrigger.Setters>
                                            <Setter Property="Foreground" Value="DarkOrange"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </MultiDataTrigger.Setters>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>