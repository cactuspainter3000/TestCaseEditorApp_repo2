<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.NewProject.Views.NewProject_MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             mc:Ignorable="d" d:DesignWidth="900"
             Background="#2B2B2B">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:InvertBoolConverter x:Key="InvertBoolConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="15">
        <ScrollViewer.Resources>
            <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
        </ScrollViewer.Resources>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Step 1: Workspace Setup -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="Workspace Setup" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="DarkOrange" 
                           Margin="0,0,0,8"/>

                <Border Background="Transparent" 
                        CornerRadius="8" 
                        Padding="15" 
                        BorderThickness="1">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="BorderBrush" Value="#444444"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsWorkspaceCreated}" Value="True">
                                    <Setter Property="BorderBrush" Value="DarkOrange"/>
                                    <Setter Property="Background" Value="#3A3A3A"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="3"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Description -->
                        <TextBlock Grid.Row="0"
                               Text="Create your AnythingLLM workspace for AI-powered analysis." 
                               Foreground="#CCCCCC" 
                               TextWrapping="Wrap" 
                               LineHeight="20"/>

                        <!-- Input Section - Labels -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Workspace Name Label -->
                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                       Text="Workspace Name" 
                                       Foreground="#CCCCCC" 
                                       FontWeight="SemiBold"/>

                                <TextBlock Grid.Column="2"
                                       Text="ðŸ”¥" 
                                       VerticalAlignment="Center"
                                       ToolTip="This name already exists"
                                       Visibility="{Binding IsDuplicateName, Converter={StaticResource BoolToVis}}"/>
                            </Grid>

                            <!-- Description Label -->
                            <TextBlock Grid.Column="2"
                                   Text="Description (Optional)" 
                                   Foreground="#CCCCCC" 
                                   FontWeight="SemiBold"/>
                        </Grid>

                        <!-- Input Section - Fields -->
                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Workspace Name Input -->
                            <Border Grid.Column="0"
                                Style="{StaticResource ModernInputBorder}"
                                Height="36">
                                <TextBox Text="{Binding WorkspaceName, UpdateSourceTrigger=PropertyChanged}" 
                                     Tag="Enter workspace name (e.g., 'Project Alpha Analysis')">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource ModernInputTextBox}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDuplicateName}" Value="True">
                                                    <Setter Property="Foreground" Value="#FFD700"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Setter Property="FontStyle" Value="Italic"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </Border>

                            <!-- Description Input -->
                            <Border Grid.Column="2"
                                Style="{StaticResource ModernInputBorder}"
                                Height="36">
                                <TextBox Text="{Binding WorkspaceDescription, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource ModernInputTextBox}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Tag="Brief description of this project"/>
                            </Border>
                        </Grid>

                        <!-- Button and Validation Row -->
                        <Grid Grid.Row="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
                            </Grid.ColumnDefinitions>

                            <!-- Validation Message (Errors Only) -->
                            <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    Visibility="{Binding HasValidationMessage, Converter={StaticResource BoolToVis}}"
                                    VerticalAlignment="Center">
                                <Border Background="#FFE6E6"
                                    BorderBrush="#FF6B6B"
                                    BorderThickness="1"
                                    Padding="12,8"
                                    CornerRadius="4">

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" 
                                               Text="&#xE783;" 
                                               Foreground="#FF6B6B"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"/>

                                        <TextBlock Text="{Binding WorkspaceValidationMessage}"
                                               Foreground="#D32F2F"
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Create Workspace Button -->
                            <Button Grid.Column="2"
                                Command="{Binding ValidateWorkspaceCommand}"
                                Style="{StaticResource ActionButton}"
                                Cursor="Hand"
                                Width="180"
                                IsEnabled="{Binding IsWorkspaceCreated, Converter={StaticResource InvertBoolConverter}}">

                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Create Workspace"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsValidatingWorkspace}" Value="True">
                                                    <Setter Property="Text" Value="Creating..."/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsWorkspaceCreated}" Value="True">
                                                    <Setter Property="Text" Value="âœ… Workspace Created"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Button>
                        </Grid>

                    </Grid>
                </Border>
            </StackPanel>

            <!-- Step 2: Select Requirements -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="Select Requirements" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="DarkOrange" 
                           Margin="0,0,0,8"/>

                <Border Background="Transparent" 
                        CornerRadius="8" 
                        Padding="15" 
                        BorderThickness="2">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="BorderBrush" Value="#444444"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasSelectedDocument}" Value="True">
                                    <Setter Property="BorderBrush" Value="DarkOrange"/>
                                    <Setter Property="Background" Value="#3A3A3A"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Select the Word document containing your requirements." 
                                   Foreground="#CCCCCC" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,15"
                                   LineHeight="20"/>

                            <DockPanel>
                                <Button DockPanel.Dock="Right" 
                                    Style="{StaticResource ActionButton}"
                                    Margin="10,0,0,0"
                                    Command="{Binding SelectDocumentCommand}"
                                    IsEnabled="{Binding HasSelectedDocument, Converter={StaticResource InvertBoolConverter}}">
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Browse..."/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasSelectedDocument}" Value="True">
                                                        <Setter Property="Text" Value="âœ… Selected..."/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Button>

                                <Border Background="#444444" 
                                    CornerRadius="4" 
                                    Padding="12,8"
                                    BorderBrush="#555555"
                                    BorderThickness="1">
                                    <TextBlock Text="{Binding SelectedDocumentPath, FallbackValue='No document selected'}" 
                                           Foreground="#CCCCCC"
                                           VerticalAlignment="Center"/>
                                </Border>
                            </DockPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Step 3: Project Configuration -->
            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <TextBlock Text="Project Configuration" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="DarkOrange" 
                           Margin="0,0,0,8"/>

                <Border Background="Transparent" 
                        CornerRadius="8" 
                        Padding="15" 
                        BorderThickness="2">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="BorderBrush" Value="#444444"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding HasProjectName}" Value="True"/>
                                        <Condition Binding="{Binding HasProjectSavePath}" Value="True"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="BorderBrush" Value="DarkOrange"/>
                                    <Setter Property="Background" Value="#3A3A3A"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Configure your project name and save location." 
                                   Foreground="#CCCCCC" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,15"
                                   LineHeight="20"/>

                            <!-- Project Name -->
                            <Grid Margin="0,0,0,15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                       Text="Project Name" 
                                       Foreground="#CCCCCC" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>

                                <Border Grid.Row="1" 
                                    Style="{StaticResource ModernInputBorder}">
                                    <TextBox Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernInputTextBox}"/>
                                </Border>
                            </Grid>

                            <!-- Save Location -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                       Text="Project File Location" 
                                       Foreground="#CCCCCC" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>

                                <DockPanel Grid.Row="1">
                                    <Button DockPanel.Dock="Right" 
                                        Style="{StaticResource ActionButton}"
                                        Margin="10,0,0,0"
                                        Command="{Binding ChooseProjectSaveLocationCommand}"
                                        IsEnabled="{Binding HasProjectSavePath, Converter={StaticResource InvertBoolConverter}}">
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="Choose..."/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasProjectSavePath}" Value="True">
                                                            <Setter Property="Text" Value="âœ… Chosen"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Button>

                                    <Border Background="#444444" 
                                        CornerRadius="4" 
                                        Padding="12,8"
                                        BorderBrush="#555555"
                                        BorderThickness="1">
                                        <TextBlock Text="{Binding ProjectSavePath, FallbackValue='Choose location to save project file (.tcex.json)'}" 
                                               Foreground="#CCCCCC"
                                               VerticalAlignment="Center"/>
                                    </Border>
                                </DockPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Action Buttons -->
            <Border Grid.Row="3" 
                    Margin="0,15,0,0"
                    Background="Transparent" 
                    CornerRadius="8" 
                    Padding="15" 
                    BorderBrush="#444444"
                    BorderThickness="1">
                <StackPanel>
                    <!-- Action Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1" 
                                Content="Cancel" 
                                Style="{StaticResource ActionButton}"
                                Margin="0,0,10,0"
                                Command="{Binding CancelCommand}"/>

                        <Button Grid.Column="2" 
                                Content="{Binding CreateProjectButtonText}" 
                                ToolTip="{Binding CreateProjectButtonTooltip}"
                                FontWeight="SemiBold"
                                FontSize="14"
                                Command="{Binding CreateProjectCommand}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource ActionButton}">
                                    <Setter Property="IsEnabled" Value="{Binding CanProceed}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsProjectCreated}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>