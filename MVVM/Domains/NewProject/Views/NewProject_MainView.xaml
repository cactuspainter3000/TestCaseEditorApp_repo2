<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.NewProject.Views.NewProject_MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             mc:Ignorable="d" d:DesignWidth="900"
             Background="#2B2B2B">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:InvertBoolConverter x:Key="InvertBoolConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="15">
        <ScrollViewer.Resources>
            <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
        </ScrollViewer.Resources>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Step 1: Workspace Setup -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="Workspace Setup" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="DarkOrange" 
                           Margin="0,0,0,8"/>

                <Border Background="Transparent" 
                        CornerRadius="8" 
                        Padding="15" 
                        BorderThickness="1">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="BorderBrush" Value="#444444"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsWorkspaceCreated}" Value="True">
                                    <Setter Property="BorderBrush" Value="DarkOrange"/>
                                    <Setter Property="Background" Value="#3A3A3A"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="3"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Description -->
                        <TextBlock Grid.Row="0"
                               Text="Create your AnythingLLM workspace for AI-powered analysis." 
                               Foreground="#CCCCCC" 
                               TextWrapping="Wrap" 
                               LineHeight="20"/>

                        <!-- Input Section - Labels -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Workspace Name Label -->
                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                       Text="Workspace Name" 
                                       Foreground="#CCCCCC" 
                                       FontWeight="SemiBold"/>

                                <TextBlock Grid.Column="2"
                                       Text="ðŸ”¥" 
                                       VerticalAlignment="Center"
                                       ToolTip="This name already exists"
                                       Visibility="{Binding IsDuplicateName, Converter={StaticResource BoolToVis}}"/>
                            </Grid>

                            <!-- Description Label -->
                            <TextBlock Grid.Column="2"
                                   Text="Description (Optional)" 
                                   Foreground="#CCCCCC" 
                                   FontWeight="SemiBold"/>
                        </Grid>

                        <!-- Input Section - Fields -->
                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Workspace Name Input -->
                            <Border Grid.Column="0"
                                Style="{StaticResource ModernInputBorder}"
                                Height="36">
                                <TextBox Text="{Binding WorkspaceName, UpdateSourceTrigger=PropertyChanged}" 
                                     Tag="Enter workspace name (e.g., 'Project Alpha Analysis')">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource ModernInputTextBox}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDuplicateName}" Value="True">
                                                    <Setter Property="Foreground" Value="#FFD700"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Setter Property="FontStyle" Value="Italic"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </Border>

                            <!-- Description Input -->
                            <Border Grid.Column="2"
                                Style="{StaticResource ModernInputBorder}"
                                Height="36">
                                <TextBox Text="{Binding WorkspaceDescription, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource ModernInputTextBox}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Tag="Brief description of this project"/>
                            </Border>
                        </Grid>

                        <!-- Button and Validation Row -->
                        <Grid Grid.Row="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
                            </Grid.ColumnDefinitions>

                            <!-- Validation Message (Errors Only) -->
                            <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    Visibility="{Binding HasValidationMessage, Converter={StaticResource BoolToVis}}"
                                    VerticalAlignment="Center">
                                <Border Background="#FFE6E6"
                                    BorderBrush="#FF6B6B"
                                    BorderThickness="1"
                                    Padding="12,8"
                                    CornerRadius="4">

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" 
                                               Text="&#xE783;" 
                                               Foreground="#FF6B6B"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"/>

                                        <TextBlock Text="{Binding WorkspaceValidationMessage}"
                                               Foreground="#D32F2F"
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Create Workspace Button -->
                            <Button Grid.Column="2"
                                Command="{Binding ValidateWorkspaceCommand}"
                                Style="{StaticResource ActionButton}"
                                Cursor="Hand"
                                Width="180"
                                IsEnabled="{Binding IsWorkspaceCreated, Converter={StaticResource InvertBoolConverter}}">

                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Create Workspace"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsValidatingWorkspace}" Value="True">
                                                    <Setter Property="Text" Value="Creating..."/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsWorkspaceCreated}" Value="True">
                                                    <Setter Property="Text" Value="âœ… Workspace Created"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Button>
                        </Grid>

                    </Grid>
                </Border>
            </StackPanel>

            <!-- Single Import Requirements Section with Toggle -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="Import Requirements" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="DarkOrange" 
                           Margin="0,0,0,8"/>

                <Border Background="Transparent" 
                        CornerRadius="8" 
                        Padding="15" 
                        BorderThickness="2"
                        BorderBrush="#444444">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Jama Import Section (Default) -->
                        <StackPanel Grid.Row="0" 
                                    Visibility="{Binding IsJamaImportMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            
                            <TextBlock Text="Import requirements directly from your Jama Connect instance." 
                                   Foreground="#CCCCCC" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,10"
                                   LineHeight="20"/>

                            <!-- Connection Status Display -->
                            <Border Background="#2A2A2A" 
                                    CornerRadius="4" 
                                    Padding="8,4"
                                    Margin="0,0,0,15"
                                    BorderThickness="1">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="#555555"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasConnectionError}" Value="True">
                                                <Setter Property="BorderBrush" Value="#CC6666"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding JamaConnectionStatus}" 
                                           FontSize="11"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#CCCCCC"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasConnectionError}" Value="True">
                                                    <Setter Property="Foreground" Value="#CC6666"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="15"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Load Projects Button -->
                                <Button Grid.Row="0"
                                    Style="{StaticResource ActionButton}"
                                    Command="{Binding LoadJamaProjectsCommand}"
                                    HorizontalAlignment="Left">
                                    <TextBlock Text="Load Jama Projects" />
                                </Button>
                                
                                <!-- Project Selection Section -->
                                <Border Grid.Row="2"
                                        Background="#2A2A2A" 
                                        CornerRadius="6" 
                                        BorderBrush="#555555"
                                        BorderThickness="1"
                                        Padding="15"
                                        Visibility="{Binding AvailableProjects.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="10"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="10"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="15"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Projects Header -->
                                        <DockPanel Grid.Row="0">
                                            <Button DockPanel.Dock="Right"
                                                    Content="ðŸ”„ Refresh"
                                                    Command="{Binding LoadJamaProjectsCommand}"
                                                    Style="{StaticResource ActionButton}"
                                                    FontSize="11"
                                                    Padding="8,4"
                                                    Margin="10,0,0,0"/>
                                            <TextBlock Text="Select Jama Project:" 
                                                       FontWeight="SemiBold" 
                                                       Foreground="#DDDDDD"/>
                                        </DockPanel>
                                        
                                        <!-- Projects List -->
                                        <Border Grid.Row="2"
                                                Background="#1E1E1E"
                                                CornerRadius="4"
                                                BorderBrush="#555555"
                                                BorderThickness="1"
                                                MaxHeight="150">
                                            <Grid>
                                                <ListBox ItemsSource="{Binding AvailableProjects}"
                                                         SelectedItem="{Binding SelectedProject, Mode=TwoWay}"
                                                         Background="Transparent"
                                                         BorderThickness="0"
                                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Padding="8,6" Margin="2">
                                                                <StackPanel>
                                                                    <DockPanel>
                                                                        <TextBlock DockPanel.Dock="Right"
                                                                                   Text="{Binding Key, StringFormat='({0})'}"
                                                                                   Foreground="#888888"
                                                                                   FontSize="10"
                                                                                   VerticalAlignment="Center"
                                                                                   Margin="8,0,0,0"/>
                                                                        <TextBlock Text="{Binding Name}" 
                                                                                   FontWeight="SemiBold" 
                                                                                   Foreground="#DDDDDD"
                                                                                   FontSize="12"/>
                                                                    </DockPanel>
                                                                    
                                                                    <TextBlock Text="{Binding Description}" 
                                                                               Foreground="#AAAAAA" 
                                                                               FontSize="10"
                                                                               TextWrapping="Wrap"
                                                                               Margin="0,2,0,0"
                                                                               Visibility="{Binding Description, Converter={StaticResource EmptyStringToCollapsedConverter}}"/>
                                                                    
                                                                    <TextBlock Text="{Binding RequirementCount, StringFormat='{}{0} requirements'}" 
                                                                               Foreground="DarkOrange" 
                                                                               FontSize="10"
                                                                               FontWeight="Medium"
                                                                               Margin="0,3,0,0"
                                                                               Visibility="{Binding RequirementCount, Converter={StaticResource CountToVisibilityConverter}}"/>
                                                                </StackPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                    <ListBox.ItemContainerStyle>
                                                        <Style TargetType="ListBoxItem">
                                                            <Setter Property="Background" Value="Transparent"/>
                                                            <Setter Property="BorderThickness" Value="0"/>
                                                            <Setter Property="Padding" Value="0"/>
                                                            <Setter Property="Margin" Value="0"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#333333"/>
                                                                </Trigger>
                                                                <Trigger Property="IsSelected" Value="True">
                                                                    <Setter Property="Background" Value="DarkOrange"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ListBox.ItemContainerStyle>
                                                </ListBox>
                                                
                                                <!-- Loading overlay -->
                                                <Border Background="#99000000"
                                                        Visibility="{Binding IsLoadingProjects, Converter={StaticResource BoolToVis}}"
                                                        CornerRadius="4">
                                                    <TextBlock Text="ðŸ”„ Loading projects..." 
                                                               Foreground="#DDDDDD" 
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                        
                                        <!-- Selected Project Actions -->
                                        <StackPanel Grid.Row="4"
                                                    Orientation="Horizontal"
                                                    Visibility="{Binding SelectedProject, Converter={StaticResource NullToCollapsedConverter}}">
                                            <Button Content="ðŸ“‹ Load Requirements" 
                                                    Command="{Binding LoadRequirementsCommand}"
                                                    Style="{StaticResource ActionButton}"
                                                    Background="#6C63FF"
                                                    Margin="0,0,10,0"
                                                    Visibility="{Binding RequirementsCount, Converter={StaticResource ZeroToVisibleConverter}}"/>
                                                    
                                            <StackPanel Orientation="Horizontal"
                                                        Visibility="{Binding RequirementsCount, Converter={StaticResource CountToVisibilityConverter}}">
                                                <TextBlock Text="âœ…" 
                                                           Foreground="#28A745" 
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding RequirementsCount, StringFormat='{}{0} requirements loaded'}" 
                                                           Foreground="#28A745" 
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                            
                                            <Grid Visibility="{Binding IsLoadingRequirements, Converter={StaticResource BoolToVis}}">
                                                <TextBlock Text="â³ Loading requirements..." 
                                                           Foreground="#AAAAAA"/>
                                            </Grid>
                                        </StackPanel>
                                        
                                        <!-- Import Button -->
                                        <Button Grid.Row="6"
                                                Content="ðŸš€ Import These Requirements"
                                                Command="{Binding ImportSelectedRequirementsCommand}"
                                                Style="{StaticResource ActionButton}"
                                                Background="#28A745"
                                                HorizontalAlignment="Left"
                                                Visibility="{Binding RequirementsCount, Converter={StaticResource CountToVisibilityConverter}}"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </StackPanel>

                        <!-- Document Import Section -->
                        <StackPanel Grid.Row="0"
                                    Visibility="{Binding IsJamaImportMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            
                            <TextBlock Text="Select a Word document containing your requirements." 
                                   Foreground="#CCCCCC" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,15"
                                   LineHeight="20"/>

                            <DockPanel>
                                <Button DockPanel.Dock="Right" 
                                    Style="{StaticResource ActionButton}"
                                    Margin="10,0,0,0"
                                    Command="{Binding SelectDocumentCommand}"
                                    IsEnabled="{Binding HasSelectedDocument, Converter={StaticResource InvertBoolConverter}}">
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Browse..."/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasSelectedDocument}" Value="True">
                                                        <Setter Property="Text" Value="âœ… Selected..."/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Button>

                                <Border Background="#444444" 
                                    CornerRadius="4" 
                                    Padding="12,8"
                                    BorderBrush="#555555"
                                    BorderThickness="1">
                                    <TextBlock Text="{Binding SelectedDocumentPath, FallbackValue='No document selected'}" 
                                           Foreground="#CCCCCC"
                                           VerticalAlignment="Center"/>
                                </Border>
                            </DockPanel>
                            
                            <!-- Import Document Button -->
                            <Button Content="ðŸš€ Import Requirements from Document"
                                    Command="{Binding ImportSelectedRequirementsCommand}"
                                    Style="{StaticResource ActionButton}"
                                    Background="#28A745"
                                    HorizontalAlignment="Left"
                                    Margin="0,15,0,0"
                                    Visibility="{Binding HasSelectedDocument, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>
                        
                        <!-- Toggle Button (Subtle, Lower Right) -->
                        <Button Grid.Row="2" HorizontalAlignment="Right" 
                                Command="{Binding SwitchImportModeCommand}"
                                Background="Transparent" 
                                Foreground="#888888"
                                BorderBrush="#555555"
                                BorderThickness="1"
                                Padding="8,3" 
                                Margin="0,10,0,0" 
                                FontSize="10"
                                Opacity="0.7"
                                ToolTip="Switch between Jama Connect and Document import methods">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#333333"/>
                                            <Setter Property="Opacity" Value="1"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <TextBlock FontSize="10" Foreground="#AAAAAA">
                                <Run Text="â‡„ " />
                                <Run Text="{Binding IsJamaImportMode, Converter={StaticResource BooleanToTextConverter}, ConverterParameter='Document|Jama'}" />
                            </TextBlock>
                        </Button>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Step 3: Now moved to Step 2 with toggle functionality -->

            <!-- Step 3: Project Configuration -->
            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <TextBlock Text="Project Configuration" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="DarkOrange" 
                           Margin="0,0,0,8"/>

                <Border Background="Transparent" 
                        CornerRadius="8" 
                        Padding="15" 
                        BorderThickness="2">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="BorderBrush" Value="#444444"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding HasProjectName}" Value="True"/>
                                        <Condition Binding="{Binding HasProjectSavePath}" Value="True"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="BorderBrush" Value="DarkOrange"/>
                                    <Setter Property="Background" Value="#3A3A3A"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Configure your project name and save location." 
                                   Foreground="#CCCCCC" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,15"
                                   LineHeight="20"/>

                            <!-- Project Name -->
                            <Grid Margin="0,0,0,15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                       Text="Project Name" 
                                       Foreground="#CCCCCC" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>

                                <Border Grid.Row="1" 
                                    Style="{StaticResource ModernInputBorder}">
                                    <TextBox Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernInputTextBox}"/>
                                </Border>
                            </Grid>

                            <!-- Save Location -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                       Text="Project File Location" 
                                       Foreground="#CCCCCC" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>

                                <DockPanel Grid.Row="1">
                                    <Button DockPanel.Dock="Right" 
                                        Style="{StaticResource ActionButton}"
                                        Margin="10,0,0,0"
                                        Command="{Binding ChooseProjectSaveLocationCommand}"
                                        IsEnabled="{Binding HasProjectSavePath, Converter={StaticResource InvertBoolConverter}}">
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="Choose..."/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasProjectSavePath}" Value="True">
                                                            <Setter Property="Text" Value="âœ… Chosen"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Button>

                                    <Border Background="#444444" 
                                        CornerRadius="4" 
                                        Padding="12,8"
                                        BorderBrush="#555555"
                                        BorderThickness="1">
                                        <TextBlock Text="{Binding ProjectSavePath, FallbackValue='Choose location to save project file (.tcex.json)'}" 
                                               Foreground="#CCCCCC"
                                               VerticalAlignment="Center"/>
                                    </Border>
                                </DockPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Action Buttons -->
            <Border Grid.Row="3" 
                    Margin="0,15,0,0"
                    Background="Transparent" 
                    CornerRadius="8" 
                    Padding="15" 
                    BorderBrush="#444444"
                    BorderThickness="1">
                <StackPanel>
                    <!-- Action Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1" 
                                Content="Cancel" 
                                Style="{StaticResource ActionButton}"
                                Margin="0,0,10,0"
                                Command="{Binding CancelCommand}"/>

                        <Button Grid.Column="2" 
                                Content="{Binding CreateProjectButtonText}" 
                                ToolTip="{Binding CreateProjectButtonTooltip}"
                                FontWeight="SemiBold"
                                FontSize="14"
                                Command="{Binding CreateProjectCommand}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource ActionButton}">
                                    <Setter Property="IsEnabled" Value="{Binding CanProceed}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsProjectCreated}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>