<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.Startup.Views.StartupTitleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:TestCaseEditorApp.MVVM.Domains.Startup.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="400"
             d:DataContext="{d:DesignInstance Type=vm:StartupTitleVM}">
    
    <Grid>
        <!-- Application Title using global TitleText style with size/weight adjustments -->
        <TextBlock Text="{Binding Title}"
                   Style="{StaticResource TitleText}"
                   FontSize="20"
                   FontWeight="Normal"
                   HorizontalAlignment="Left"
                   Margin="10,0"/>
    </Grid>
</UserControl>