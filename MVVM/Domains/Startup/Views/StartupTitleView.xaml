<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.Startup.Views.StartupTitleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="400">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- Application Title -->
        <TextBlock Grid.Column="0"
                   Text="{Binding ApplicationName}"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="#2C3E50"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Margin="10,0"/>
        
        <!-- Startup Status Indicator -->
        <Border Grid.Column="1"
                Background="#3498DB"
                CornerRadius="10"
                Padding="8,3"
                Margin="0,0,10,0"
                Visibility="{Binding ShowStatusIndicator, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="Starting..."
                       Foreground="White"
                       FontSize="11"
                       FontWeight="Medium"/>
        </Border>
    </Grid>
</UserControl>