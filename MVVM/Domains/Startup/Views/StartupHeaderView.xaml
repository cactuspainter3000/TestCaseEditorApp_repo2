<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.Startup.Views.StartupHeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="60" d:DesignWidth="800">
    
    <Border Background="#F8F9FA"
            BorderBrush="#E9ECEF"
            BorderThickness="0,0,0,1">
        <Grid Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Startup Header Title -->
            <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock Text="{Binding HeaderTitle}"
                           FontSize="14"
                           FontWeight="Medium"
                           Foreground="#495057"
                           Margin="0,0,0,2"/>
                <TextBlock Text="{Binding HeaderSubtitle}"
                           FontSize="12"
                           Foreground="#6C757D"/>
            </StackPanel>
            
            <!-- Progress Indicator -->
            <StackPanel Grid.Column="1" 
                       Orientation="Horizontal" 
                       VerticalAlignment="Center"
                       Visibility="{Binding ShowProgress, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar Width="100"
                           Height="4"
                           Value="{Binding ProgressPercent}"
                           Background="#E9ECEF"
                           Foreground="#007ACC"
                           Margin="0,0,10,0"/>
                <TextBlock Text="{Binding ProgressText}"
                         FontSize="11"
                         Foreground="#6C757D"
                         VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>