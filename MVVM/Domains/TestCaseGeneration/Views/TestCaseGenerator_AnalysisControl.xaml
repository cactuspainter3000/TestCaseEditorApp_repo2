<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.TestCaseGeneration.Views.TestCaseGenerator_AnalysisControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TestCaseEditorApp.MVVM.ViewModels"
             xmlns:converters="clr-namespace:TestCaseEditorApp.Converters"
             DataContext="{Binding AnalysisVM}"
             MinHeight="200">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:NullOrEmptyToVisibilityConverter x:Key="NullOrEmptyToVisibilityConverter" />
        <converters:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisibilityConverter" />
        <converters:StringEmptyToVisibilityConverter x:Key="StringEmptyToVisibilityConverter" />
        
        <!-- Inverted converter for showing content when NOT analyzing -->
        <converters:BoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" Invert="True" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <ScrollViewer.Resources>
            <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
        </ScrollViewer.Resources>
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="Auto"/> <!-- Quality Score -->
                <RowDefinition Height="Auto"/> <!-- Issues -->
                <RowDefinition Height="Auto"/> <!-- Recommendations -->
                <RowDefinition Height="Auto"/> <!-- Freeform Feedback -->
                <RowDefinition Height="*"/>    <!-- Spacer -->
            </Grid.RowDefinitions>

            <!-- No analysis yet -->
            <StackPanel Grid.Row="0" Grid.RowSpan="6" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Visibility="{Binding HasNoAnalysis, Converter={StaticResource BoolToVisibilityConverter}}">
                
                <!-- Analyzing spinner -->
                <StackPanel Visibility="{Binding IsAnalyzing, Converter={StaticResource BoolToVisibilityConverter}}"
                            HorizontalAlignment="Center">
                    <TextBlock Text="â—" 
                               FontSize="48" 
                               Foreground="{DynamicResource AccentBrush}"
                               HorizontalAlignment="Center"
                               RenderTransformOrigin="0.5,0.5"
                               Margin="0,0,0,16">
                        <TextBlock.RenderTransform>
                            <RotateTransform x:Name="SpinnerRotate"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(RotateTransform.Angle)"
                                                         From="0" To="360" Duration="0:0:2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    <TextBlock Text="{Binding AnalysisStatusMessage}" 
                               FontSize="14" 
                               Foreground="#888888" 
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               MaxWidth="400"
                               TextAlignment="Center"/>
                </StackPanel>
                
                <!-- No analysis prompt -->
                <StackPanel Visibility="{Binding IsAnalyzing, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    
                    <!-- Error message (when analysis failed) -->
                    <StackPanel Visibility="{Binding AnalysisStatusMessage, Converter={StaticResource StringNotEmptyToVisibilityConverter}}">
                        <TextBlock Text="Analysis Failed" 
                                   FontSize="16" 
                                   Foreground="#CC6666" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,12"/>
                        <TextBlock Text="{Binding AnalysisStatusMessage}" 
                                   FontSize="14" 
                                   Foreground="#CC6666" 
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   MaxWidth="400"
                                   TextAlignment="Center"
                                   Margin="0,0,0,20"/>
                    </StackPanel>
                    
                    <!-- No analysis available (when not yet attempted) -->
                    <StackPanel Visibility="{Binding AnalysisStatusMessage, Converter={StaticResource StringEmptyToVisibilityConverter}}">
                        <TextBlock Text="No analysis available" 
                                   FontSize="16" 
                                   Foreground="#888888" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,12"/>
                        
                        <!-- Batch analyzing hint -->
                        <TextBlock Visibility="{Binding IsBatchAnalyzing, Converter={StaticResource BoolToVisibilityConverter}}"
                                   Text="Analysis results will appear here automatically" 
                                   FontSize="11" 
                                   Foreground="{DynamicResource AccentBrush}"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   MaxWidth="400"
                                   TextAlignment="Center"
                                   Margin="0,0,0,20"/>
                    </StackPanel>
                    
                    <Button Content="Analyze Now"
                            Command="{Binding AnalyzeRequirementCommand}"
                            Style="{StaticResource ActionButton}"
                            HorizontalAlignment="Center"
                            Margin="0,12,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Analysis content (when available) -->
            <Grid Grid.Row="0" Grid.RowSpan="6"
                  Visibility="{Binding HasAnalysis, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Header -->
                    <RowDefinition Height="Auto"/> <!-- Quality Score -->
                    <RowDefinition Height="Auto"/> <!-- Issues -->
                    <RowDefinition Height="Auto"/> <!-- Recommendations -->
                    <RowDefinition Height="Auto"/> <!-- Freeform Feedback -->
                </Grid.RowDefinitions>

                <!-- Header -->
                <DockPanel Grid.Row="0" Margin="0,0,0,12">
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                        <Button Content="Inspect Result"
                                Click="InspectResult_Click"
                                ToolTip="Debug: View parsed analysis result"
                                Style="{StaticResource PillActionButtonStyle}"
                                Margin="0,0,8,0"
                                VerticalAlignment="Top"/>
                        <Button Content="Edit"
                                Command="{Binding EditRequirementCommand}"
                                ToolTip="Edit requirement description and re-analyze"
                                Style="{StaticResource PillActionButtonStyle}"
                                VerticalAlignment="Top"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Requirement Quality Analysis" 
                                   Style="{StaticResource Text.H2}"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding AnalysisTimestamp}" 
                                   Style="{StaticResource Text.Caption}"/>
                    </StackPanel>
                </DockPanel>

                <!-- Quality Score -->
                <Border Grid.Row="1" 
                        Background="{DynamicResource MenuBackground}"
                        BorderBrush="{DynamicResource AccentBrush}"
                        BorderThickness="0,0,0,2"
                        Padding="12"
                        Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Quality Score" 
                                   Style="{StaticResource Text.H3}"
                                   Margin="0,0,0,6"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding QualityScore}" 
                                       FontSize="32" 
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource AccentBrush}"/>
                            <TextBlock Text=" / 10" 
                                       FontSize="20" 
                                       Foreground="#888888"
                                       VerticalAlignment="Bottom"
                                       Margin="4,0,0,4"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Issues -->
                <Border Grid.Row="2" 
                        Background="{DynamicResource MenuBackground}"
                        Padding="12"
                        Margin="0,0,0,10"
                        Visibility="{Binding HasIssues, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Issues Identified" 
                                   Style="{StaticResource Text.H3}"
                                   Margin="0,0,0,8"/>
                        <ItemsControl ItemsSource="{Binding Issues}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource ControlBackground}"
                                            Padding="12"
                                            Margin="0,0,0,8"
                                            CornerRadius="4">
                                        <StackPanel>
                                            <DockPanel Margin="0,0,0,6">
                                                <Border DockPanel.Dock="Right"
                                                        Padding="6,2"
                                                        CornerRadius="3">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#5C6B73"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Severity}" Value="High">
                                                                    <Setter Property="Background" Value="#D32F2F"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Severity}" Value="Medium">
                                                                    <Setter Property="Background" Value="#F57C00"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Severity}" Value="Low">
                                                                    <Setter Property="Background" Value="#5C6B73"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding Severity}" 
                                                               FontSize="10" 
                                                               Foreground="White"
                                                               FontWeight="SemiBold"/>
                                                </Border>
                                                <TextBlock Text="{Binding Category}" 
                                                           FontWeight="SemiBold"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource AccentBrush}"/>
                                            </DockPanel>
                                            <TextBlock Text="{Binding Description}" 
                                                       TextWrapping="Wrap"
                                                       FontSize="12"
                                                       Foreground="#CCCCCC"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Recommendations -->
                <Border Grid.Row="3" 
                        Background="{DynamicResource MenuBackground}"
                        Padding="12"
                        Margin="0,0,0,10"
                        Visibility="{Binding HasRecommendations, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Recommendations" 
                                   Style="{StaticResource Text.H3}"
                                   Margin="0,0,0,8"/>
                        <ItemsControl ItemsSource="{Binding Recommendations}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource ControlBackground}"
                                            Padding="12"
                                            Margin="0,0,0,8"
                                            CornerRadius="4">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Category}" 
                                                       FontWeight="SemiBold"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource AccentBrush}"
                                                       Margin="0,0,0,6"/>
                                            <TextBlock Text="{Binding Description}" 
                                                       TextWrapping="Wrap"
                                                       FontSize="12"
                                                       Foreground="#CCCCCC"
                                                       Margin="0,0,0,8"/>
                                            <TextBlock Text="{Binding Example}" 
                                                       TextWrapping="Wrap"
                                                       FontSize="11"
                                                       FontStyle="Italic"
                                                       Foreground="#888888"
                                                       Margin="0,0,0,6"
                                                       Visibility="{Binding Example, Converter={StaticResource NullOrEmptyToVisibilityConverter}}"/>
                                            
                                            <!-- Suggested Edit Section -->
                                            <Border Background="#1E4D72"
                                                    BorderBrush="#4A9EFF"
                                                    BorderThickness="1"
                                                    Padding="8"
                                                    CornerRadius="3"
                                                    Margin="0,6,0,0"
                                                    Visibility="{Binding SuggestedEdit, Converter={StaticResource NullOrEmptyToVisibilityConverter}}">
                                                <StackPanel>
                                                    <TextBlock Text="ðŸ’¡ Suggested Rewrite:" 
                                                               FontSize="10"
                                                               FontWeight="SemiBold"
                                                               Foreground="#4A9EFF"
                                                               Margin="0,0,0,4"/>
                                                    <TextBlock Text="{Binding SuggestedEdit}" 
                                                               TextWrapping="Wrap"
                                                               FontSize="11"
                                                               Foreground="#E6F3FF"
                                                               LineHeight="16"/>
                                                    <TextBlock Text="This incorporates details from supplemental information into the requirement text"
                                                               FontSize="9"
                                                               FontStyle="Italic"
                                                               Foreground="#8BBFFF"
                                                               Margin="0,4,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Freeform Feedback -->
                <Border Grid.Row="4" 
                        Background="{DynamicResource MenuBackground}"
                        Padding="12"
                        Visibility="{Binding HasFreeformFeedback, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Additional Feedback" 
                                   Style="{StaticResource Text.H3}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding FreeformFeedback}" 
                                   TextWrapping="Wrap"
                                   FontSize="12"
                                   Foreground="#CCCCCC"
                                   LineHeight="18"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
