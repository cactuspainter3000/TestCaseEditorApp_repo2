<UserControl x:Class="TestCaseEditorApp.MVVM.Domains.Dummy.Views.Dummy_HeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="400"
             Background="#1E1E1E">
    
    <Border BorderBrush="#FFA500" BorderThickness="2" CornerRadius="5" Padding="8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Side: Context Info -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="HEADER WORKSPACE" 
                           FontSize="9" FontWeight="Bold" 
                           Foreground="#FFA500" 
                           HorizontalAlignment="Left" Margin="0,0,0,2"/>
                
                <TextBlock Text="{Binding Title}" 
                           FontSize="11" FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Left" Margin="0,0,0,1"/>
                
                <TextBlock Text="{Binding Subtitle}" 
                           FontSize="8" 
                           Foreground="#CCCCCC" 
                           HorizontalAlignment="Left"/>
            </StackPanel>
            
            <!-- Center: Interactive Button -->
            <Button Grid.Column="1" 
                    Content="Header" 
                    Command="{Binding TestButtonCommand}"
                    VerticalAlignment="Center"
                    MinWidth="50"
                    Padding="8,3"
                    FontSize="9">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#4A4A4A"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#FFA500"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFA500"/>
                                            <Setter Property="BorderBrush" Value="#FFB84D"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#E6940A"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            
            <!-- Right Side: Status & Shared Message -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                <TextBlock Text="{Binding LastUpdated, StringFormat='â° {0:HH:mm:ss}'}" 
                           FontSize="8" 
                           Foreground="#666666" 
                           HorizontalAlignment="Right" Margin="0,0,0,1"/>
                           
                <TextBlock Text="{Binding SharedMessage}" 
                           FontSize="8" 
                           Foreground="#DDDDDD" 
                           HorizontalAlignment="Right" 
                           TextWrapping="Wrap"
                           MaxWidth="180"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>