<UserControl x:Class="TestCaseEditorApp.MVVM.Views.TestCaseGenerator_QuestionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TestCaseEditorApp.MVVM.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="520" d:DesignWidth="800"
             Background="Transparent">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderThickness="0" CornerRadius="4" Background="Transparent">
            <Grid>
                <!-- Questions list (visible when we have questions) -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ScrollViewer.Style>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding PendingQuestions.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Style>
                    <ItemsControl ItemsSource="{Binding PendingQuestions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type local:ClarifyingQuestionVM}">
                                <Border Margin="0,0,0,12" 
                                        Background="{StaticResource MenuBackground}" 
                                        BorderBrush="{StaticResource CardBorderBrush}" 
                                        BorderThickness="1" 
                                        CornerRadius="6" 
                                        Padding="16"
                                        x:Name="QuestionCard">
                                    <Grid x:Name="ContentGrid">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Opacity" Value="1"/>
                                                <Style.Triggers>
                                                    <!-- Fade out completely when marked for removal (assumption) -->
                                                    <DataTrigger Binding="{Binding IsFadingOut}" Value="True">
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                                     From="1.0"
                                                                                     To="0.0"
                                                                                     Duration="0:0:1.0">
                                                                        <DoubleAnimation.EasingFunction>
                                                                            <CubicEase EasingMode="EaseInOut"/>
                                                                        </DoubleAnimation.EasingFunction>
                                                                    </DoubleAnimation>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                    </DataTrigger>
                                                    <!-- Fade to 50% when submitted with answer (not an assumption) -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding MarkedAsAssumption}" Value="False"/>
                                                            <Condition Binding="{Binding IsSubmitted}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <MultiDataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                                     To="0.5"
                                                                                     Duration="0:0:0.5">
                                                                        <DoubleAnimation.EasingFunction>
                                                                            <CubicEase EasingMode="EaseOut"/>
                                                                        </DoubleAnimation.EasingFunction>
                                                                    </DoubleAnimation>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </MultiDataTrigger.EnterActions>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header: Category and Severity badges -->
                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8" Visibility="Collapsed">
                                            <Border Background="#444444" 
                                                    CornerRadius="3" 
                                                    Padding="6,2" 
                                                    Margin="0,0,6,0">
                                                <TextBlock Text="{Binding Category}" 
                                                           FontSize="10" 
                                                           FontWeight="SemiBold"
                                                           Foreground="#CCCCCC"/>
                                            </Border>
                                            <Border CornerRadius="3" 
                                                    Padding="6,2">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#555555"/>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Severity}" Value="MUST">
                                                                <Setter Property="Background" Value="#8B4545"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Severity}" Value="SHOULD">
                                                                <Setter Property="Background" Value="#8B6F47"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Severity}" Value="OPTIONAL">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding Severity}" 
                                                           FontSize="10" 
                                                           FontWeight="SemiBold"
                                                           Foreground="#CCCCCC"/>
                                            </Border>
                                        </StackPanel>

                                        <!-- Question Text -->
                                        <TextBlock Grid.Row="1" 
                                                   Text="{Binding Text}" 
                                                   TextWrapping="Wrap" 
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource MenuForeground}"
                                                   Margin="0,0,0,8"/>

                                        <!-- Rationale -->
                                        <TextBlock Grid.Row="2" 
                                                   Text="{Binding Rationale}" 
                                                   TextWrapping="Wrap" 
                                                   FontSize="12"
                                                   FontStyle="Italic" 
                                                   Foreground="{StaticResource MenuForeground}"
                                                   Opacity="0.7"
                                                   Margin="0,0,0,12"/>

                                        <!-- Answer Section and Actions -->
                                        <Grid Grid.Row="3">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Answer TextBox -->
                                            <Border Grid.Column="0" 
                                                    Background="Transparent" 
                                                    BorderBrush="{StaticResource CardBorderBrush}" 
                                                    BorderThickness="1" 
                                                    CornerRadius="4"
                                                    Margin="0,0,12,0">
                                                <Grid>
                                                    <TextBlock Text="Type your answer here or mark as assumption..." 
                                                               Foreground="#666666"
                                                               FontStyle="Italic"
                                                               Margin="8,8,8,8"
                                                               IsHitTestVisible="False">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Answer}" Value="">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Answer}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <TextBox Text="{Binding Answer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                             AcceptsReturn="True" 
                                                             TextWrapping="Wrap"
                                                             MinHeight="60"
                                                             Background="Transparent"
                                                             BorderThickness="0"
                                                             Foreground="{StaticResource MenuForeground}"
                                                             Padding="8"
                                                             VerticalScrollBarVisibility="Auto"/>
                                                </Grid>
                                            </Border>

                                            <!-- Action Buttons -->
                                            <StackPanel Grid.Column="1" 
                                                        VerticalAlignment="Top">
                                                
                                                <!-- Mark as Assumption Checkbox -->
                                                <CheckBox IsChecked="{Binding MarkedAsAssumption, Mode=TwoWay}"
                                                          Foreground="{StaticResource MenuForeground}"
                                                          FontSize="12"
                                                          Margin="0,4,0,0">
                                                    <CheckBox.Content>
                                                        <TextBlock Text="Save as Global Assumption" 
                                                                   TextWrapping="Wrap"
                                                                   MaxWidth="140"/>
                                                    </CheckBox.Content>
                                                </CheckBox>
                                                
                                                <!-- Submit Button -->
                                                <Button Content="✓ Submit"
                                                        Command="{Binding DataContext.AcceptQuestionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}" 
                                                        Background="#4A4A4A"
                                                        Foreground="{StaticResource MenuForeground}"
                                                        BorderThickness="1"
                                                        BorderBrush="{StaticResource CardBorderBrush}"
                                                        Padding="14,8"
                                                        Cursor="Hand"
                                                        FontWeight="Normal"
                                                        FontSize="12"
                                                        MinWidth="160">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" 
                                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                                CornerRadius="4" 
                                                                                Padding="{TemplateBinding Padding}">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsSubmitted}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#555555"/>
                                                                </Trigger>
                                                                <Trigger Property="IsPressed" Value="True">
                                                                    <Setter Property="Background" Value="#606060"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                                
                                                <!-- Remove Button -->
                                                <Button Content="✕ Remove"
                                                        Command="{Binding DataContext.MarkResolvedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="Transparent"
                                                        Foreground="{StaticResource MenuForeground}"
                                                        BorderBrush="{StaticResource CardBorderBrush}"
                                                        BorderThickness="1"
                                                        Padding="14,8"
                                                        Cursor="Hand"
                                                        FontSize="12"
                                                        MinWidth="160">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" 
                                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                                CornerRadius="4" 
                                                                                Padding="{TemplateBinding Padding}">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#1AFFFFFF"/>
                                                                </Trigger>
                                                                <Trigger Property="IsPressed" Value="True">
                                                                    <Setter Property="Background" Value="#33FFFFFF"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Instructional panel (visible when no questions) -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="32" MaxWidth="600">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding PendingQuestions.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="🔍 Clarifying Questions (Optional)" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource MenuForeground}" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20"/>

                    <Border Background="{StaticResource MenuBackground}" 
                            Padding="20" 
                            CornerRadius="8" 
                            BorderBrush="{StaticResource CardBorderBrush}" 
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock TextWrapping="Wrap" 
                                       Margin="0,0,0,16" 
                                       Foreground="{StaticResource MenuForeground}"
                                       FontSize="13"
                                       LineHeight="20">
                                <Run FontWeight="SemiBold">This step is optional.</Run>
                                <Run>You can skip directly to test case generation, or use clarifying questions to refine ambiguous requirements.</Run>
                            </TextBlock>

                            <Border Background="#1A1A1A" 
                                    Padding="16" 
                                    CornerRadius="6"
                                    Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="How it works:" 
                                               FontWeight="SemiBold" 
                                               Foreground="{StaticResource MenuForeground}"
                                               Margin="0,0,0,12"
                                               FontSize="12"/>

                                    <StackPanel Margin="0,0,0,8">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="1" 
                                                       FontWeight="Bold" 
                                                       Foreground="{StaticResource MenuForeground}"
                                                       Width="20"
                                                       FontSize="11"/>
                                            <TextBlock TextWrapping="Wrap" 
                                                       Foreground="{StaticResource MenuForeground}"
                                                       FontSize="12">
                                                <Run>Click "</Run><Run FontWeight="SemiBold">Ask Clarifying Questions</Run><Run>" to generate AI questions about ambiguities</Run>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Margin="0,0,0,8">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="2" 
                                                       FontWeight="Bold" 
                                                       Foreground="{StaticResource MenuForeground}"
                                                       Width="20"
                                                       FontSize="11"/>
                                            <TextBlock TextWrapping="Wrap" 
                                                       Foreground="{StaticResource MenuForeground}"
                                                       FontSize="12"
                                                       Text="Answer questions in the text boxes, OR mark them as assumptions"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Margin="0,0,0,8">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="3" 
                                                       FontWeight="Bold" 
                                                       Foreground="{StaticResource MenuForeground}"
                                                       Width="20"
                                                       FontSize="11"/>
                                            <TextBlock TextWrapping="Wrap" 
                                                       Foreground="{StaticResource MenuForeground}"
                                                       FontSize="12"
                                                       Text="Marking as assumption auto-saves and regenerates questions"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="4" 
                                                       FontWeight="Bold" 
                                                       Foreground="{StaticResource MenuForeground}"
                                                       Width="20"
                                                       FontSize="11"/>
                                            <TextBlock TextWrapping="Wrap" 
                                                       Foreground="{StaticResource MenuForeground}"
                                                       FontSize="12">
                                                <Run>Click "</Run><Run FontWeight="SemiBold">Submit Answers</Run><Run>" to proceed to test case generation</Run>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="{Binding StatusHint}" 
                               TextWrapping="Wrap" 
                               Margin="0,20,0,0" 
                               FontStyle="Italic" 
                               FontSize="12"
                               Foreground="{StaticResource AccentForeground}" 
                               HorizontalAlignment="Center" 
                               TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Footer: smart action button with progress indicator -->
        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Loading indicator (shown when LLM is busy) -->
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center"
                        x:Name="LoadingPanel"
                        Visibility="{Binding IsLlmBusy, Converter={StaticResource BoolToVisibilityConverter}}">
                <Viewbox Width="20" Height="20" Margin="0,0,10,0">
                    <Canvas Width="24" Height="24">
                        <Canvas.RenderTransform>
                            <RotateTransform x:Name="SpinnerRotate" CenterX="12" CenterY="12"/>
                        </Canvas.RenderTransform>
                        <Path Data="M12,4 A8,8 0 0,1 20,12" 
                              Stroke="{StaticResource Accent}" 
                              StrokeThickness="2"/>
                    </Canvas>
                </Viewbox>
                <TextBlock Text="Generating clarifying questions..." 
                           Foreground="{StaticResource MenuForeground}" 
                           FontSize="12"
                           FontStyle="Italic"
                           VerticalAlignment="Center"/>
                <StackPanel.Triggers>
                    <EventTrigger RoutedEvent="StackPanel.Loaded">
                        <BeginStoryboard x:Name="SpinnerStoryboard">
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                                 Storyboard.TargetProperty="Angle"
                                                 From="0"
                                                 To="360"
                                                 Duration="0:0:1"
                                                 RepeatBehavior="Forever"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="StackPanel.Unloaded">
                        <StopStoryboard BeginStoryboardName="SpinnerStoryboard"/>
                    </EventTrigger>
                </StackPanel.Triggers>
            </StackPanel>

            <!-- Action button -->
            <Button Grid.Column="1"
                    Content="{Binding SmartButtonLabel}" 
                    Command="{Binding SmartButtonCommand}" 
                    IsEnabled="{Binding CanExecuteSmartButton}"
                    Background="#4A4A4A"
                    Foreground="{StaticResource MenuForeground}"
                    BorderThickness="1"
                    BorderBrush="{StaticResource CardBorderBrush}"
                    Padding="18,10"
                    MinWidth="180"
                    FontWeight="Normal"
                    FontSize="13"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#606060"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</UserControl>