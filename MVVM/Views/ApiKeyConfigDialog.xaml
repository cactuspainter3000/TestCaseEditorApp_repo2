<Window x:Class="TestCaseEditorApp.MVVM.Views.ApiKeyConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configure AnythingLLM API Key"
        Width="500" Height="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#2B2B2B">
    
    <Border BorderBrush="#555555" BorderThickness="1" CornerRadius="8">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="ðŸ”‘ Configure AnythingLLM API Key" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                
                <Button Content="âœ•"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="20" Height="20"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#CCCCCC"
                        FontSize="12"
                        Click="Cancel_Click"/>
            </Grid>

            <!-- Instructions -->
            <TextBlock Grid.Row="1" 
                       Foreground="#CCCCCC" 
                       FontSize="13"
                       TextWrapping="Wrap"
                       Margin="0,0,0,15">
                <Run Text="To use AnythingLLM features, you need to configure an API key."/>
                <LineBreak/>
                <LineBreak/>
                <Run Text="ðŸ”— " FontWeight="Bold"/>
                <Run Text="Get your API key from AnythingLLM:" FontWeight="Bold"/>
                <LineBreak/>
                <Run Text="1. Start AnythingLLM application" Foreground="#E0E0E0"/>
                <LineBreak/>
                <Run Text="2. Go to Settings â†’ API Keys" Foreground="#E0E0E0"/>
                <LineBreak/>
                <Run Text="3. Generate a new API key" Foreground="#E0E0E0"/>
                <LineBreak/>
                <Run Text="4. Copy and paste it below" Foreground="#E0E0E0"/>
            </TextBlock>

            <!-- API Key Input -->
            <TextBlock Grid.Row="2" 
                       Text="API Key:" 
                       Foreground="White" 
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"/>
            
            <TextBox x:Name="ApiKeyTextBox"
                     Grid.Row="3"
                     Height="32"
                     Background="#3C3C3C"
                     Foreground="White"
                     BorderBrush="#555555"
                     BorderThickness="1"
                     Padding="8,5"
                     FontSize="12"
                     FontFamily="Consolas"
                     Margin="0,0,0,15"
                     TextChanged="ApiKeyTextBox_TextChanged"
                     Loaded="ApiKeyTextBox_Loaded"/>

            <!-- Storage Options -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,15">
                <CheckBox x:Name="SaveLocallyCheckBox"
                          Content="Save API key locally for future use"
                          Foreground="#CCCCCC"
                          FontSize="12"
                          IsChecked="True"/>
            </StackPanel>

            <!-- Status Message -->
            <TextBlock x:Name="StatusTextBlock"
                       Grid.Row="5"
                       Foreground="#FF8C00"
                       FontSize="12"
                       TextWrapping="Wrap"
                       Margin="0,0,0,15"
                       Visibility="Collapsed"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="6" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                
                <Button x:Name="TestConnectionButton"
                        Content="Test Connection"
                        Width="120" Height="32"
                        Background="#2D5F2D"
                        Foreground="White"
                        BorderBrush="#4A7C4A"
                        BorderThickness="1"
                        FontSize="12"
                        FontWeight="Normal"
                        Cursor="Hand"
                        Margin="0,0,10,0"
                        Click="TestConnection_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3D6F3D"/>
                                    <Setter Property="BorderBrush" Value="#5A8C5A"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#234F23"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <Button x:Name="SaveButton"
                        Content="Save and Continue"
                        Width="120" Height="32"
                        Background="#FF8C00"
                        Foreground="White"
                        BorderBrush="#FFA500"
                        BorderThickness="1"
                        FontSize="12"
                        FontWeight="Normal"
                        Cursor="Hand"
                        Margin="0,0,10,0"
                        Click="Save_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFA500"/>
                                    <Setter Property="BorderBrush" Value="#FFB84D"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#E6790A"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Width="80" Height="32"
                        Background="#3C3C3C"
                        Foreground="#CCCCCC"
                        BorderBrush="#555555"
                        BorderThickness="1"
                        FontSize="12"
                        FontWeight="Normal"
                        Cursor="Hand"
                        Click="Cancel_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4A4A4A"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#333333"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>