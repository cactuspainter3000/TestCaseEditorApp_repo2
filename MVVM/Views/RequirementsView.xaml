<UserControl x:Class="TestCaseEditorApp.MVVM.Views.RequirementsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             xmlns:local="clr-namespace:TestCaseEditorApp.MVVM.Views"
             mc:Ignorable="d"
             MinHeight="400" MinWidth="800"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
             d:DesignHeight="600" d:DesignWidth="900"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Margin="8" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- toolbar (pills + actions) -->
            <RowDefinition Height="*"/>
            <!-- support content -->
        </Grid.RowDefinitions>

        <!-- toolbar: pills on the left, bulk actions on the right -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8">
            <!-- left: pills -->
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">

                <!-- Meta pill -->
                <ToggleButton Style="{StaticResource PillToggleStyle}"
              IsChecked="{Binding IsMetaSelected, Mode=TwoWay}"
              ToolTip="{Binding VisibleChips.Count, StringFormat={}{0} chips}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Meta" VerticalAlignment="Center" Margin="6,0"/>

                        <Border Grid.Column="1">
                            <Border.Style>
                                <Style TargetType="Border" BasedOn="{StaticResource BadgeStyle}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <!-- bind to a boolean VM property instead of Count; use Hidden to keep layout -->
                                        <DataTrigger Binding="{Binding HasMeta}" Value="False">
                                            <Setter Property="Visibility" Value="Hidden"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <TextBlock Text="{Binding VisibleChips.Count}"
                 Foreground="White"
                 FontSize="11"
                 FontWeight="SemiBold"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 TextAlignment="Center"/>
                        </Border>
                    </Grid>
                </ToggleButton>

                <!-- Tables pill -->
                <ToggleButton Style="{StaticResource PillToggleStyle}"
              Margin="8,0,0,0"
              IsChecked="{Binding IsTablesSelected, Mode=TwoWay}"
              ToolTip="{Binding SelectedTableVMs.Count, StringFormat={}{0} tables}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Tables" VerticalAlignment="Center" Margin="6,0"/>

                        <Border Grid.Column="1">
                            <Border.Style>
                                <Style TargetType="Border" BasedOn="{StaticResource BadgeStyle}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasTables}" Value="False">
                                            <Setter Property="Visibility" Value="Hidden"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <TextBlock Text="{Binding SelectedTableVMs.Count}"
                 Foreground="White"
                 FontSize="11"
                 FontWeight="SemiBold"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 TextAlignment="Center"/>
                        </Border>
                    </Grid>
                </ToggleButton>

                <!-- Paragraphs pill -->
                <ToggleButton Style="{StaticResource PillToggleStyle}"
              Margin="8,0,0,0"
              IsChecked="{Binding IsParagraphsSelected, Mode=TwoWay}"
              ToolTip="{Binding SelectedParagraphVMs.Count, StringFormat={}{0} paragraphs}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Paragraphs" VerticalAlignment="Center" Margin="6,0"/>

                        <Border Grid.Column="1">
                            <Border.Style>
                                <Style TargetType="Border" BasedOn="{StaticResource BadgeStyle}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasParagraphs}" Value="False">
                                            <Setter Property="Visibility" Value="Hidden"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <TextBlock Text="{Binding SelectedParagraphVMs.Count}"
                 Foreground="White"
                 FontSize="11"
                 FontWeight="SemiBold"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 TextAlignment="Center"/>
                        </Border>
                    </Grid>
                </ToggleButton>

            </StackPanel>

            <!-- right: bulk actions (visible only when meaningful) -->
            <StackPanel DockPanel.Dock="Right"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Visibility="{Binding BulkActionsVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                <Button Content="Select all"
                        Command="{Binding SelectAllVisibleCommand}"
                        Margin="0,0,6,0"
                        ToolTip="Select all items in the current view"
                        Style="{StaticResource PillActionButtonStyle}" />

                <Button Content="Clear all"
                        Command="{Binding ClearAllVisibleCommand}"
                        ToolTip="Clear selection for all items in the current view"
                        Style="{StaticResource PillActionButtonStyle}" />
            </StackPanel>
        </DockPanel>

        <!-- support content area -->
        <Border Grid.Row="1" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="6" Padding="8" BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1">
            <ContentControl Content="{Binding}">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="ContentTemplate">
                            <Setter.Value>
                                <!-- Meta template -->
                                <DataTemplate>
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                        <ItemsControl ItemsSource="{Binding VisibleChips}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Style="{StaticResource MetaChip}" Margin="0,0,6,6">
                                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                            <TextBlock Style="{StaticResource MetaText}">
                                                                <Run Text="{Binding Label}"/>
                                                                <Run Text=": " />
                                                                <Run FontWeight="SemiBold" Text="{Binding Value}" />
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <!-- Tables: only the child control -->
                            <DataTrigger Binding="{Binding SelectedSupportView}" Value="Tables">
                                <Setter Property="ContentTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <local:RequirementsTablesControl ShowLocalToolbar="False" />
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>

                            <!-- Paragraphs: only the child control -->
                            <DataTrigger Binding="{Binding SelectedSupportView}" Value="Paragraphs">
                                <Setter Property="ContentTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <local:RequirementsParagraphsControl ShowLocalToolbar="False" />
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Border>
    </Grid>
</UserControl>