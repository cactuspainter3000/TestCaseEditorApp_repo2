<UserControl x:Class="TestCaseEditorApp.MVVM.Views.WorkspaceHeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             mc:Ignorable="d"
             d:DesignHeight="75" d:DesignWidth="800">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <DockPanel LastChildFill="True" Margin="6" VerticalAlignment="Center" ClipToBounds="True">
        <!-- Left: small area (logo / status / placeholder) -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="0,0,12,0">
            <!-- You can add a small badge/icon here if desired -->
            <TextBlock Text="{Binding Badge}" VerticalAlignment="Center" Foreground="DarkOrange" Margin="0,0,8,0" />
        </StackPanel>

        <!-- Center: workspace name + current requirement information -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding WorkspaceName}" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBlock Text="•" Margin="0,0,8,0" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding CurrentRequirementTitle}" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBlock Text="(" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding CurrentRequirementSummary}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" MaxWidth="420"/>
            <TextBlock Text=")" VerticalAlignment="Center" Margin="4,0,0,0"/>
        </StackPanel>

        <!-- Right: Actions and status -->
        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
            <!-- Re-Analyze button -->
            <Button Content="Re-Analyze"
                    Command="{Binding ReAnalyzeCommand}"
                    ToolTip="Analyze requirement quality with AI"
                    Padding="12,6"
                    FontSize="12"
                    Margin="0,0,8,0"
                    Visibility="{Binding CanReAnalyze, Converter={StaticResource BoolToVisibilityConverter}}"/>
            
            <!-- Initialize RAG button -->
            <Button Content="Initialize RAG"
                    Command="{Binding InitializeRagCommand}"
                    ToolTip="Initialize RAG workspace for enhanced AI analysis"
                    Padding="12,6"
                    FontSize="12"
                    Margin="0,0,8,0"
                    Background="DarkOrange"
                    Foreground="White"
                    BorderThickness="0"
                    Visibility="{Binding CanInitializeRag, Converter={StaticResource BoolToVisibilityConverter}}"/>
            
            <!-- RAG Status Display -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0"
                        Visibility="{Binding IsRagInitializing, Converter={StaticResource BoolToVisibilityConverter}}">
                <!-- RAG indicator dot with spinning animation -->
                <Border Width="8" Height="8" 
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"
                        CornerRadius="4"
                        Background="DarkOrange">
                    
                    <!-- Spinning animation for RAG initialization -->
                    <Border Width="6" Height="6" 
                            Background="White" 
                            Opacity="0.8"
                            CornerRadius="3">
                        <Border.RenderTransform>
                            <RotateTransform x:Name="RagSpinnerRotate"/>
                        </Border.RenderTransform>
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="RagSpinnerRotate"
                                                       Storyboard.TargetProperty="Angle"
                                                       From="0" To="360" Duration="0:0:2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>
                </Border>
                
                <!-- RAG status text -->
                <TextBlock Text="{Binding RagStatusMessage}" 
                          VerticalAlignment="Center" 
                          FontSize="12"
                          Foreground="DarkOrange"/>
            </StackPanel>
            
            <!-- Parsing Timer Display -->
            <TextBlock Text="{Binding ParsingTimerDisplay}" 
                       VerticalAlignment="Center" 
                       FontFamily="Consolas"
                       FontWeight="Bold"
                       FontSize="13"
                       Foreground="DarkOrange"
                       Margin="0,0,12,0"
                       Visibility="{Binding IsParsingTimerVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
            
            <!-- Status message display -->
            <TextBlock Text="{Binding StatusMessage}" 
                       VerticalAlignment="Center" 
                       Foreground="#FFB8B8B8"
                       FontStyle="Italic"
                       TextTrimming="CharacterEllipsis"
                       MaxWidth="250"/>
        </StackPanel>
    </DockPanel>
</UserControl>