<UserControl x:Class="TestCaseEditorApp.MVVM.Views.TestCaseGenerator_AnalysisControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TestCaseEditorApp.MVVM.ViewModels"
             xmlns:converters="clr-namespace:TestCaseEditorApp.Converters"
             DataContext="{Binding AnalysisVM}"
             MinHeight="200">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        
        <!-- Inverted converter for showing content when NOT analyzing -->
        <converters:BoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" Invert="True" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="Auto"/> <!-- Quality Score -->
                <RowDefinition Height="Auto"/> <!-- Issues -->
                <RowDefinition Height="Auto"/> <!-- Recommendations -->
                <RowDefinition Height="Auto"/> <!-- Freeform Feedback -->
                <RowDefinition Height="*"/>    <!-- Spacer -->
            </Grid.RowDefinitions>

            <!-- No analysis yet -->
            <StackPanel Grid.Row="0" Grid.RowSpan="6" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Visibility="{Binding HasNoAnalysis, Converter={StaticResource BoolToVisibilityConverter}}">
                
                <!-- Analyzing spinner -->
                <StackPanel Visibility="{Binding IsAnalyzing, Converter={StaticResource BoolToVisibilityConverter}}"
                            HorizontalAlignment="Center">
                    <TextBlock Text="â—" 
                               FontSize="48" 
                               Foreground="{DynamicResource AccentBrush}"
                               HorizontalAlignment="Center"
                               RenderTransformOrigin="0.5,0.5"
                               Margin="0,0,0,16">
                        <TextBlock.RenderTransform>
                            <RotateTransform x:Name="SpinnerRotate"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(RotateTransform.Angle)"
                                                         From="0" To="360" Duration="0:0:2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    <TextBlock Text="{Binding AnalysisStatusMessage}" 
                               FontSize="14" 
                               Foreground="#888888" 
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               MaxWidth="400"
                               TextAlignment="Center"/>
                </StackPanel>
                
                <!-- No analysis prompt -->
                <StackPanel Visibility="{Binding IsAnalyzing, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <TextBlock Text="No analysis available" 
                               FontSize="16" 
                               Foreground="#888888" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"/>
                    <TextBlock Text="Analysis will be performed automatically during import." 
                               FontSize="12" 
                               Foreground="#AAAAAA" 
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               MaxWidth="400"
                               TextAlignment="Center"
                               Margin="0,0,0,20"/>
                    <Button Content="Analyze Now"
                            Command="{Binding AnalyzeRequirementCommand}"
                            HorizontalAlignment="Center"
                            Padding="20,8"
                            FontSize="13"/>
                </StackPanel>
            </StackPanel>

            <!-- Analysis content (when available) -->
            <Grid Grid.Row="0" Grid.RowSpan="6"
                  Visibility="{Binding HasAnalysis, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Header -->
                    <RowDefinition Height="Auto"/> <!-- Quality Score -->
                    <RowDefinition Height="Auto"/> <!-- Issues -->
                    <RowDefinition Height="Auto"/> <!-- Recommendations -->
                    <RowDefinition Height="Auto"/> <!-- Freeform Feedback -->
                </Grid.RowDefinitions>

                <!-- Header -->
                <DockPanel Grid.Row="0" Margin="0,0,0,20">
                    <Button DockPanel.Dock="Right"
                            Content="Edit"
                            Command="{Binding EditRequirementCommand}"
                            ToolTip="Edit requirement description and re-analyze"
                            Padding="12,6"
                            FontSize="12"
                            Margin="8,0,0,0"
                            VerticalAlignment="Top"/>
                    <StackPanel>
                        <TextBlock Text="Requirement Quality Analysis" 
                                   Style="{StaticResource Text.H2}"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding AnalysisTimestamp}" 
                                   Style="{StaticResource Text.Caption}"/>
                    </StackPanel>
                </DockPanel>

                <!-- Quality Score -->
                <Border Grid.Row="1" 
                        Background="{DynamicResource MenuBackground}"
                        BorderBrush="{DynamicResource AccentBrush}"
                        BorderThickness="0,0,0,2"
                        Padding="16"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Quality Score" 
                                   Style="{StaticResource Text.H3}"
                                   Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding QualityScore}" 
                                       FontSize="32" 
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource AccentBrush}"/>
                            <TextBlock Text=" / 10" 
                                       FontSize="20" 
                                       Foreground="#888888"
                                       VerticalAlignment="Bottom"
                                       Margin="4,0,0,4"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Issues -->
                <Border Grid.Row="2" 
                        Background="{DynamicResource MenuBackground}"
                        Padding="16"
                        Margin="0,0,0,16"
                        Visibility="{Binding HasIssues, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Issues Identified" 
                                   Style="{StaticResource Text.H3}"
                                   Margin="0,0,0,12"/>
                        <ItemsControl ItemsSource="{Binding Issues}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource ControlBackground}"
                                            Padding="12"
                                            Margin="0,0,0,8"
                                            CornerRadius="4">
                                        <StackPanel>
                                            <DockPanel Margin="0,0,0,6">
                                                <Border DockPanel.Dock="Right"
                                                        Background="#CC4444"
                                                        Padding="6,2"
                                                        CornerRadius="3">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#888888"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Severity}" Value="High">
                                                                    <Setter Property="Background" Value="#CC4444"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Severity}" Value="Medium">
                                                                    <Setter Property="Background" Value="#DD8833"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Severity}" Value="Low">
                                                                    <Setter Property="Background" Value="#888888"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding Severity}" 
                                                               FontSize="10" 
                                                               Foreground="White"
                                                               FontWeight="SemiBold"/>
                                                </Border>
                                                <TextBlock Text="{Binding Category}" 
                                                           FontWeight="SemiBold"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource AccentBrush}"/>
                                            </DockPanel>
                                            <TextBlock Text="{Binding Description}" 
                                                       TextWrapping="Wrap"
                                                       FontSize="12"
                                                       Foreground="#CCCCCC"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Recommendations -->
                <Border Grid.Row="3" 
                        Background="{DynamicResource MenuBackground}"
                        Padding="16"
                        Margin="0,0,0,16"
                        Visibility="{Binding HasRecommendations, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Recommendations" 
                                   Style="{StaticResource Text.H3}"
                                   Margin="0,0,0,12"/>
                        <ItemsControl ItemsSource="{Binding Recommendations}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource ControlBackground}"
                                            Padding="12"
                                            Margin="0,0,0,8"
                                            CornerRadius="4">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Category}" 
                                                       FontWeight="SemiBold"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource AccentBrush}"
                                                       Margin="0,0,0,6"/>
                                            <TextBlock Text="{Binding Description}" 
                                                       TextWrapping="Wrap"
                                                       FontSize="12"
                                                       Foreground="#CCCCCC"
                                                       Margin="0,0,0,8"/>
                                            <TextBlock Text="{Binding Example}" 
                                                       TextWrapping="Wrap"
                                                       FontSize="11"
                                                       FontStyle="Italic"
                                                       Foreground="#888888"
                                                       Visibility="{Binding Example, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Freeform Feedback -->
                <Border Grid.Row="4" 
                        Background="{DynamicResource MenuBackground}"
                        Padding="16"
                        Visibility="{Binding HasFreeformFeedback, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Additional Feedback" 
                                   Style="{StaticResource Text.H3}"
                                   Margin="0,0,0,12"/>
                        <TextBlock Text="{Binding FreeformFeedback}" 
                                   TextWrapping="Wrap"
                                   FontSize="12"
                                   Foreground="#CCCCCC"
                                   LineHeight="18"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
