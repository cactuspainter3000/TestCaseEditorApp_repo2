<Window x:Class="TestCaseEditorApp.MVVM.Views.SupplementalInfoEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Border Background="{DynamicResource MenuBackground}" 
            BorderBrush="{DynamicResource AccentBrush}" 
            BorderThickness="1" 
            CornerRadius="8">
        <Border.Style>
            <Style TargetType="Border">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="BorderBrush" Value="#4A9EFF"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/><!-- Custom Title Bar -->
                <RowDefinition Height="Auto"/><!-- Instructions -->
                <RowDefinition Height="*"/>  <!-- Content -->
                <RowDefinition Height="Auto"/><!-- Preview -->
                <RowDefinition Height="Auto"/><!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource MenuBackground}" 
                    CornerRadius="8,8,0,0" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="32">
                    <TextBlock Text="Edit Supplemental Information"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Foreground="White"
                               FontSize="12"
                               Margin="40,0"/>
                    <!-- Close button -->
                    <Button HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,8,0"
                            Width="24" Height="24"
                            Content="âœ•"
                            FontSize="12"
                            Click="Close_Click"
                            Style="{StaticResource IconButtonStyle}"/>
                </Grid>
            </Border>

            <!-- Instructions -->
            <!-- Collapsible Tips/Instructions -->
            <Expander Grid.Row="1"
                      Header="Tips &amp; Instructions"
                      IsExpanded="False"
                      Background="Transparent"
                      Foreground="#AAAAAA"
                      FontSize="11"
                      Margin="16,16,16,12">
                <TextBlock TextWrapping="Wrap">
                    <Run Text="Edit the text below. Use"/>
                    <Run Text=" ||| " FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                    <Run Text="to separate items, or click 'Insert Split' to add a separator at the cursor position."/>
                </TextBlock>
            </Expander>

        <!-- Text editor with Insert Split button -->
        <Grid Grid.Row="2" Margin="16,0,16,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Insert Split button -->
            <Button Grid.Row="0"
                    Content="Insert Split (|||)"
                    Click="InsertSplit_Click"
                    HorizontalAlignment="Left"
                    Style="{StaticResource PillActionButtonStyle}"
                    Padding="12,4"
                    Margin="0,0,0,8"/>

            <!-- Text editor -->
            <TextBox Grid.Row="1"
                     x:Name="TextEditor"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Background="#2D2D30"
                     Foreground="White"
                     BorderBrush="{DynamicResource AccentBrush}"
                     BorderThickness="1"
                     Padding="8"
                     FontSize="12"
                     VerticalScrollBarVisibility="Auto"
                     TextChanged="TextEditor_TextChanged"/>
        </Grid>

        <!-- Preview -->
        <StackPanel Grid.Row="3" Margin="16,12,16,12">
            <TextBlock Text="Preview (after split):" 
                       Foreground="{DynamicResource AccentBrush}"
                       FontWeight="SemiBold"
                       FontSize="11"
                       Margin="0,0,0,8"/>
            <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="PreviewList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource MenuSectionBackground}"
                                    BorderBrush="{DynamicResource AccentBrush}"
                                    BorderThickness="0,0,0,1"
                                    Padding="8,6"
                                    Margin="0,0,0,4">
                                <TextBlock Text="{Binding}" 
                                           Foreground="White"
                                           TextWrapping="Wrap"
                                           FontSize="11"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="16,0,16,16">
            <Button Content="Save"
                    Click="Save_Click"
                    IsDefault="True"
                    Style="{StaticResource PillActionButtonStyle}"
                    Padding="16,6"
                    Margin="0,0,8,0"
                    FontWeight="SemiBold"/>
            <Button Content="Cancel"
                    Click="Cancel_Click"
                    IsCancel="True"
                    Style="{StaticResource PillActionButtonStyle}"
                    Padding="16,6"/>
        </StackPanel>
        </Grid>
    </Border>
</Window>
