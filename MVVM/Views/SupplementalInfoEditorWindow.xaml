<Window x:Class="TestCaseEditorApp.MVVM.Views.SupplementalInfoEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Edit Supplemental Information"
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MenuBackground}">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Edit supplemental information"
                   Foreground="White"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,8"/>

        <!-- Instructions -->
            <!-- Collapsible Tips/Instructions -->
            <Expander Grid.Row="1"
                      Header="Tips &amp; Instructions"
                      IsExpanded="False"
                      Background="Transparent"
                      Foreground="#AAAAAA"
                      FontSize="11"
                      Margin="0,0,0,12">
                <TextBlock TextWrapping="Wrap">
                    <Run Text="Edit the text below. Use"/>
                    <Run Text=" ||| " FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                    <Run Text="to separate items, or click 'Insert Split' to add a separator at the cursor position."/>
                </TextBlock>
            </Expander>

        <!-- Text editor with Insert Split button -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Insert Split button -->
            <Button Grid.Row="0"
                    Content="Insert Split (|||)"
                    Click="InsertSplit_Click"
                    HorizontalAlignment="Left"
                    Style="{StaticResource PillActionButtonStyle}"
                    Padding="12,4"
                    Margin="0,0,0,8"/>

            <!-- Text editor -->
            <TextBox Grid.Row="1"
                     x:Name="TextEditor"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Background="#2D2D30"
                     Foreground="White"
                     BorderBrush="{DynamicResource AccentBrush}"
                     BorderThickness="1"
                     Padding="8"
                     FontSize="12"
                     VerticalScrollBarVisibility="Auto"
                     TextChanged="TextEditor_TextChanged"/>
        </Grid>

        <!-- Preview -->
        <StackPanel Grid.Row="3" Margin="0,12,0,12">
            <TextBlock Text="Preview (after split):" 
                       Foreground="{DynamicResource AccentBrush}"
                       FontWeight="SemiBold"
                       FontSize="11"
                       Margin="0,0,0,8"/>
            <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="PreviewList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource MenuSectionBackground}"
                                    BorderBrush="{DynamicResource AccentBrush}"
                                    BorderThickness="0,0,0,1"
                                    Padding="8,6"
                                    Margin="0,0,0,4">
                                <TextBlock Text="{Binding}" 
                                           Foreground="White"
                                           TextWrapping="Wrap"
                                           FontSize="11"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Save"
                    Click="Save_Click"
                    IsDefault="True"
                    Style="{StaticResource PillActionButtonStyle}"
                    Padding="16,6"
                    Margin="0,0,8,0"
                    FontWeight="SemiBold"/>
            <Button Content="Cancel"
                    Click="Cancel_Click"
                    IsCancel="True"
                    Style="{StaticResource PillActionButtonStyle}"
                    Padding="16,6"/>
        </StackPanel>
    </Grid>
</Window>
