<UserControl x:Class="TestCaseEditorApp.MVVM.Views.TestCaseGeneratorSplashScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">
    
    <Grid Background="{StaticResource Brush.Background.Card}">
        <Border Background="{StaticResource Brush.Background.Menu}" 
                BorderBrush="{DynamicResource HeaderAccentBrush}" 
                BorderThickness="2" 
                CornerRadius="8" 
                Margin="40">
            
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="60">
                
                <!-- Icon -->
                <TextBlock Text="ðŸ§ª" 
                           FontSize="72" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>
                
                <!-- Title -->
                <TextBlock Text="Test Case Generator" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource HeaderAccentBrush}"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,10"/>
                
                <!-- Subtitle -->
                <TextBlock Text="AI-Powered Test Case Generation" 
                           FontSize="16" 
                           Foreground="#CCCCCC"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"/>
                
                <!-- Description -->
                <TextBlock Text="{Binding Description}" 
                           FontSize="14" 
                           Foreground="#AAAAAA"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           MaxWidth="400"
                           LineHeight="22"/>
                
            </StackPanel>
        </Border>
    </Grid>
</UserControl>