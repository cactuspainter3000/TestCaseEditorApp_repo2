<UserControl x:Class="TestCaseEditorApp.MVVM.Views.TestCaseHeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TestCaseEditorApp.MVVM.ViewModels">
    <Grid Margin="6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Style="{StaticResource MenuPopupButtonStyle}"
                Command="{Binding NewTestCaseCommand}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="+" FontWeight="Bold" Margin="0,0,6,0"/>
                <TextBlock Text="New Test Case"/>
            </StackPanel>
        </Button>

        <Button Grid.Column="2" Style="{StaticResource MenuPopupButtonStyle}"
                Command="{Binding OpenRequirementsCommand}">
            <TextBlock Text="Requirements" />
        </Button>

        <Button Grid.Column="4" Style="{StaticResource MenuPopupButtonStyle}"
                Command="{Binding GenerateTestCasesCommand}">
            <TextBlock Text="Generate" />
        </Button>

        <!-- Right side: placeholder for contextual info -->
        <TextBlock Grid.Column="5" Text="Test Case Generator" VerticalAlignment="Center" HorizontalAlignment="Right"
                   Foreground="{StaticResource MenuForeground}" Opacity="0.7" />
    </Grid>
</UserControl>