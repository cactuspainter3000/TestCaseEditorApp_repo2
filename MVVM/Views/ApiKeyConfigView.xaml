<UserControl x:Class="TestCaseEditorApp.MVVM.Views.ApiKeyConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:TestCaseEditorApp.MVVM.ViewModels"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             d:DataContext="{d:DesignInstance vm:ApiKeyConfigViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="600">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#106EBE"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#666666"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="TestButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#2D5F2D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A7C4A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#666666"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#777777"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for status text based on error state -->
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF8C00"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsStatusError}" Value="False">
                    <Setter Property="Foreground" Value="#4CAF50"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Instructions -->
        <TextBlock Grid.Row="0" 
                   Foreground="#CCCCCC" 
                   FontSize="13"
                   TextWrapping="Wrap"
                   Margin="0,0,0,20">
            <Run Text="ðŸ”‘ To use AnythingLLM features, you need to configure an API key." FontWeight="SemiBold"/>
            <LineBreak/>
            <LineBreak/>
            <Run Text="ðŸ”— " FontWeight="Bold"/>
            <Run Text="Get your API key from AnythingLLM:" FontWeight="Bold"/>
            <LineBreak/>
            <Run Text="1. Start AnythingLLM application" Foreground="#E0E0E0"/>
            <LineBreak/>
            <Run Text="2. Go to Settings â†’ API Keys" Foreground="#E0E0E0"/>
            <LineBreak/>
            <Run Text="3. Generate a new API key" Foreground="#E0E0E0"/>
            <LineBreak/>
            <Run Text="4. Copy and paste it below" Foreground="#E0E0E0"/>
        </TextBlock>

        <!-- API Key Input -->
        <TextBlock Grid.Row="1" 
                   Text="API Key:" 
                   Foreground="White" 
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,8"/>
        
        <TextBox Grid.Row="2"
                 Text="{Binding ApiKey, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource ModernTextBox}"
                 Height="35"
                 Margin="0,0,0,15"/>

        <!-- Storage Options -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,15">
            <CheckBox IsChecked="{Binding SaveLocally}"
                      Content="Save API key locally for future use"
                      Foreground="#CCCCCC"
                      FontSize="12"/>
        </StackPanel>

        <!-- Status Message -->
        <TextBlock Grid.Row="4"
                   Text="{Binding StatusMessage}"
                   Margin="0,0,0,20">
            <TextBlock.Style>
                <Style TargetType="TextBlock" BasedOn="{StaticResource StatusTextStyle}">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding StatusMessage}" Value="">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding StatusMessage}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <!-- Test Connection Progress -->
        <Grid Grid.Row="5" 
              Margin="0,0,0,15"
              Visibility="{Binding IsTesting, Converter={StaticResource BoolToVisibilityConverter}}">
            <ProgressBar Height="4"
                         IsIndeterminate="True"
                         Foreground="#0078D4"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            
            <Button Command="{Binding TestConnectionCommand}"
                    Width="120" Height="32"
                    Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource TestButton}">
                        <Setter Property="Content" Value="Test Connection"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsTesting}" Value="True">
                                <Setter Property="Content" Value="Testing..."/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource ModernButton}"
                    Width="80" Height="32"
                    Margin="0,0,10,0"/>

            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource SecondaryButton}"
                    Width="80" Height="32"/>
        </StackPanel>
    </Grid>
</UserControl>