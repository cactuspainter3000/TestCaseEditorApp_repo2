<Window x:Class="TestCaseEditorApp.MVVM.Views.SplitTextDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Split Text"
        Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MenuBackground}">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Instructions -->
        <TextBlock Grid.Row="0" 
                   TextWrapping="Wrap"
                   Foreground="White"
                   Margin="0,0,0,12">
            <Run Text="Enter where you want to split this text. Use"/><Run Text=" ||| " FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/><Run Text="as the split marker."/>
            <LineBreak/>
            <Run Text="Example: " FontStyle="Italic" Foreground="#888888"/>
            <Run Text="Note: ||| This is the actual note text" FontStyle="Italic" Foreground="#888888"/>
        </TextBlock>

        <!-- Text editor -->
        <TextBox Grid.Row="1"
                 x:Name="TextEditor"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 Background="#2D2D30"
                 Foreground="White"
                 BorderBrush="{DynamicResource AccentBrush}"
                 BorderThickness="1"
                 Padding="8"
                 FontSize="12"
                 VerticalScrollBarVisibility="Auto"/>

        <!-- Preview -->
        <StackPanel Grid.Row="2" Margin="0,12,0,12">
            <TextBlock Text="Preview (after split):" 
                       Foreground="{DynamicResource AccentBrush}"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>
            <ItemsControl x:Name="PreviewList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource MenuSectionBackground}"
                                BorderBrush="{DynamicResource AccentBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="8,6"
                                Margin="0,0,0,4">
                            <TextBlock Text="{Binding}" 
                                       Foreground="White"
                                       TextWrapping="Wrap"
                                       FontSize="11"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Split"
                    Click="Split_Click"
                    IsDefault="True"
                    Style="{StaticResource PillActionButtonStyle}"
                    Padding="16,6"
                    Margin="0,0,8,0"/>
            <Button Content="Cancel"
                    Click="Cancel_Click"
                    IsCancel="True"
                    Style="{StaticResource PillActionButtonStyle}"
                    Padding="16,6"/>
        </StackPanel>
    </Grid>
</Window>
