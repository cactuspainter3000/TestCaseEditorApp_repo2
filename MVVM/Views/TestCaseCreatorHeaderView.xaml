<UserControl x:Class="TestCaseEditorApp.MVVM.Views.TestCaseCreatorHeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="75" d:DesignWidth="800">

    <!--
      Compact header:
      - "File" uses the app theme PillActionButtonStyle
      - Description now spans columns 1–2 (center + right) while reserving safe space for the right stack
      - Full description available on hover via ToolTip (ShowDuration increased for readability)
      - Background left transparent to match your request
    -->

    <Grid Margin="6" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- file menu -->
            <ColumnDefinition Width="*"/>
            <!-- description (spans) -->
            <ColumnDefinition Width="Auto"/>
            <!-- stacked status on right -->
        </Grid.ColumnDefinitions>

        <!-- LEFT: File menu - use app theme PillActionButtonStyle so it looks like a button -->
        <Grid Grid.Column="0" Margin="0,0,12,0" VerticalAlignment="Top">
            <!--<ToggleButton x:Name="HeaderFileToggle"
                          Style="{StaticResource PillActionToggleButtonStyle}"
                          IsChecked="{Binding IsFileMenuOpen, Mode=TwoWay}"
                          Cursor="Hand"
                          ToolTip="File menu"
                          VerticalAlignment="Top"
                          MinWidth="72"
                          MinHeight="28">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="4,0">
                    <TextBlock Text="File" FontWeight="SemiBold" />
                    <TextBlock Text=" ▼" Margin="6,0,0,0" />
                </StackPanel>
            </ToggleButton>-->

            <Popup IsOpen="{Binding IsChecked, ElementName=HeaderFileToggle, Mode=TwoWay}"
                   PlacementTarget="{Binding ElementName=HeaderFileToggle}"
                   Placement="Bottom"
                   StaysOpen="False"
                   AllowsTransparency="True"
                   Focusable="False">
                <Border Background="{StaticResource MenuListBackground}"
                        BorderBrush="#33000000"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="6"
                        MinWidth="240"
                        SnapsToDevicePixels="True">
                    <StackPanel>
                        <Button Command="{Binding ImportWordCommand}" Style="{StaticResource MenuPopupButtonStyle}">
                            <TextBlock Text="Import New Requirements…" />
                        </Button>
                        <Button Command="{Binding LoadWorkspaceCommand}" Style="{StaticResource MenuPopupButtonStyle}">
                            <TextBlock Text="Import In-Process Requirements…" />
                        </Button>

                        <Separator Margin="0,6"/>

                        <Button Command="{Binding SaveWorkspaceCommand}" Style="{StaticResource MenuPopupButtonStyle}">
                            <TextBlock Text="Save Workspace" />
                        </Button>

                        <Separator Margin="0,6"/>

                        <Button Command="{Binding ReloadCommand}" Style="{StaticResource MenuPopupButtonStyle}">
                            <TextBlock Text="Reload Source (from DOCX)" />
                        </Button>

                        <Button Command="{Binding ExportAllToJamaCommand}" Style="{StaticResource MenuPopupButtonStyle}">
                            <TextBlock Text="Export All to Jama…" />
                        </Button>

                        <Separator Margin="0,8"/>

                        <Button Command="{Binding HelpCommand}" Style="{StaticResource MenuPopupButtonStyle}">
                            <TextBlock Text="Help" />
                        </Button>
                    </StackPanel>
                </Border>
            </Popup>
        </Grid>

        <!-- CENTER: Description spanning center + right; reserve right margin so text does not overlap stacked controls.
             Start just below the File button by aligning to Top and giving a small top margin. -->
        <Border Grid.Column="1" Grid.ColumnSpan="2"
                Style="{StaticResource HeaderDescriptionBorderStyle}"
                Padding="12"
                Margin="0,6,200,0" 
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                MaxHeight="160">
            <TextBlock Text="{Binding RequirementDescription}"
                       TextWrapping="Wrap"
                       Foreground="{DynamicResource HeaderTextBrush}"
                       FontSize="13"
                       TextTrimming="CharacterEllipsis"
                       ToolTip="{Binding RequirementDescription}"
                       ToolTipService.ShowDuration="60000" />
        </Border>

        <!-- RIGHT: Vertical stacked area for Ollama indicator, Method, and TestCase count -->
        <Grid Grid.Column="2" VerticalAlignment="Top" Margin="8,0,0,0" Width="180">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Ollama status -->
                <RowDefinition Height="Auto"/>
                <!-- Method -->
                <RowDefinition Height="Auto"/>
                <!-- Test case count -->
            </Grid.RowDefinitions>

            <!-- Ollama indicator -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,6">
                <Ellipse Style="{StaticResource LlmEllipseStyle}" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBlock Text="{Binding OllamaStatusMessage}" Style="{StaticResource LlmStatusTextStyle}" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Verification method (collapses when empty) -->
            <TextBlock Grid.Row="1"
                       Text="{Binding RequirementMethod}"
                       FontSize="11"
                       Foreground="{DynamicResource HeaderStatusTextBrush}"
                       HorizontalAlignment="Right"
                       TextTrimming="CharacterEllipsis"
                       ToolTip="{Binding RequirementMethod}">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding RequirementMethod}" Value="">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding RequirementMethod}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Requirements with test-cases count -->
            <TextBlock Grid.Row="2"
                       HorizontalAlignment="Right"
                       FontSize="12"
                       Foreground="{DynamicResource HeaderStatusTextBrush}"
                       TextTrimming="CharacterEllipsis"
                       ToolTip="{Binding RequirementsWithTestCasesCount}">
                <Run Text="{Binding RequirementsWithTestCasesCount}" />
                <Run Text=" with Test Cases" />
            </TextBlock>
        </Grid>

        <!-- Status message overlay (bottom-left) -->
        <TextBlock Grid.ColumnSpan="3"
                   Text="{Binding StatusMessage}"
                   Style="{StaticResource HeaderStatusMessageStyle}"
                   Margin="8,0,0,6"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   ToolTip="{Binding StatusMessage}" />
    </Grid>
</UserControl>