<UserControl x:Class="TestCaseEditorApp.MVVM.Views.TestCaseGenerator_NavigationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:TestCaseEditorApp.Converters"
             mc:Ignorable="d"
             d:DesignHeight="80" d:DesignWidth="800"
             UseLayoutRounding="True">

    <UserControl.Resources>
        <ResourceDictionary>
            <converters:InvertBoolConverter x:Key="InvertBoolConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/TestCaseEditorApp;component/Resources/ComboBoxStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Padding="6" Style="{StaticResource MenuSectionBorderStyle}" ClipToBounds="True">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="66*"/>
                <ColumnDefinition Width="28*"/>
                <ColumnDefinition Width="47*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <!-- NAV AREA -->
            <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0"
                  IsEnabled="{Binding DataContext.IsLlmBusy, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InvertBoolConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="PrevButton"
                        Grid.Column="0"
                        Content="◀"
                        Height="35"
                        Command="{Binding PreviousRequirementCommand}"
                        Style="{StaticResource NavArrowButtonStyle}"
                        ToolTip="Previous requirement"
                        AutomationProperties.Name="Previous Requirement"
                        Margin="0,0,6,0"/>

                <Border Grid.Column="1"
                        Background="Transparent"
                        Padding="4,0"
                        VerticalAlignment="Center"
                        MinWidth="70"
                        HorizontalAlignment="Center"
                        Margin="0,0,6,0">
                    <TextBlock x:Name="PositionTextBlock" Foreground="White" VerticalAlignment="Center" FontSize="12" TextAlignment="Center">
                        <Run Text="{Binding RequirementPositionDisplay, Mode=OneWay, FallbackValue='—', TargetNullValue='—'}" />
                    </TextBlock>
                </Border>

                <Button x:Name="NextButton"
                        Grid.Column="2"
                        Content="▶"
                        Height="35"
                        Command="{Binding NextRequirementCommand}"
                        Style="{StaticResource NavArrowButtonStyle}"
                        ToolTip="Next requirement"
                        AutomationProperties.Name="Next Requirement"/>
            </Grid>

            <!-- ComboBox replaced with data-driven dropdown -->
            <Grid Grid.Column="2" Margin="8,0,8,0" Grid.ColumnSpan="2" MaxWidth="420" MinWidth="120">
                <Grid.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                            <ResourceDictionary Source="/MVVM/Controls/DataDrivenMenu/MenuContentTemplates.xaml"/>
                        </ResourceDictionary.MergedDictionaries>
                    </ResourceDictionary>
                </Grid.Resources>
                
                <ContentPresenter Content="{Binding RequirementsDropdown}" 
                                 IsEnabled="{Binding DataContext.IsLlmBusy, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InvertBoolConverter}}"/>
            </Grid>

            <TextBox Grid.Column="4"
                     Margin="8,0,8,0"
                     VerticalAlignment="Center"
                     Text="{Binding SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     MaxWidth="240"
                     MinWidth="80"
                     Style="{StaticResource MenuPopupTextBoxStyle}" />

            <Button Grid.Column="5"
                    Content="Search"
                    Width="70"
                    Margin="4,0,0,0"
                    Padding="6,2"
                    Command="{Binding SearchCommand}"
                    Style="{StaticResource PillActionButtonStyle}"  />
        </Grid>
    </Border>
</UserControl>