<UserControl x:Class="TestCaseEditorApp.MVVM.Views.TestCaseGenerator_ParagraphsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TestCaseEditorApp.MVVM.ViewModels"
             MinHeight="200">

    <UserControl.Resources>
        <!-- Local converter so the toolbar Visibility binding always resolves,
             even if the app-level converter isn't merged into this control. -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- local toolbar (can be hidden by parent) -->
            <RowDefinition Height="Auto"/>
            <!-- hint text -->
            <RowDefinition Height="*"/>
            <!-- content -->
        </Grid.RowDefinitions>

        <!-- Local toolbar: visibility bound to ShowLocalToolbar DP on the UserControl -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8"
                   Visibility="{Binding ShowLocalToolbar, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                <!-- Standalone control commands (keep names consistent with your child-viewmodel usage) -->
                <Button Content="Edit" 
                        Command="{Binding EditSupplementalInfoCommand}" 
                        Style="{StaticResource PillActionButtonStyle}"
                        Margin="0,0,6,0"/>
                <Button Content="Select all" 
                        Command="{Binding SelectAllParagraphsCommand}" 
                        Style="{StaticResource PillActionButtonStyle}"
                        Margin="0,0,6,0"/>
                <Button Content="Clear all" 
                        Command="{Binding ClearAllParagraphsCommand}"
                        Style="{StaticResource PillActionButtonStyle}" />
            </StackPanel>
        </DockPanel>

        <!-- Hint text - only show when there are items -->
        <TextBlock Grid.Row="1" 
                   Text="Selected items are included in the Requirement Analysis"
                   Foreground="#888888"
                   FontSize="11"
                   FontStyle="Italic"
                   Margin="8,0,0,12"
                   HorizontalAlignment="Left">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedParagraphVMs.Count}" Value="0">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <!-- Supplemental info list -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ScrollViewer.Resources>
                <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
            </ScrollViewer.Resources>
            <ItemsControl ItemsSource="{Binding SelectedParagraphVMs}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:ParagraphViewModel}">
                        <Border Padding="12,10" 
                                Margin="0,0,0,8"
                                Background="{DynamicResource MenuSectionBackground}"
                                BorderBrush="{DynamicResource AccentBrush}"
                                BorderThickness="0,0,0,1"
                                CornerRadius="4"
                                Cursor="Hand">
                            <Border.InputBindings>
                                <MouseBinding MouseAction="LeftClick" 
                                            Command="{Binding DataContext.ToggleParagraphCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"/>
                            </Border.InputBindings>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Circle indicator -->
                                <Viewbox Grid.Column="0" 
                                         Width="14" 
                                         Height="14" 
                                         Margin="0,2,12,0"
                                         VerticalAlignment="Top">
                                    <Canvas Width="24" Height="24">
                                        <!-- Solid circle when included -->
                                        <Ellipse Width="24" Height="24" 
                                                Fill="{DynamicResource AccentBrush}">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IncludeInPrompt}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <!-- Outline circle when excluded -->
                                        <Ellipse Width="24" Height="24" 
                                                Stroke="{DynamicResource AccentBrush}"
                                                StrokeThickness="2"
                                                Fill="Transparent">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IncludeInPrompt}" Value="False">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                    </Canvas>
                                </Viewbox>

                                <!-- Text content -->
                                <TextBlock Grid.Column="1" 
                                          Text="{Binding Text}" 
                                          TextWrapping="Wrap"
                                          Foreground="White"
                                          FontSize="12"
                                          LineHeight="20">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Opacity" Value="1.0"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IncludeInPrompt}" Value="False">
                                                    <Setter Property="Opacity" Value="0.4"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <!-- Empty state -->
                <ItemsControl.Style>
                    <Style TargetType="ItemsControl">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedParagraphVMs.Count}" Value="0">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ItemsControl">
                                            <Grid Margin="24">
                                                <TextBlock Foreground="{DynamicResource DisabledBrush}" 
                                                           FontStyle="Italic"
                                                           Text="No supplemental information found for this requirement."
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           TextAlignment="Center"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ItemsControl.Style>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>