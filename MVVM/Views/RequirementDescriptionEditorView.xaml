<UserControl x:Class="TestCaseEditorApp.MVVM.Views.RequirementDescriptionEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:TestCaseEditorApp.Converters">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/><!-- Header -->
            <RowDefinition Height="*"/>   <!-- Text Editor -->
            <RowDefinition Height="Auto"/><!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource MenuBackground}"
                BorderBrush="{DynamicResource AccentBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,16">
            <TextBlock Text="{Binding WindowTitle, FallbackValue='Edit Requirement'}"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Row="1" Margin="20,20,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/><!-- Text Editor -->
                <ColumnDefinition Width="5"/><!-- Splitter -->
                <ColumnDefinition Width="1*"/><!-- Analysis Recommendations -->
            </Grid.ColumnDefinitions>

            <!-- Text Editor -->
            <Border Grid.Column="0"
                    Background="#2D2D30"
                    BorderBrush="{DynamicResource AccentBrush}"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Editor Header -->
                    <Border Grid.Row="0" 
                            Background="{DynamicResource MenuBackground}"
                            Padding="12,8">
                        <TextBlock Text="Requirement Description" 
                                   Foreground="White" 
                                   FontSize="12" 
                                   FontWeight="SemiBold"/>
                    </Border>
                    
                    <!-- Text Editor -->
                    <TextBox Grid.Row="1"
                             Text="{Binding EditedDescription, UpdateSourceTrigger=PropertyChanged, FallbackValue=''}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled"
                             Foreground="White"
                             CaretBrush="{DynamicResource AccentBrush}"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="12"
                             FontSize="14"
                             FontFamily="Segoe UI"
                             MinHeight="200"/>
                </Grid>
            </Border>

            <!-- Splitter -->
            <Border Grid.Column="1"
                    Background="{DynamicResource AccentBrush}"/>

            <!-- Analysis Recommendations -->
            <Border Grid.Column="2"
                    Background="#2D2D30"
                    BorderBrush="{DynamicResource AccentBrush}"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Recommendations Header -->
                    <Border Grid.Row="0" 
                            Background="{DynamicResource MenuBackground}"
                            Padding="12,8">
                        <TextBlock Text="ðŸ’¡ LLM Recommendations" 
                                   Foreground="White" 
                                   FontSize="12" 
                                   FontWeight="SemiBold"/>
                    </Border>
                    
                    <!-- Recommendations Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="12">
                        <StackPanel>
                            <!-- Show message when no recommendations -->
                            <TextBlock Text="ðŸ’­ No recommendations available" 
                                       Foreground="#888888" 
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       Margin="20"
                                       Visibility="{Binding HasRecommendations, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverted, FallbackValue=Visible}"/>
                            
                            <!-- Show recommendations when available -->
                            <ItemsControl ItemsSource="{Binding Recommendations, FallbackValue={x:Null}}"
                                          Visibility="{Binding HasRecommendations, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#3A3A3C" 
                                                BorderBrush="{DynamicResource AccentBrush}" 
                                                BorderThickness="1" 
                                                CornerRadius="4" 
                                                Margin="0,0,0,12"
                                                Padding="12">
                                            <StackPanel>
                                                <!-- Recommendation header -->
                                                <TextBlock Text="{Binding Category, FallbackValue='Recommendation'}" 
                                                           Foreground="{DynamicResource AccentBrush}" 
                                                           FontWeight="SemiBold" 
                                                           FontSize="12" 
                                                           Margin="0,0,0,6"/>
                                                
                                                <!-- Recommendation message -->
                                                <TextBlock Text="{Binding Message, FallbackValue='No message available'}" 
                                                           Foreground="#CCCCCC" 
                                                           FontSize="11" 
                                                           TextWrapping="Wrap" 
                                                           Margin="0,0,0,8"/>
                                                
                                                <!-- Apply button (only show if SuggestedEdit exists) -->
                                                <Button Content="ðŸ’¡ Apply Suggestion" 
                                                        Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.ApplySuggestedEditCommand}"
                                                        CommandParameter="{Binding}"
                                                        Background="{DynamicResource AccentBrush}"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Padding="8,4"
                                                        FontSize="11"
                                                        HorizontalAlignment="Left"
                                                        Visibility="{Binding SuggestedEdit, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="20,20,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Save button -->
            <Button Grid.Column="1"
                    Command="{Binding SaveCommand}"
                    Margin="0,0,12,0"
                    Padding="16,8"
                    MinWidth="80"
                    Content="Save"/>

            <!-- Cancel button -->
            <Button Grid.Column="2"
                    Command="{Binding CancelCommand}"
                    Padding="16,8"
                    MinWidth="80"
                    Content="Cancel"/>
        </Grid>

        <!-- Analysis Overlay -->
        <Grid Grid.RowSpan="3"
              Background="#99000000"
              Visibility="{Binding IsAnalyzing, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="â—" 
                           FontSize="48" 
                           Foreground="{DynamicResource AccentBrush}"
                           HorizontalAlignment="Center"
                           RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <RotateTransform x:Name="SpinTransform"/>
                    </TextBlock.RenderTransform>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="SpinTransform"
                                                   Storyboard.TargetProperty="Angle"
                                                   From="0" To="360" Duration="0:0:2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
                <TextBlock Text="Analyzing requirement..."
                           Foreground="White"
                           FontSize="14"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>