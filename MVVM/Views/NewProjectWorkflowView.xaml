<UserControl x:Class="TestCaseEditorApp.MVVM.Views.NewProjectWorkflowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900"
             Background="#2B2B2B">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:BoolToVisibilityConverter x:Key="InvertBoolConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="20">
        <StackPanel MaxWidth="800" HorizontalAlignment="Center">
            
            <!-- Step 1: Workspace Setup -->
            <Border Background="#333333" 
                    CornerRadius="8" 
                    Padding="25" 
                    Margin="0,0,0,20"
                    BorderBrush="#444444"
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Step indicator -->
                    <Border Grid.Column="0" 
                            Background="DarkOrange" 
                            CornerRadius="15" 
                            Width="30" Height="30" 
                            Margin="0,0,20,0"
                            VerticalAlignment="Top">
                        <TextBlock Text="1" 
                                   Foreground="White" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Workspace Setup" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="DarkOrange" 
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Create your AnythingLLM workspace for AI-powered analysis." 
                                   Foreground="#CCCCCC" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,15"
                                   LineHeight="20"/>
                        
                        <!-- Workspace Name -->
                        <Grid Margin="0,0,0,15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Workspace Name" 
                                           Foreground="#CCCCCC" 
                                           FontWeight="SemiBold"/>
                                <!-- Torch icon for duplicate warning -->
                                <TextBlock Text="ðŸ”¥" 
                                           Margin="8,0,0,0"
                                           VerticalAlignment="Center"
                                           ToolTip="This name already exists"
                                           Visibility="{Binding IsDuplicateName, Converter={StaticResource BoolToVis}}"/>
                            </StackPanel>
                            
                            <Border Grid.Row="1" 
                                    CornerRadius="4" 
                                    Padding="12,8"
                                    BorderThickness="1">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#444444"/>
                                        <Setter Property="BorderBrush" Value="#555555"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDuplicateName}" Value="True">
                                                <Setter Property="Background" Value="#4D3319"/>
                                                <Setter Property="BorderBrush" Value="#D2691E"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBox Text="{Binding WorkspaceName, UpdateSourceTrigger=PropertyChanged}" 
                                         Background="Transparent"
                                         BorderThickness="0"
                                         FontSize="14"
                                         Tag="Enter workspace name (e.g., 'Project Alpha Analysis')">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Foreground" Value="#CCCCCC"/>
                                            <Setter Property="FontWeight" Value="Normal"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDuplicateName}" Value="True">
                                                    <Setter Property="Foreground" Value="#FFD700"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Setter Property="FontStyle" Value="Italic"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </Border>
                        </Grid>
                        
                        <!-- Workspace Description -->
                        <Grid Margin="0,0,0,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="Description (Optional)" 
                                       Foreground="#CCCCCC" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>
                            
                            <Border Grid.Row="1" 
                                    Background="#444444" 
                                    CornerRadius="4" 
                                    Padding="12,8"
                                    BorderBrush="#555555"
                                    BorderThickness="1"
                                    Height="80">
                                <TextBox Text="{Binding WorkspaceDescription, UpdateSourceTrigger=PropertyChanged}" 
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="#CCCCCC"
                                         FontSize="14"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalAlignment="Top"
                                         Tag="Brief description of this project"/>
                            </Border>
                        </Grid>

                        <!-- Submit Button and Validation -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Submit Button with Activity Indicator -->
                            <Button Grid.Row="0"
                                    Command="{Binding ValidateWorkspaceCommand}"
                                    HorizontalAlignment="Left"
                                    MinWidth="200">
                                
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="DarkOrange"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="20,12"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="Bd" 
                                                            Background="{TemplateBinding Background}" 
                                                            CornerRadius="4" 
                                                            Padding="{TemplateBinding Padding}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Bd" Property="Background" Value="Orange"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="Bd" Property="Background" Value="#CC6600"/>
                                                            <Setter TargetName="Bd" Property="RenderTransform">
                                                                <Setter.Value>
                                                                    <TranslateTransform Y="1"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Opacity" Value="0.5"/>
                                                            <Setter Property="Cursor" Value="Arrow"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                                
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <!-- Activity Indicator -->
                                    <Border Width="20" Height="20" 
                                            Visibility="{Binding IsValidatingWorkspace, Converter={StaticResource BoolToVis}}"
                                            Margin="0,0,8,0">
                                        <Ellipse Fill="White" Width="16" Height="16">
                                            <Ellipse.RenderTransform>
                                                <RotateTransform x:Name="SpinTransform"/>
                                            </Ellipse.RenderTransform>
                                            <Ellipse.Triggers>
                                                <EventTrigger RoutedEvent="Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetName="SpinTransform"
                                                                           Storyboard.TargetProperty="Angle"
                                                                           From="0" To="360" Duration="0:0:1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Ellipse.Triggers>
                                        </Ellipse>
                                    </Border>
                                    
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Create Workspace"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsValidatingWorkspace}" Value="True">
                                                        <Setter Property="Text" Value="Creating..."/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Button>
                            
                            <!-- Result Message -->
                            <Border Grid.Row="1" 
                                    Margin="0,15,0,0"
                                    Padding="12,8"
                                    Visibility="{Binding HasValidationMessage, Converter={StaticResource BoolToVis}}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#FFE6E6"/>
                                        <Setter Property="BorderBrush" Value="#FF6B6B"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding WorkspaceValidationSuccess}" Value="True">
                                                <Setter Property="Background" Value="#E6FFE6"/>
                                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" 
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="&#xE783;"/> <!-- Error icon -->
                                                <Setter Property="Foreground" Value="#FF6B6B"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding WorkspaceValidationSuccess}" Value="True">
                                                        <Setter Property="Text" Value="&#xE73E;"/> <!-- Check icon -->
                                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    
                                    <TextBlock Text="{Binding WorkspaceValidationMessage}"
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#D32F2F"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding WorkspaceValidationSuccess}" Value="True">
                                                        <Setter Property="Foreground" Value="#2E7D32"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Step 2: Import Requirements -->
            <Border Background="#333333" 
                    CornerRadius="8" 
                    Padding="25" 
                    Margin="0,0,0,20"
                    BorderThickness="2">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="BorderBrush" Value="#444444"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasWorkspaceName}" Value="True">
                                <Setter Property="BorderBrush" Value="DarkOrange"/>
                                <Setter Property="Background" Value="#3A3A3A"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Step indicator -->
                    <Border Grid.Column="0" 
                            Background="DarkOrange" 
                            CornerRadius="15" 
                            Width="30" Height="30" 
                            Margin="0,0,20,0"
                            VerticalAlignment="Top">
                        <TextBlock Text="2" 
                                   Foreground="White" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Import Requirements" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="DarkOrange" 
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Select the Word document containing your requirements." 
                                   Foreground="#CCCCCC" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,15"
                                   LineHeight="20"/>
                        
                        <DockPanel>
                            <Button DockPanel.Dock="Right" 
                                    Content="Browse..." 
                                    Padding="15,8" 
                                    Margin="10,0,0,0"
                                    Background="DarkOrange"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Command="{Binding SelectDocumentCommand}"/>
                            
                            <Border Background="#444444" 
                                    CornerRadius="4" 
                                    Padding="12,8"
                                    BorderBrush="#555555"
                                    BorderThickness="1">
                                <TextBlock Text="{Binding SelectedDocumentPath, FallbackValue='No document selected'}" 
                                           Foreground="#CCCCCC"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </DockPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Step 3: Processing Options -->
            <Border Background="#333333" 
                    CornerRadius="8" 
                    Padding="25" 
                    Margin="0,0,0,20"
                    BorderThickness="2">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="BorderBrush" Value="#444444"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasSelectedDocument}" Value="True">
                                <Setter Property="BorderBrush" Value="DarkOrange"/>
                                <Setter Property="Background" Value="#3A3A3A"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Step indicator -->
                    <Border Grid.Column="0" 
                            Background="DarkOrange" 
                            CornerRadius="15" 
                            Width="30" Height="30" 
                            Margin="0,0,20,0"
                            VerticalAlignment="Top">
                        <TextBlock Text="3" 
                                   Foreground="White" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Processing Options" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="DarkOrange" 
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Configure how your requirements will be processed and analyzed." 
                                   Foreground="#CCCCCC" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,20"
                                   LineHeight="20"/>
                        
                        <!-- Auto Analyze Option -->
                        <Border Background="#2A2A2A" 
                                CornerRadius="6" 
                                Padding="15" 
                                Margin="0,0,0,12"
                                BorderBrush="#444444"
                                BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <CheckBox Grid.Column="0" 
                                          IsChecked="{Binding AutoAnalyzeEnabled}" 
                                          VerticalAlignment="Top" 
                                          Margin="0,2,15,0"/>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="ðŸ” Auto-Analyze Requirements" 
                                               FontWeight="SemiBold" 
                                               Foreground="DarkOrange" 
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="Automatically analyze each requirement after import to extract key information and suggest verification methods." 
                                               Foreground="#CCCCCC" 
                                               TextWrapping="Wrap"
                                               FontSize="13"
                                               LineHeight="18"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- ChatGPT Export Option -->
                        <Border Background="#2A2A2A" 
                                CornerRadius="6" 
                                Padding="15" 
                                Margin="0,0,0,0"
                                BorderBrush="#444444"
                                BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <CheckBox Grid.Column="0" 
                                          IsChecked="{Binding AutoExportEnabled}" 
                                          VerticalAlignment="Top" 
                                          Margin="0,2,15,0"/>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="ðŸ’¬ Create ChatGPT Export" 
                                               FontWeight="SemiBold" 
                                               Foreground="DarkOrange" 
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="Automatically create a ChatGPT-friendly export file for external AI analysis." 
                                               Foreground="#CCCCCC" 
                                               TextWrapping="Wrap"
                                               FontSize="13"
                                               LineHeight="18"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Step 4: Project File -->
            <Border Background="#333333" 
                    CornerRadius="8" 
                    Padding="25" 
                    Margin="0,0,0,20"
                    BorderThickness="2">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="BorderBrush" Value="#444444"/>
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding HasWorkspaceName}" Value="True"/>
                                    <Condition Binding="{Binding HasSelectedDocument}" Value="True"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="BorderBrush" Value="DarkOrange"/>
                                <Setter Property="Background" Value="#3A3A3A"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Step indicator -->
                    <Border Grid.Column="0" 
                            Background="DarkOrange" 
                            CornerRadius="15" 
                            Width="30" Height="30" 
                            Margin="0,0,20,0"
                            VerticalAlignment="Top">
                        <TextBlock Text="4" 
                                   Foreground="White" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Project Configuration" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="DarkOrange" 
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Configure your project name and save location." 
                                   Foreground="#CCCCCC" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,15"
                                   LineHeight="20"/>
                        
                        <!-- Project Name -->
                        <Grid Margin="0,0,0,15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="Project Name" 
                                       Foreground="#CCCCCC" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>
                            
                            <Border Grid.Row="1" 
                                    Background="#444444" 
                                    CornerRadius="4" 
                                    Padding="12,8"
                                    BorderBrush="#555555"
                                    BorderThickness="1">
                                <TextBox Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}" 
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="#CCCCCC"
                                         FontSize="14"/>
                            </Border>
                        </Grid>
                        
                        <!-- Save Location -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="Project File Location" 
                                       Foreground="#CCCCCC" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>
                            
                            <DockPanel Grid.Row="1">
                                <Button DockPanel.Dock="Right" 
                                        Content="Choose..." 
                                        Padding="15,8" 
                                        Margin="10,0,0,0"
                                        Background="DarkOrange"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Command="{Binding ChooseProjectSaveLocationCommand}"/>
                                
                                <Border Background="#444444" 
                                        CornerRadius="4" 
                                        Padding="12,8"
                                        BorderBrush="#555555"
                                        BorderThickness="1">
                                    <TextBlock Text="{Binding ProjectSavePath, FallbackValue='Choose location to save project file (.tcex.json)'}" 
                                               Foreground="#CCCCCC"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </DockPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <Border Background="#333333" 
                    CornerRadius="8" 
                    Padding="25" 
                    BorderBrush="#444444"
                    BorderThickness="1">
                <StackPanel>
                    <!-- Ready Status -->
                    <Border Background="#1E4A1E" 
                            CornerRadius="6" 
                            Padding="15,10" 
                            Margin="0,0,0,20"
                            BorderBrush="#2E7D32"
                            BorderThickness="1"
                            Visibility="{Binding CanProceed, Converter={StaticResource BoolToVis}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="âœ…" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" 
                                       Text="Ready to create project! All required settings have been configured." 
                                       Foreground="#81C784" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    
                    <!-- Action Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="1" 
                                Content="Cancel" 
                                Padding="20,12" 
                                Margin="0,0,10,0"
                                Background="Transparent"
                                Foreground="#CCCCCC"
                                BorderBrush="#666666"
                                BorderThickness="1"
                                Cursor="Hand"
                                Command="{Binding CancelCommand}"/>
                        
                        <Button Grid.Column="2" 
                                Content="ðŸš€ Create Project" 
                                Padding="25,12" 
                                Background="DarkOrange"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                FontWeight="SemiBold"
                                FontSize="14"
                                IsEnabled="{Binding CanProceed}"
                                Command="{Binding CreateProjectCommand}"/>
                    </Grid>
                    
                    <!-- Missing Requirements Info -->
                    <StackPanel Margin="0,15,0,0" 
                                Visibility="{Binding CanProceed, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}">
                        <TextBlock Text="Complete the steps above to continue:" 
                                   Foreground="#FFA500" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,8"/>
                        
                        <StackPanel Orientation="Vertical">
                            <TextBlock Margin="0,0,0,3">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasWorkspaceName}" Value="True">
                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                <Setter Property="Text" Value="âœ… Enter workspace name"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <Run Text="â€¢ Enter workspace name"/>
                            </TextBlock>
                            
                            <TextBlock Margin="0,0,0,3">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsWorkspaceCreated}" Value="True">
                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                <Setter Property="Text" Value="âœ… Create AnythingLLM workspace"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <Run Text="â€¢ Create AnythingLLM workspace"/>
                            </TextBlock>
                            
                            <TextBlock Margin="0,0,0,3">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasSelectedDocument}" Value="True">
                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                <Setter Property="Text" Value="âœ… Select requirements document"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <Run Text="â€¢ Select requirements document"/>
                            </TextBlock>
                            
                            <TextBlock Margin="0,0,0,3">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasProjectName}" Value="True">
                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                <Setter Property="Text" Value="âœ… Enter project name"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <Run Text="â€¢ Enter project name"/>
                            </TextBlock>
                            
                            <TextBlock Margin="0,0,0,3">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
