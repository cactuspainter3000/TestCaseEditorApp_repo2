<UserControl x:Class="TestCaseEditorApp.MVVM.Views.WorkspaceSelectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:TestCaseEditorApp.MVVM.ViewModels"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             d:DataContext="{d:DesignInstance vm:WorkspaceSelectionViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="500">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Loading indicator -->
        <ProgressBar Grid.Row="0" 
                     Height="4"
                     IsIndeterminate="True"
                     Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                     Margin="0,0,0,10"
                     Foreground="DarkOrange"
                     Background="#333333"/>

        <!-- Main content -->
        <Grid Grid.Row="1" Visibility="{Binding IsServiceReady, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Workspace selection mode -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsCreateMode}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ShowDuplicateNameOptions}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                
                <TextBlock Grid.Row="0" 
                          Text="Select an existing workspace:" 
                          Foreground="White" 
                          FontSize="14"
                          Margin="0,0,0,10"/>

                <ListBox Grid.Row="1"
                         ItemsSource="{Binding Workspaces}"
                         SelectedItem="{Binding SelectedWorkspace}"
                         Background="#3C3C3C"
                         BorderBrush="#555555"
                         Foreground="White"
                         MaxHeight="200"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" Margin="8,4"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- Workspace creation mode -->
            <Grid Grid.Row="0" Visibility="{Binding IsCreateMode, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                          Text="Create a new workspace:" 
                          Foreground="DarkOrange" 
                          FontSize="14"
                          Margin="0,0,0,10"/>

                <TextBox Grid.Row="1"
                         Text="{Binding NewWorkspaceName, UpdateSourceTrigger=PropertyChanged}"
                         Height="32"
                         Background="#3C3C3C"
                         Foreground="White"
                         BorderBrush="#555555"
                         BorderThickness="1"
                         Padding="8,5"
                         Tag="Enter workspace name"/>
            </Grid>

            <!-- Duplicate name warning -->
            <Grid Grid.Row="0" Visibility="{Binding ShowDuplicateNameOptions, Converter={StaticResource BoolToVisibilityConverter}}">
                <Border
                        Padding="15"
                        Margin="0,0,0,15"
                        Background="#333333"
                        BorderBrush="Orange"
                        BorderThickness="2"
                        CornerRadius="4">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="⚠️" 
                                      Foreground="Orange" 
                                      FontSize="14"
                                      Margin="0,0,8,0"/>
                            <TextBlock Text="Duplicate Workspace Name" 
                                      Foreground="Orange" 
                                      FontSize="14"
                                      FontWeight="SemiBold"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,8">
                                <Run Text="A workspace named '" Foreground="#CCCCCC" FontSize="13"/>
                                <Run Text="{Binding DuplicateWorkspaceName}" Foreground="White" FontWeight="SemiBold" FontSize="13"/>
                                <Run Text="' already exists." Foreground="#CCCCCC" FontSize="13"/>
                        </TextBlock>
                        <TextBlock Text="What would you like to do?" 
                                  Foreground="#CCCCCC" 
                                  FontSize="13"
                                  Margin="0,0,0,10"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Open Existing" 
                                   Padding="12,6"
                                   Margin="0,0,8,0"
                                   Style="{StaticResource ActionButton}"
                                   Command="{Binding OpenExistingCommand}"/>
                            
                            <Button Content="Choose Different Name" 
                                   Padding="12,6"
                                   Style="{StaticResource ActionButton}"
                                   Command="{Binding CreateNewCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Action buttons -->
        <Grid Grid.Row="3" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" 
                    Content="Open" 
                    Padding="15,8" 
                    Margin="5,0"
                    Style="{StaticResource ActionButton}"
                    Command="{Binding SelectWorkspaceCommand}"/>

            <Button Grid.Column="2" 
                    Content="Cancel" 
                    Padding="15,8" 
                    Margin="5,0"
                    Style="{StaticResource ActionButton}"
                    Command="{Binding CancelCommand}"/>
        </Grid>
    </Grid>
</UserControl>