<UserControl x:Class="TestCaseEditorApp.MVVM.Views.InitialStateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/DesignSystem.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource Brush.Background.Menu}">
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    MaxWidth="500"
                    Margin="40">
            
            <!-- Welcome header -->
            <TextBlock Text="Welcome to Systems App"
                       FontSize="32"
                       FontWeight="Light"
                       Foreground="{StaticResource Brush.Accent.Primary}"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <!-- Subtitle -->
            <TextBlock Text="Get started by selecting an option from the side menu"
                       FontSize="16"
                       Foreground="#CCCCCC"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,40"/>
            
            <!-- Getting started tips -->
            <Border Background="#333333"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Getting Started"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource Brush.Accent.Primary}"
                               Margin="0,0,0,15"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="•" Foreground="#CCCCCC" Margin="0,0,8,0" VerticalAlignment="Top"/>
                        <TextBlock Text="Create a new project to start generating test cases"
                                   Foreground="#CCCCCC"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="•" Foreground="#CCCCCC" Margin="0,0,8,0" VerticalAlignment="Top"/>
                        <TextBlock Text="Import requirements from documents or previous projects"
                                   Foreground="#CCCCCC"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="•" Foreground="#CCCCCC" Margin="0,0,8,0" VerticalAlignment="Top"/>
                        <TextBlock Text="Use the side menu to navigate between different tools and features"
                                   Foreground="#CCCCCC"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </Grid>
</UserControl>