<UserControl x:Class="TestCaseEditorApp.MVVM.Views.TestCaseGenerator_HeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             mc:Ignorable="d"
             d:DesignHeight="75" d:DesignWidth="800">
    
    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <!--
      Compact header:
      - "File" uses the app theme PillActionButtonStyle
      - Description now spans columns 1–2 (center + right) while reserving safe space for the right stack
      - Full description available on hover via ToolTip (ShowDuration increased for readability)
      - Background left transparent to match your request
    -->

    <Grid Margin="6" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- file menu -->
            <ColumnDefinition Width="*"/>
            <!-- description -->
            <ColumnDefinition Width="250"/>
            <!-- dedicated space for status -->
        </Grid.ColumnDefinitions>

        <!-- LEFT: File menu + Project Info -->
        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Top">
            <!--<ToggleButton x:Name="HeaderFileToggle"
                          Style="{StaticResource PillActionToggleButtonStyle}"
                          IsChecked="{Binding IsFileMenuOpen, Mode=TwoWay}"
                          Cursor="Hand"
                          ToolTip="File menu"
                          VerticalAlignment="Top"
                          MinWidth="72"
                          MinHeight="28">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="4,0">
                    <TextBlock Text="File" FontWeight="SemiBold" />
                    <TextBlock Text=" ▼" Margin="6,0,0,0" />
                </StackPanel>
            </ToggleButton>-->
            
            <!-- Project Info Section -->
            <StackPanel Orientation="Vertical" 
                        Visibility="{Binding IsProjectLoaded, Converter={StaticResource BoolToVisibilityConverter}}">
                <!-- Project Name -->
                <TextBlock Text="{Binding ProjectName}" FontWeight="SemiBold" FontSize="12" 
                           Foreground="#FFE8E8E8" Margin="0,0,0,2"/>
                
                <!-- Test Cases Count (indented to show hierarchy) -->
                <TextBlock Style="{StaticResource HeaderSmallText}"
                           HorizontalAlignment="Left"
                           TextTrimming="CharacterEllipsis"
                           ToolTip="{Binding RequirementsWithTestCasesCount}"
                           Margin="12,0,0,0">
                    <Run Text="{Binding RequirementsWithTestCasesCount}" />
                    <Run Text=" with Test Cases" />
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <!-- CENTER: Description in its own column -->
        <Border Grid.Column="1"
                Style="{StaticResource HeaderDescriptionBorderStyle}"
                Padding="12"
                Margin="0,6,12,0" 
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                MaxHeight="120">
            <TextBlock Text="{Binding RequirementDescription}"
                       Style="{StaticResource DescriptionText}"
                       ToolTip="{Binding RequirementDescription}"
                       ToolTipService.ShowDuration="60000" />
        </Border>

        <!-- RIGHT: AnythingLLM Status and Verification Method only -->
        <StackPanel Grid.Column="2" VerticalAlignment="Top" Margin="8,0,0,0" Orientation="Vertical">
            <!-- AnythingLLM Status -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,6">
                <Ellipse Style="{StaticResource LlmEllipseStyle}"/>
                <TextBlock Text="{Binding OllamaStatusMessage}" Style="{StaticResource LlmStatusTextStyle}"/>
            </StackPanel>

            <!-- Verification method (collapses when empty) -->
            <TextBlock FontSize="11"
                       HorizontalAlignment="Right"
                       TextTrimming="CharacterEllipsis">
                <Run Text="Verification Method: " Foreground="#AAAAAA"/>
                <Run Text="{Binding RequirementMethod}"/>
                <TextBlock.ToolTip>
                    <TextBlock>
                        <Run Text="Verification Method: "/>
                        <Run Text="{Binding RequirementMethod}"/>
                    </TextBlock>
                </TextBlock.ToolTip>
                <TextBlock.Style>
                    <Style TargetType="TextBlock" BasedOn="{StaticResource HeaderSmallText}">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding RequirementMethod}" Value="">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding RequirementMethod}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>