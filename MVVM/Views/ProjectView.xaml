<UserControl x:Class="TestCaseEditorApp.MVVM.Views.ProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/DesignSystem.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource Brush.Background.Menu}">
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    MaxWidth="600"
                    Margin="40,20,40,40">
            
            <!-- Project header -->
            <TextBlock Text="Project"
                       FontSize="28"
                       FontWeight="Light"
                       Foreground="{StaticResource Brush.Accent.Primary}"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <!-- Description -->
            <TextBlock Text="Manage your test case projects and workspace settings"
                       FontSize="16"
                       Foreground="#CCCCCC"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,20"/>
                       
            <!-- AnythingLLM Status Section -->
            <Border Background="#2D2D30"
                    CornerRadius="6"
                    Padding="20,15"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Center">
                    
                    <!-- Status Indicator -->
                    <Border Width="8" Height="8" 
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            CornerRadius="4">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#CC6666"/> <!-- Red -->
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAnythingLLMStarting}" Value="True">
                                        <Setter Property="Background" Value="Orange"/> <!-- Orange when starting -->
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsAnythingLLMAvailable}" Value="True">
                                        <Setter Property="Background" Value="#66CC66"/> <!-- Green when connected -->
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        
                        <!-- Spinning animation for startup (small white dot that traverses the circle) -->
                        <Border Width="6" Height="6" 
                                Background="White" 
                                Opacity="0.8"
                                CornerRadius="3"
                                Visibility="{Binding IsAnythingLLMStarting, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Border.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotate"/>
                            </Border.RenderTransform>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                                           Storyboard.TargetProperty="Angle"
                                                           From="0" To="360" Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                        </Border>
                    </Border>
                    
                    <!-- Status Message -->
                    <TextBlock Text="{Binding AnythingLLMStatusMessage}"
                              FontSize="14"
                              Foreground="#CCCCCC"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Project management section -->
            <Border Background="#333333"
                    CornerRadius="8"
                    Padding="30"
                    Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Project Management"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource Brush.Accent.Primary}"
                               Margin="0,0,0,20"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="•" Foreground="#CCCCCC" Margin="0,0,10,0" VerticalAlignment="Top"/>
                        <TextBlock Text="Create and manage test case generation projects"
                                   Foreground="#CCCCCC"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="•" Foreground="#CCCCCC" Margin="0,0,10,0" VerticalAlignment="Top"/>
                        <TextBlock Text="Configure workspace settings and preferences"
                                   Foreground="#CCCCCC"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="•" Foreground="#CCCCCC" Margin="0,0,10,0" VerticalAlignment="Top"/>
                        <TextBlock Text="Set up project-specific templates and configurations"
                                   Foreground="#CCCCCC"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="•" Foreground="#CCCCCC" Margin="0,0,10,0" VerticalAlignment="Top"/>
                        <TextBlock Text="Export and import project settings"
                                   Foreground="#CCCCCC"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </Grid>
</UserControl>