<Window x:Class="TestCaseEditorApp.MVVM.Views.EditableTableEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:edc="clr-namespace:EditableDataControl.Controls"
        Title="Edit Table" 
        Width="960" 
        Height="640" 
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MenuBackground}">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Edit table"
                   Foreground="White"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,16"/>

        <!-- Editor -->
        <Border Grid.Row="1"
                Background="#2D2D30"
                BorderBrush="{DynamicResource AccentBrush}"
                BorderThickness="1"
                Margin="0,0,0,16">
            <edc:EditableDataControl x:Name="EditorControl"
                                     Background="#2D2D30" />
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Save" 
                    Width="80" 
                    Height="32" 
                    IsDefault="True" 
                    Click="Ok_Click"
                    Style="{StaticResource PillActionButtonStyle}"
                    FontWeight="SemiBold"
                    Margin="0,0,8,0"/>
            <Button Content="Cancel" 
                    Width="80" 
                    Height="32" 
                    IsCancel="True" 
                    Click="Cancel_Click"
                    Style="{StaticResource PillActionButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>