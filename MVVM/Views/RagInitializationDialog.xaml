<UserControl x:Class="TestCaseEditorApp.MVVM.Views.RagInitializationDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="500">

    <Border Background="#2D2D30" 
            BorderBrush="#3F3F46" 
            BorderThickness="1" 
            CornerRadius="8"
            Padding="30">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="No analysis available"
                       Foreground="#CCCCCC"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <!-- Status message with spinner -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,25">
                <!-- Spinning indicator -->
                <Border Width="16" Height="16" 
                        Margin="0,0,10,0"
                        VerticalAlignment="Center">
                    <Ellipse Width="12" Height="12"
                             Stroke="DarkOrange" 
                             StrokeThickness="2"
                             StrokeDashArray="6,2">
                        <Ellipse.RenderTransform>
                            <RotateTransform x:Name="SpinTransform"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="SpinTransform"
                                                       Storyboard.TargetProperty="Angle"
                                                       From="0" To="360" Duration="0:0:2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </Border>
                
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="DarkOrange"
                           FontSize="14"/>
            </StackPanel>
            
            <!-- Progress bar -->
            <Border Background="#404040" 
                    Height="6" 
                    CornerRadius="3"
                    Margin="0,0,0,15">
                <Border Background="DarkOrange" 
                        Height="6" 
                        CornerRadius="3"
                        HorizontalAlignment="Left"
                        Width="{Binding ProgressWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            </Border>
            
            <!-- Elapsed time -->
            <TextBlock Text="{Binding ElapsedTimeText}" 
                       Foreground="#999999"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <!-- Current step -->
            <TextBlock Text="{Binding CurrentStep}" 
                       Foreground="DarkOrange"
                       FontSize="12"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>