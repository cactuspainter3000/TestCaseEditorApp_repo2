<UserControl x:Class="TestCaseEditorApp.MVVM.Views.ImportRequirementsWorkflowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
             xmlns:importconv="clr-namespace:TestCaseEditorApp.MVVM.Domains.TestCaseGeneration.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#2B2B2B">
    
    <UserControl.Resources>
        <importconv:NullToColorConverter x:Key="NullToColorConverter"/>
        <importconv:InvertBoolToVisConverter x:Key="InvertBoolToVisConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="20">
        <StackPanel MaxWidth="800" HorizontalAlignment="Center">
            
            <!-- Welcome Header -->
            <Border Background="#333333" 
                    CornerRadius="8" 
                    Padding="30,25" 
                    Margin="0,0,0,25"
                    BorderBrush="DarkOrange"
                    BorderThickness="1">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ“" FontSize="48" Margin="0,0,0,15" HorizontalAlignment="Center"/>
                    <TextBlock Text="Import Requirements Workflow" 
                               FontSize="28" 
                               FontWeight="SemiBold" 
                               Foreground="DarkOrange" 
                               Margin="0,0,0,10"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Configure your requirements import with complete control over the process" 
                               FontSize="14" 
                               Foreground="#CCCCCC" 
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               LineHeight="22"/>
                </StackPanel>
            </Border>

            <!-- Step 1: Document Selection -->
            <Border Background="#333333" 
                    CornerRadius="8" 
                    Padding="25" 
                    Margin="0,0,0,20"
                    BorderBrush="#444444"
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Step indicator -->
                    <Border Grid.Column="0" 
                            Background="DarkOrange" 
                            CornerRadius="15" 
                            Width="30" Height="30" 
                            Margin="0,0,20,0"
                            VerticalAlignment="Top">
                        <TextBlock Text="1" 
                                   Foreground="White" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Select Document" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="DarkOrange" 
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Choose the Word document (.docx) containing the requirements you want to import." 
                                   Foreground="#CCCCCC" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,15"
                                   LineHeight="20"/>
                        
                        <DockPanel>
                            <Button DockPanel.Dock="Right" 
                                    Content="Browse..." 
                                    Padding="15,8" 
                                    Margin="10,0,0,0"
                                    Background="DarkOrange"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Command="{Binding SelectDocumentCommand}"/>
                            
                            <Border Background="#444444" 
                                    CornerRadius="4" 
                                    Padding="12,8"
                                    BorderBrush="#555555"
                                    BorderThickness="1">
                                <TextBlock Text="{Binding SelectedDocumentPath, FallbackValue='No document selected'}" 
                                           Foreground="#CCCCCC"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </DockPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Step 2: Import Options -->
            <Border Background="#333333" 
                    CornerRadius="8" 
                    Padding="25" 
                    Margin="0,0,0,20"
                    BorderBrush="#444444"
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Step indicator -->
                    <Border Grid.Column="0" 
                            Background="DarkOrange" 
                            CornerRadius="15" 
                            Width="30" Height="30" 
                            Margin="0,0,20,0"
                            VerticalAlignment="Top">
                        <TextBlock Text="2" 
                                   Foreground="White" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Configure Import Options" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="DarkOrange" 
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Choose how to process your requirements during import." 
                                   Foreground="#CCCCCC" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,20"
                                   LineHeight="20"/>
                        
                        <!-- Auto Analyze Option -->
                        <Border Background="#2A2A2A" 
                                CornerRadius="6" 
                                Padding="15" 
                                Margin="0,0,0,12"
                                BorderBrush="#444444"
                                BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <CheckBox Grid.Column="0" 
                                          IsChecked="{Binding AutoAnalyzeEnabled}" 
                                          VerticalAlignment="Top" 
                                          Margin="0,2,15,0"/>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="ðŸ” Auto-Analyze Requirements" 
                                               FontWeight="SemiBold" 
                                               Foreground="DarkOrange" 
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="Automatically analyze each requirement after import to extract key information and suggest verification methods." 
                                               Foreground="#CCCCCC" 
                                               TextWrapping="Wrap"
                                               FontSize="13"
                                               LineHeight="18"/>
                                    <TextBlock Text="âš ï¸ This may take several minutes for large documents" 
                                               Foreground="#FFA500" 
                                               FontStyle="Italic"
                                               FontSize="12"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- ChatGPT Export Option -->
                        <Border Background="#2A2A2A" 
                                CornerRadius="6" 
                                Padding="15" 
                                Margin="0,0,0,0"
                                BorderBrush="#444444"
                                BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <CheckBox Grid.Column="0" 
                                          IsChecked="{Binding AutoExportEnabled}" 
                                          VerticalAlignment="Top" 
                                          Margin="0,2,15,0"/>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="ðŸ’¬ Prepare ChatGPT Export" 
                                               FontWeight="SemiBold" 
                                               Foreground="DarkOrange" 
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="Automatically create a ChatGPT-friendly export file after import for external AI analysis." 
                                               Foreground="#CCCCCC" 
                                               TextWrapping="Wrap"
                                               FontSize="13"
                                               LineHeight="18"/>
                                    <TextBlock Text="ðŸ“ File will be saved to your Documents folder" 
                                               Foreground="#888888" 
                                               FontSize="12"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Step 3: Workspace Configuration -->
            <Border Background="#333333" 
                    CornerRadius="8" 
                    Padding="25" 
                    Margin="0,0,0,20"
                    BorderBrush="#444444"
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Step indicator -->
                    <Border Grid.Column="0" 
                            Background="DarkOrange" 
                            CornerRadius="15" 
                            Width="30" Height="30" 
                            Margin="0,0,20,0"
                            VerticalAlignment="Top">
                        <TextBlock Text="3" 
                                   Foreground="White" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Workspace Configuration" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="DarkOrange" 
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Name your workspace and choose where to save it." 
                                   Foreground="#CCCCCC" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,15"
                                   LineHeight="20"/>
                        
                        <!-- Workspace Name -->
                        <Grid Margin="0,0,0,15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="Workspace Name" 
                                       Foreground="#CCCCCC" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>
                            
                            <Border Grid.Row="1" 
                                    Background="#444444" 
                                    CornerRadius="4" 
                                    Padding="12,8"
                                    BorderBrush="#555555"
                                    BorderThickness="1">
                                <TextBox Text="{Binding WorkspaceName, UpdateSourceTrigger=PropertyChanged}" 
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="#CCCCCC"
                                         FontSize="14"/>
                            </Border>
                        </Grid>
                        
                        <!-- Save Location -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="Save Location" 
                                       Foreground="#CCCCCC" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>
                            
                            <DockPanel Grid.Row="1">
                                <Button DockPanel.Dock="Right" 
                                        Content="Choose..." 
                                        Padding="15,8" 
                                        Margin="10,0,0,0"
                                        Background="DarkOrange"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Command="{Binding ChooseWorkspaceLocationCommand}"/>
                                
                                <Border Background="#444444" 
                                        CornerRadius="4" 
                                        Padding="12,8"
                                        BorderBrush="#555555"
                                        BorderThickness="1">
                                    <TextBlock Text="{Binding WorkspaceSavePath, FallbackValue='Click Choose to select location'}" 
                                               Foreground="#CCCCCC"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </DockPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <Border Background="#333333" 
                    CornerRadius="8" 
                    Padding="25" 
                    BorderBrush="#444444"
                    BorderThickness="1">
                <StackPanel>
                    <!-- Ready Status -->
                    <Border Background="#1E4A1E" 
                            CornerRadius="6" 
                            Padding="15,10" 
                            Margin="0,0,0,20"
                            BorderBrush="#2E7D32"
                            BorderThickness="1"
                            Visibility="{Binding CanProceed, Converter={StaticResource BoolToVis}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="âœ…" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" 
                                       Text="Ready to import! All required settings have been configured." 
                                       Foreground="#81C784" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    
                    <!-- Action Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="1" 
                                Content="Cancel" 
                                Padding="20,12" 
                                Margin="0,0,10,0"
                                Background="Transparent"
                                Foreground="#CCCCCC"
                                BorderBrush="#666666"
                                BorderThickness="1"
                                Cursor="Hand"
                                Command="{Binding CancelCommand}"/>
                        
                        <Button Grid.Column="2" 
                                Content="ðŸš€ Start Import" 
                                Padding="25,12" 
                                Background="DarkOrange"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                FontWeight="SemiBold"
                                FontSize="14"
                                IsEnabled="{Binding CanProceed}"
                                Command="{Binding StartImportCommand}"/>
                    </Grid>
                    
                    <!-- Missing Requirements Info -->
                    <StackPanel Margin="0,15,0,0" 
                                Visibility="{Binding CanProceed, Converter={StaticResource InvertBoolToVisConverter}}">
                        <TextBlock Text="Complete the steps above to continue:" 
                                   Foreground="#FFA500" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,8"/>
                        
                        <StackPanel Orientation="Vertical">
                            <TextBlock Foreground="#CCCCCC" Margin="0,0,0,3"
                                       Text="â€¢ Select a document to import"/>
                            <TextBlock Foreground="#CCCCCC" Margin="0,0,0,3"
                                       Text="â€¢ Enter a workspace name"/>
                            <TextBlock Foreground="#CCCCCC" Margin="0,0,0,3"
                                       Text="â€¢ Choose a save location"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>