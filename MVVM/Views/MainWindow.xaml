<Window x:Class="TestCaseEditorApp.MVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:TestCaseEditorApp.MVVM.ViewModels"
        xmlns:views="clr-namespace:TestCaseEditorApp.MVVM.Views"
        xmlns:models="clr-namespace:TestCaseEditorApp.MVVM.Models"
        xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
        Height="665" Width="1200"
        d:DataContext="{d:DesignInstance vm:MainViewModelDesignStub, IsDesignTimeCreatable=True}"
        WindowStyle="None"
        Title="{Binding DisplayName}"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        d:DesignHeight="665" d:DesignWidth="1200">

    <Window.Resources>
        <conv:SectionSelectedConverter x:Key="SectionSelectedConverter" />

        <!-- Put resources directly in Window.Resources (do NOT nest a ResourceDictionary element here) -->

        <DataTemplate DataType="{x:Type vm:RequirementsViewModel}">
            <views:RequirementsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ClarifyingQuestionsViewModel}">
            <views:ClarifyingQuestionsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:TestCaseCreationViewModel}">
            <views:TestCaseCreationView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:WorkspaceHeaderViewModel}">
            <views:WorkspaceHeaderView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:PlaceholderViewModel}">
            <Border Padding="10" Background="White" CornerRadius="6">
                <TextBlock Text="{Binding Title}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Border>
        </DataTemplate>

        <!-- DataTemplate for TestCaseCreatorHeaderViewModel -->
        <DataTemplate DataType="{x:Type vm:TestCaseCreatorHeaderViewModel}">
            <views:TestCaseCreatorHeaderView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:TestCaseHeaderViewModel}">
            <DockPanel LastChildFill="True" Margin="6" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="0,0,12,0">
                    <Ellipse Width="10" Height="10" Margin="0,0,6,0" x:Name="LlmDotLegacy" Fill="Gray" VerticalAlignment="Center"/>
                    <TextBlock x:Name="LlmTextLegacy" VerticalAlignment="Center" Margin="0,0,12,0" Text="LLM: Unknown"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding WorkspaceName}" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="•" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentRequirementName}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="(" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding RequirementsWithTestCasesCount}" VerticalAlignment="Center" />
                    <TextBlock Text=" with test cases)" VerticalAlignment="Center" Margin="4,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" >
                    <Button Content="Open Requirements" Command="{Binding OpenRequirementsCommand}" Margin="6,0,0,0" />
                    <Button Content="Open Workspace" Command="{Binding OpenWorkspaceCommand}" Margin="6,0,0,0" />
                    <Button Content="Save" Command="{Binding SaveCommand}" Margin="6,0,0,0" />
                </StackPanel>
            </DockPanel>

            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsLlmConnected}" Value="True">
                    <Setter TargetName="LlmDotLegacy" Property="Fill" Value="Green"/>
                    <Setter TargetName="LlmTextLegacy" Property="Text" Value="LLM: Connected"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsLlmConnected}" Value="False">
                    <Setter TargetName="LlmDotLegacy" Property="Fill" Value="Red"/>
                    <Setter TargetName="LlmTextLegacy" Property="Text" Value="LLM: Disconnected"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:TestFlowHeaderViewModel}">
            <views:TestFlowHeaderView />
        </DataTemplate>

        <DataTemplate x:Key="StepDescriptorTemplate" DataType="{x:Type models:StepDescriptor}">
            <RadioButton Style="{StaticResource MenuButtonTheme}"
                     IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected, Mode=TwoWay}"
                     Margin="0,2,0,2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding DisplayName}" Foreground="White"/>
                    <TextBlock Text="{Binding Badge}" Foreground="DarkOrange" Margin="6,0,0,0"/>
                </StackPanel>
            </RadioButton>
        </DataTemplate>

        <!-- local fallbacks are defined elsewhere; these keys expect MainWindowResources.xaml to be merged -->
    </Window.Resources>

    <Border Background="#2e2e2e"
            MouseDown="Border_MouseDown"
            CornerRadius="20">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <!-- left menu fixed width -->
                <ColumnDefinition Width="4"/>
                <!-- gutter -->
                <ColumnDefinition Width="*"/>
                <!-- main content -->
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- title bar -->
                <RowDefinition Height="4"/>
                <RowDefinition Height="Auto"/>
                <!-- workspace header / summary -->
                <RowDefinition Height="4"/>
                <RowDefinition Height="*"/>
                <!-- workspace content -->
                <RowDefinition Height="4"/>
                <RowDefinition Height="Auto"/>
                <!-- bottom navigation area -->
            </Grid.RowDefinitions>

            <!-- Top title bar -->
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                    Style="{StaticResource ContentBorderStyle}">
                <Grid HorizontalAlignment="Stretch">
                    <TextBlock Text="Systems App"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Foreground="DarkOrange"
                               FontSize="25"
                               Margin="4,0,0,0"/>
                    <DockPanel Width="150" HorizontalAlignment="Right" Margin="3">
                        <Grid VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Minimize -->
                            <Button Grid.Column="0"
                                    Content="&#xE90F;"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="14"
                                    Style="{StaticResource MainWindowButtonControls}"
                                    Click="ButtonMinimize_Click"/>

                            <!-- Maximize/Restore -->
                            <Button Grid.Column="1"
                                    Content="&#xE923;"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="14"
                                    Style="{StaticResource MainWindowButtonControls}"
                                    Click="WindowStateButton_Click"
                                    Margin="4,0"/>

                            <!-- Close -->
                            <Button Grid.Column="2"
                                    Content="✕"
                                    FontSize="14"
                                    Style="{StaticResource MainWindowCloseButton}"
                                    Click="CloseButton_Click"
                                    Margin="4,0"/>
                        </Grid>
                    </DockPanel>
                </Grid>
            </Border>

            <!-- Workspace header -->
            <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource HeaderBorderStyle}" Height="75" Padding="0" Margin="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.ColumnSpan="4" Margin="6">
                        <!-- Header content rendered via the HeaderViewModel (DataTemplate or UserControl) -->
                        <ContentPresenter Content="{Binding HeaderViewModel}" />
                    </Grid>
                </Grid>
            </Border>

            <!-- Left menu section: Test Case / Test Flow, with one-open-at-a-time behavior -->
            <Border Grid.Column="0" Grid.Row="2" Grid.RowSpan="5"
                    Style="{StaticResource MenuSectionBorderStyle}">
                <Grid Background="#252525" Margin="5">
                    <StackPanel>
                        <!-- Test Case Creator group -->
                        <ToggleButton x:Name="TestCaseCreatorToggle"
                                      Style="{StaticResource MenuHeaderToggleStyle}"
                                      HorizontalAlignment="Stretch"
                                      Cursor="Hand"
                                      Margin="0,6,0,0"
                                      IsChecked="{Binding SelectedMenuSection,
                                                          Converter={StaticResource SectionSelectedConverter},
                                                          ConverterParameter=TestCase,
                                                          Mode=TwoWay}">
                            <TextBlock Text="Test Case Creator" Style="{StaticResource MenuHeaderTheme}" />
                        </ToggleButton>

                        <!-- Animated container for the TestCaseCreationSteps list -->
                        <Border Margin="0,4,0,0" Padding="0" Background="Transparent" ClipToBounds="True">
                            <Border.LayoutTransform>
                                <ScaleTransform ScaleY="0" />
                            </Border.LayoutTransform>

                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Opacity" Value="0" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsChecked, ElementName=TestCaseCreatorToggle}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="LayoutTransform.ScaleY"
                                                                         To="1"
                                                                         Duration="0:0:0.20"
                                                                         AccelerationRatio="0.15" DecelerationRatio="0.85" />
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                         To="1"
                                                                         Duration="0:0:0.14" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="LayoutTransform.ScaleY"
                                                                         To="0"
                                                                         Duration="0:0:0.16"
                                                                         AccelerationRatio="0.15" DecelerationRatio="0.85" />
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                         To="0"
                                                                         Duration="0:0:0.12" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <ListBox ItemsSource="{Binding TestCaseCreationSteps}"
                                     SelectedItem="{Binding SelectedStep, Mode=TwoWay}"
                                     ItemTemplate="{StaticResource StepDescriptorTemplate}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     SelectionMode="Single"
                                     Margin="0" d:ItemsSource="{d:SampleData ItemCount=5}">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <ContentPresenter />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </Border>

                        <!-- Test Flow Creator group -->
                        <ToggleButton x:Name="TestFlowCreatorToggle"
                                      Style="{StaticResource MenuHeaderToggleStyle}"
                                      HorizontalAlignment="Stretch"
                                      Cursor="Hand"
                                      Margin="0,6,0,0"
                                      IsChecked="{Binding SelectedMenuSection,
                                                          Converter={StaticResource SectionSelectedConverter},
                                                          ConverterParameter=TestFlow,
                                                          Mode=TwoWay}">
                            <TextBlock Text="Test Flow Creator" Style="{StaticResource MenuHeaderTheme}" />
                        </ToggleButton>

                        <Border Margin="0,4,0,0" Padding="0" Background="Transparent" ClipToBounds="True">
                            <Border.LayoutTransform>
                                <ScaleTransform ScaleY="0" />
                            </Border.LayoutTransform>

                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Opacity" Value="0" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsChecked, ElementName=TestFlowCreatorToggle}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="LayoutTransform.ScaleY"
                                                                         To="1"
                                                                         Duration="0:0:0.20"
                                                                         AccelerationRatio="0.15" DecelerationRatio="0.85" />
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                         To="1"
                                                                         Duration="0:0:0.14" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="LayoutTransform.ScaleY"
                                                                         To="0"
                                                                         Duration="0:0:0.16"
                                                                         AccelerationRatio="0.15" DecelerationRatio="0.85" />
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                         To="0"
                                                                         Duration="0:0:0.12" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <ListBox ItemsSource="{Binding TestFlowSteps}"
                                     ItemContainerStyle="{StaticResource MenuListBoxItemStyle}"
                                     SelectedItem="{Binding SelectedFlowStep, Mode=TwoWay}"
                                     ItemTemplate="{StaticResource StepDescriptorTemplate}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     SelectionMode="Single"
                                     Margin="0"/>
                        </Border>

                        <TextBlock VerticalAlignment="Bottom"
                                   Text="{Binding SapStatus}"
                                   HorizontalAlignment="Center"
                                   Foreground="{Binding SapForegroundStatus}"
                                   Style="{StaticResource MenuHeaderTheme}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content area -->
            <Border Grid.Column="2" Grid.Row="4" Style="{StaticResource ContentBorderStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <!-- use relative stars that are easy to reason about -->
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ContentControl Grid.Row="1" Grid.ColumnSpan="4" Margin="6"
                                    Content="{Binding CurrentStepViewModel}" />
                </Grid>
            </Border>

            <!-- Navigation area: compact, responsive controls (keeps your original placement) -->
            <!-- Bottom requirement navigation (Grid.Column=2 Grid.Row=6) -->
            <views:RequirementsNavigationControl
                Grid.Column="2"
                Grid.Row="6"
                DataContext="{Binding RequirementsNavigator}"/>
        </Grid>
    </Border>
</Window>