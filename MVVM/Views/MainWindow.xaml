<Window x:Class="TestCaseEditorApp.MVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:TestCaseEditorApp.MVVM.ViewModels"
        xmlns:tcgvm="clr-namespace:TestCaseEditorApp.MVVM.Domains.TestCaseGeneration.ViewModels"
        xmlns:views="clr-namespace:TestCaseEditorApp.MVVM.Views"
        xmlns:models="clr-namespace:TestCaseEditorApp.MVVM.Models"
        xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
        Height="665" Width="1200"
        d:DataContext="{d:DesignInstance vm:MainViewModelDesignStub, IsDesignTimeCreatable=True}"
        WindowStyle="None"
        Title="{Binding DisplayName, FallbackValue='Test Case Editor'}"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        d:DesignHeight="665" d:DesignWidth="1200">

    <Window.Resources>
        <conv:SectionSelectedConverter x:Key="SectionSelectedConverter" />
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />

        <!-- Put resources directly in Window.Resources (do NOT nest a ResourceDictionary element here) -->

        <DataTemplate DataType="{x:Type tcgvm:TestCaseGenerator_VM}">
            <views:TestCaseGenerator_View />
        </DataTemplate>

        <DataTemplate DataType="{x:Type tcgvm:TestCaseGenerator_AssumptionsVM}">
            <views:TestCaseGenerator_AssumptionsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type tcgvm:TestCaseGenerator_QuestionsVM}">
            <views:TestCaseGenerator_QuestionsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type tcgvm:TestCaseGenerator_CreationVM}">
            <views:TestCaseGenerator_CreationView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:WorkspaceHeaderViewModel}">
            <views:WorkspaceHeaderView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:PlaceholderViewModel}">
            <Border Padding="10" Background="White" CornerRadius="6">
                <TextBlock Text="{Binding Title}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Border>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:InitialStateViewModel}">
            <views:InitialStateView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ProjectViewModel}">
            <views:ProjectView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type tcgvm:RequirementsViewModel}">
            <views:RequirementsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:LLMLearningViewModel}">
            <views:LLMLearningView />
        </DataTemplate>

        <!-- App Icon Style -->
        <Style x:Key="AppIconStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Button Container Style with background hover -->
        <Style x:Key="IconButtonContainer" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#33FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Header Container Style with hover background -->
        <Style x:Key="HeaderContainerStyle" TargetType="StackPanel">
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#22FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Window Control Button Style with background and color hover -->
        <Style x:Key="WindowControlButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource MenuForeground}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Bd"
                                    Width="{TemplateBinding Width}"
                                    Height="{TemplateBinding Height}"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border x:Name="KbdFocus" CornerRadius="8" BorderBrush="{StaticResource FocusRing}" BorderThickness="1" Opacity="0" Margin="-2"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource MenuHover}"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource MenuPressed}"/>
                                <Setter TargetName="Bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Setter Property="Foreground" Value="{StaticResource DisabledBrush}"/>
                            </Trigger>

                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsKeyboardFocused" Value="True"/>
                                    <Condition Property="IsEnabled" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="KbdFocus" Property="Opacity" Value="1"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Window Control Icon Style with orange hover -->
        <Style x:Key="WindowControlIconStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="DarkOrange"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataTemplate for TestCaseGenerator_HeaderVM -->
        <DataTemplate DataType="{x:Type tcgvm:TestCaseGenerator_HeaderVM}">
            <views:TestCaseGenerator_HeaderView />
        </DataTemplate>

        <!-- Modal ViewModels DataTemplates -->
        <DataTemplate DataType="{x:Type vm:WorkspaceSelectionViewModel}">
            <views:WorkspaceSelectionView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ApiKeyConfigViewModel}">
            <views:ApiKeyConfigView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ImportMethodSelectionViewModel}">
            <views:ImportMethodSelectionView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ImportWorkflowViewModel}">
            <views:ImportWorkflowView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ImportRequirementsWorkflowViewModel}">
            <views:ImportRequirementsWorkflowView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:NewProjectWorkflowViewModel}">
            <views:NewProjectWorkflowView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:NewProjectHeaderViewModel}">
            <views:NewProjectHeaderView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:RequirementDescriptionEditorViewModel}">
            <views:RequirementDescriptionEditorView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:SplitTextEditorViewModel}">
            <views:SplitTextEditorView />
        </DataTemplate>

        <DataTemplate x:Key="StepDescriptorTemplate" DataType="{x:Type models:StepDescriptor}">
            <RadioButton Style="{StaticResource MenuButtonTheme}"
                     IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected, Mode=TwoWay}"
                     Margin="0,2,0,2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding DisplayName}" Foreground="White"/>
                    <TextBlock Text="{Binding Badge}" Foreground="DarkOrange" Margin="6,0,0,0"/>
                </StackPanel>
            </RadioButton>
        </DataTemplate>

        <!-- local fallbacks are defined elsewhere; these keys expect MainWindowResources.xaml to be merged -->
    </Window.Resources>

    <Border Background="#252525"
            MouseDown="Border_MouseDown"
            CornerRadius="20">
        <Grid Margin="0">
            <Grid.ColumnDefinitions>
                <!-- left menu: auto-size to content but keep a reasonable minimum to preserve layout -->
                <ColumnDefinition Width="Auto" MinWidth="260"/>
                <!-- left menu auto width (min 260px) -->
                <ColumnDefinition Width="4"/>
                <!-- gutter -->
                <ColumnDefinition Width="*"/>
                <!-- main content -->
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- title bar -->
                <RowDefinition Height="4"/>
                <RowDefinition Height="Auto"/>
                <!-- workspace header / summary -->
                <RowDefinition Height="4"/>
                <RowDefinition Height="*"/>
                <!-- workspace content -->
                <RowDefinition Height="4"/>
                <RowDefinition Height="Auto"/>
                <!-- bottom navigation area -->
            </Grid.RowDefinitions>

            <!-- Top title bar -->
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                    Style="{StaticResource ContentBorderStyle}">
                <Grid HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="4,0,0,0">
                        <!-- App Title -->
                        <TextBlock Text="Systems App"
                                   VerticalAlignment="Center"
                                   Foreground="DarkOrange"
                                   FontSize="25"/>
                    </StackPanel>
                    
                    <!-- Save indicator -->
                    <Button HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="8,4"
                            Cursor="Hand"
                            Command="{Binding SaveWorkspaceCommand}"
                            ToolTip="Click to save workspace">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}"
                                                    CornerRadius="4">
                                                <ContentPresenter />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding WorkspacePath}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding WorkspacePath}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#22FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       Margin="0,0,6,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="&#xE74E;"/> <!-- Save icon -->
                                        <Setter Property="Foreground" Value="#4CAF50"/> <!-- Green = Saved -->
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDirty}" Value="True">
                                                <Setter Property="Text" Value="&#xE734;"/> <!-- Warning icon -->
                                                <Setter Property="Foreground" Value="#FF9800"/> <!-- Orange = Unsaved -->
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock VerticalAlignment="Center"
                                       FontSize="13"
                                       Foreground="#CCCCCC">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="Saved"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDirty}" Value="True">
                                                <Setter Property="Text" Value="Unsaved changes"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Button>
                    
                    <DockPanel Width="150" HorizontalAlignment="Right" Margin="3">
                        <Grid VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Minimize -->
                            <Button Grid.Column="0"
                                    Style="{StaticResource MainWindowButtonControls}"
                                    Click="ButtonMinimize_Click">
                                <TextBlock Text="&#xE90F;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           Style="{StaticResource WindowControlIconStyle}"/>
                            </Button>

                            <!-- Maximize/Restore -->
                            <Button Grid.Column="1"
                                    Style="{StaticResource MainWindowButtonControls}"
                                    Click="WindowStateButton_Click"
                                    Margin="4,0">
                                <TextBlock Text="&#xE923;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           Style="{StaticResource WindowControlIconStyle}"/>
                            </Button>

                            <!-- Close -->
                            <Button Grid.Column="2"
                                    Style="{StaticResource MainWindowCloseButton}"
                                    Click="CloseButton_Click"
                                    Margin="4,0">
                                <TextBlock Text="✕"
                                           FontSize="14"
                                           Style="{StaticResource WindowControlIconStyle}"/>
                            </Button>
                        </Grid>
                    </DockPanel>
                </Grid>
            </Border>

            <!-- Workspace header -->
            <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource HeaderBorderStyle}" Height="75" Padding="0" Margin="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.ColumnSpan="4" Margin="0">
                        <!-- Header content rendered via the HeaderViewModel (DataTemplate or UserControl) -->
                        <ContentControl Content="{Binding ActiveHeader}" />
                    </Grid>
                </Grid>
            </Border>

            <!-- Left menu section: Test Case / Test Flow, with one-open-at-a-time behavior -->
            <views:SideMenuView Grid.Column="0" Grid.Row="2" Grid.RowSpan="5" 
                               DataContext="{Binding ViewAreaCoordinator.SideMenu}"/>

            <!-- Content area -->
            <Border Grid.Column="2" Grid.Row="4" Style="{StaticResource ContentBorderStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <!-- use relative stars that are easy to reason about -->
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ContentControl Grid.Row="1" Grid.ColumnSpan="4" Margin="6"
                                    Content="{Binding CurrentStepViewModel}" />
                </Grid>
            </Border>

            <!-- Navigation area: compact, responsive controls (keeps your original placement) -->
            <!-- Bottom requirement navigation (Grid.Column=2 Grid.Row=6) -->
            <views:TestCaseGenerator_NavigationControl
                Grid.Column="2"
                Grid.Row="6"
                DataContext="{Binding RequirementsNavigator}"/>
            
            <!-- Modal overlay system - appears over main content when modal is shown -->
            <Grid Grid.Row="0" Grid.RowSpan="7" Grid.Column="0" Grid.ColumnSpan="3"
                  Panel.ZIndex="9998"
                  Visibility="{Binding ModalViewModel, Converter={StaticResource NullToVisibilityConverter}}">
                <!-- Semi-transparent overlay background -->
                <Border Background="#80000000" />
                
                <!-- Modal content container -->
                <Border Background="#2B2B2B"
                        BorderBrush="{StaticResource Brush.Accent.Primary}"
                        BorderThickness="2"
                        CornerRadius="8"
                        MinWidth="400"
                        MinHeight="200"
                        MaxWidth="800"
                        MaxHeight="600"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="50">
                    <Border.Effect>
                        <DropShadowEffect Color="{StaticResource Accent.Primary}" 
                                         BlurRadius="12" 
                                         ShadowDepth="0" 
                                         Opacity="0.3"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Modal header with close button -->
                        <Border Grid.Row="0" 
                                Background="#333333" 
                                BorderBrush="{StaticResource Brush.Accent.Primary}"
                                BorderThickness="0,0,0,2"
                                CornerRadius="8,8,0,0"
                                Padding="15,10">
                            <Grid>
                                <TextBlock Text="{Binding ModalTitle, FallbackValue='Modal Dialog'}" 
                                          Foreground="{StaticResource Brush.Accent.Primary}" 
                                          FontSize="16" 
                                          FontWeight="SemiBold"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"/>
                                
                                <Button Content="✕"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Width="28" Height="28"
                                        Background="Transparent"
                                        BorderThickness="1"
                                        BorderBrush="Transparent"
                                        Foreground="#CCCCCC"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Command="{Binding CloseModalCommand}"
                                        ToolTip="Close"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border"
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                CornerRadius="4"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"
                                                                            TextElement.Foreground="{TemplateBinding Foreground}"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="{StaticResource Brush.Background.Menu.Hover}"/>
                                                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Brush.Accent.Primary}"/>
                                                                <Setter Property="Foreground" Value="{StaticResource Brush.Accent.Primary}"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="{StaticResource Brush.Accent.Primary}"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>
                        
                        <!-- Modal content area -->
                        <ContentControl Grid.Row="1" 
                                       Content="{Binding ModalViewModel}" 
                                       Margin="15"/>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Toast notification container - bottom-right corner -->
            <ItemsControl Grid.Row="0" Grid.RowSpan="7" Grid.Column="0" Grid.ColumnSpan="3"
                         ItemsSource="{Binding ToastNotifications}"
                         VerticalAlignment="Bottom"
                         HorizontalAlignment="Right"
                         Margin="0,0,20,20"
                         Panel.ZIndex="9999">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <views:ToastNotificationView DataContext="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</Window>