<Window x:Class="TestCaseEditorApp.MVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:TestCaseEditorApp.MVVM.ViewModels"
        xmlns:views="clr-namespace:TestCaseEditorApp.MVVM.Views"
        xmlns:models="clr-namespace:TestCaseEditorApp.MVVM.Models"
        xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
        Height="665" Width="1200"
        d:DataContext="{d:DesignInstance vm:MainViewModelDesignStub, IsDesignTimeCreatable=True}"
        WindowStyle="None"
        Title="{Binding DisplayName, FallbackValue='Test Case Editor'}"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        d:DesignHeight="665" d:DesignWidth="1200">

    <Window.Resources>
        <conv:SectionSelectedConverter x:Key="SectionSelectedConverter" />

        <!-- Put resources directly in Window.Resources (do NOT nest a ResourceDictionary element here) -->

        <DataTemplate DataType="{x:Type vm:TestCaseGenerator_VM}">
            <views:TestCaseGenerator_View />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:TestCaseGenerator_AssumptionsVM}">
            <views:TestCaseGenerator_AssumptionsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:TestCaseGenerator_QuestionsVM}">
            <views:TestCaseGenerator_QuestionsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:TestCaseGenerator_CreationVM}">
            <views:TestCaseGenerator_CreationView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:WorkspaceHeaderViewModel}">
            <views:WorkspaceHeaderView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:PlaceholderViewModel}">
            <Border Padding="10" Background="White" CornerRadius="6">
                <TextBlock Text="{Binding Title}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Border>
        </DataTemplate>

        <!-- DataTemplate for TestCaseGenerator_HeaderVM -->
        <DataTemplate DataType="{x:Type vm:TestCaseGenerator_HeaderVM}">
            <views:TestCaseGenerator_HeaderView />
        </DataTemplate>

        <DataTemplate x:Key="StepDescriptorTemplate" DataType="{x:Type models:StepDescriptor}">
            <RadioButton Style="{StaticResource MenuButtonTheme}"
                     IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected, Mode=TwoWay}"
                     Margin="0,2,0,2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding DisplayName}" Foreground="White"/>
                    <TextBlock Text="{Binding Badge}" Foreground="DarkOrange" Margin="6,0,0,0"/>
                </StackPanel>
            </RadioButton>
        </DataTemplate>

        <!-- local fallbacks are defined elsewhere; these keys expect MainWindowResources.xaml to be merged -->
    </Window.Resources>

    <Border Background="#252525"
            MouseDown="Border_MouseDown"
            CornerRadius="20">
        <Grid Margin="0">
            <Grid.ColumnDefinitions>
                <!-- left menu: auto-size to content but keep a reasonable minimum to preserve layout -->
                <ColumnDefinition Width="Auto" MinWidth="260"/>
                <!-- left menu auto width (min 260px) -->
                <ColumnDefinition Width="4"/>
                <!-- gutter -->
                <ColumnDefinition Width="*"/>
                <!-- main content -->
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- title bar -->
                <RowDefinition Height="4"/>
                <RowDefinition Height="Auto"/>
                <!-- workspace header / summary -->
                <RowDefinition Height="4"/>
                <RowDefinition Height="*"/>
                <!-- workspace content -->
                <RowDefinition Height="4"/>
                <RowDefinition Height="Auto"/>
                <!-- bottom navigation area -->
            </Grid.RowDefinitions>

            <!-- Top title bar -->
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                    Style="{StaticResource ContentBorderStyle}">
                <Grid HorizontalAlignment="Stretch">
                    <TextBlock Text="Systems App"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Foreground="DarkOrange"
                               FontSize="25"
                               Margin="4,0,0,0"/>
                    
                    <!-- Save indicator -->
                    <Button HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="8,4"
                            Cursor="Hand"
                            Command="{Binding SaveWorkspaceCommand}"
                            ToolTip="Click to save workspace">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}"
                                                    CornerRadius="4">
                                                <ContentPresenter />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding WorkspacePath}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding WorkspacePath}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#22FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       Margin="0,0,6,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="&#xE74E;"/> <!-- Save icon -->
                                        <Setter Property="Foreground" Value="#4CAF50"/> <!-- Green = Saved -->
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDirty}" Value="True">
                                                <Setter Property="Text" Value="&#xE734;"/> <!-- Warning icon -->
                                                <Setter Property="Foreground" Value="#FF9800"/> <!-- Orange = Unsaved -->
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock VerticalAlignment="Center"
                                       FontSize="13"
                                       Foreground="#CCCCCC">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="Saved"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDirty}" Value="True">
                                                <Setter Property="Text" Value="Unsaved changes"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Button>
                    
                    <DockPanel Width="150" HorizontalAlignment="Right" Margin="3">
                        <Grid VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Minimize -->
                            <Button Grid.Column="0"
                                    Content="&#xE90F;"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="14"
                                    Style="{StaticResource MainWindowButtonControls}"
                                    Click="ButtonMinimize_Click"/>

                            <!-- Maximize/Restore -->
                            <Button Grid.Column="1"
                                    Content="&#xE923;"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="14"
                                    Style="{StaticResource MainWindowButtonControls}"
                                    Click="WindowStateButton_Click"
                                    Margin="4,0"/>

                            <!-- Close -->
                            <Button Grid.Column="2"
                                    Content="✕"
                                    FontSize="14"
                                    Style="{StaticResource MainWindowCloseButton}"
                                    Click="CloseButton_Click"
                                    Margin="4,0"/>
                        </Grid>
                    </DockPanel>
                </Grid>
            </Border>

            <!-- Workspace header -->
            <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource HeaderBorderStyle}" Height="75" Padding="0" Margin="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.ColumnSpan="4" Margin="0">
                        <!-- Header content rendered via the HeaderViewModel (DataTemplate or UserControl) -->
                        <ContentControl Content="{Binding ActiveHeader}" />
                    </Grid>
                </Grid>
            </Border>

            <!-- Left menu section: Test Case / Test Flow, with one-open-at-a-time behavior -->
            <views:SideMenuView Grid.Column="0" Grid.Row="2" Grid.RowSpan="5" />

            <!-- Content area -->
            <Border Grid.Column="2" Grid.Row="4" Style="{StaticResource ContentBorderStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <!-- use relative stars that are easy to reason about -->
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ContentControl Grid.Row="1" Grid.ColumnSpan="4" Margin="6"
                                    Content="{Binding CurrentStepViewModel}" />
                </Grid>
            </Border>

            <!-- Navigation area: compact, responsive controls (keeps your original placement) -->
            <!-- Bottom requirement navigation (Grid.Column=2 Grid.Row=6) -->
            <views:TestCaseGenerator_NavigationControl
                Grid.Column="2"
                Grid.Row="6"
                DataContext="{Binding RequirementsNavigator}"/>
            
            <!-- Modal overlay system - appears over main content when modal is shown -->
            <Grid Grid.Row="0" Grid.RowSpan="7" Grid.Column="0" Grid.ColumnSpan="3"
                  Panel.ZIndex="9998"
                  Visibility="{Binding ModalViewModel, Converter={StaticResource NullToVisibilityConverter}}">
                <!-- Semi-transparent overlay background -->
                <Border Background="#80000000" />
                
                <!-- Modal content container -->
                <Border Background="#2B2B2B"
                        BorderBrush="#555555"
                        BorderThickness="1"
                        CornerRadius="8"
                        MinWidth="400"
                        MinHeight="200"
                        MaxWidth="800"
                        MaxHeight="600"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="50">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Modal header with close button -->
                        <Border Grid.Row="0" 
                                Background="#333333" 
                                CornerRadius="8,8,0,0"
                                Padding="15,10">
                            <Grid>
                                <TextBlock Text="{Binding ModalTitle, FallbackValue='Modal Dialog'}" 
                                          Foreground="White" 
                                          FontSize="16" 
                                          FontWeight="SemiBold"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"/>
                                
                                <Button Content="✕"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Width="24" Height="24"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#CCCCCC"
                                        FontSize="14"
                                        Command="{Binding CloseModalCommand}"
                                        ToolTip="Close"/>
                            </Grid>
                        </Border>
                        
                        <!-- Modal content area -->
                        <ContentControl Grid.Row="1" 
                                       Content="{Binding ModalViewModel}" 
                                       Margin="15"/>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Toast notification container - bottom-right corner -->
            <ItemsControl Grid.Row="0" Grid.RowSpan="7" Grid.Column="0" Grid.ColumnSpan="3"
                         ItemsSource="{Binding ToastNotifications}"
                         VerticalAlignment="Bottom"
                         HorizontalAlignment="Right"
                         Margin="0,0,20,20"
                         Panel.ZIndex="9999">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <views:ToastNotificationView DataContext="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</Window>