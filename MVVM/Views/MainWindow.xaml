<Window x:Class="TestCaseEditorApp.MVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:TestCaseEditorApp.MVVM.ViewModels"
        xmlns:tcgvm="clr-namespace:TestCaseEditorApp.MVVM.Domains.TestCaseGeneration.ViewModels"
        xmlns:tcgmodevm="clr-namespace:TestCaseEditorApp.MVVM.Domains.TestCaseGenerator_Mode.ViewModels"
        xmlns:tcgmodeviews="clr-namespace:TestCaseEditorApp.MVVM.Domains.TestCaseGenerator_Mode.Views"
        xmlns:wmvm="clr-namespace:TestCaseEditorApp.MVVM.Domains.NewProject.ViewModels"
        xmlns:views="clr-namespace:TestCaseEditorApp.MVVM.Views"
        xmlns:tcgviews="clr-namespace:TestCaseEditorApp.MVVM.Domains.TestCaseGeneration.Views"
        xmlns:startupvm="clr-namespace:TestCaseEditorApp.MVVM.Domains.Startup.ViewModels"
        xmlns:startupviews="clr-namespace:TestCaseEditorApp.MVVM.Domains.Startup.Views"
        xmlns:wmviews="clr-namespace:TestCaseEditorApp.MVVM.Domains.NewProject.Views"
        xmlns:opvm="clr-namespace:TestCaseEditorApp.MVVM.Domains.OpenProject.ViewModels"
        xmlns:opviews="clr-namespace:TestCaseEditorApp.MVVM.Domains.OpenProject.Views"
        xmlns:dummyvm="clr-namespace:TestCaseEditorApp.MVVM.Domains.Dummy.ViewModels"
        xmlns:dummyviews="clr-namespace:TestCaseEditorApp.MVVM.Domains.Dummy.Views"
        xmlns:reqvm="clr-namespace:TestCaseEditorApp.MVVM.Domains.Requirements.ViewModels"
        xmlns:reqviews="clr-namespace:TestCaseEditorApp.MVVM.Domains.Requirements.Views"
        xmlns:projvm="clr-namespace:TestCaseEditorApp.MVVM.Domains.Project.ViewModels"
        xmlns:projviews="clr-namespace:TestCaseEditorApp.MVVM.Domains.Project.Views"
        xmlns:sharedvm="clr-namespace:TestCaseEditorApp.MVVM.Domains.Shared.ViewModels"
        xmlns:sharedviews="clr-namespace:TestCaseEditorApp.MVVM.Domains.Shared.Views"
        xmlns:notificationvm="clr-namespace:TestCaseEditorApp.MVVM.Domains.Notification.ViewModels"
        xmlns:models="clr-namespace:TestCaseEditorApp.MVVM.Models"
        xmlns:conv="clr-namespace:TestCaseEditorApp.Converters"
        Height="665" Width="1200"
        WindowStyle="None"
        Title="{Binding DisplayName, FallbackValue='Test Case Editor'}"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        d:DesignHeight="665" d:DesignWidth="1200">

    <Window.Resources>
        <conv:SectionSelectedConverter x:Key="SectionSelectedConverter" />
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <conv:EmptyStringToCollapsedConverter x:Key="EmptyStringToCollapsedConverter" />

        <!-- Put resources directly in Window.Resources (do NOT nest a ResourceDictionary element here) -->

        <DataTemplate DataType="{x:Type tcgmodevm:TestCaseGeneratorMode_MainVM}">
            <tcgmodeviews:TestCaseGeneratorMainView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type tcgvm:TestCaseGenerator_TitleVM}">
            <tcgmodeviews:TestCaseGenerator_TitleView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type tcgvm:TestCaseGenerator_HeaderVM}">
            <tcgmodeviews:TestCaseGenerator_HeaderView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type tcgvm:TestCaseGenerator_AssumptionsVM}">
            <tcgmodeviews:TestCaseGenerator_AssumptionsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type tcgvm:TestCaseGenerator_QuestionsVM}">
            <tcgmodeviews:TestCaseGenerator_QuestionsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type tcgvm:TestCaseGenerator_CreationVM}">
            <tcgmodeviews:TestCaseGenerator_CreationView />
        </DataTemplate>

        <!-- Shared Analysis ViewModel - consolidates duplicate analysis controls -->
        <DataTemplate DataType="{x:Type sharedvm:SharedAnalysisViewModel}">
            <sharedviews:SharedAnalysisView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:WorkspaceHeaderViewModel}">
            <views:WorkspaceHeaderView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:DefaultNotificationViewModel}">
            <!-- Simple default notification area - shows minimal ready state -->
            <Border Background="#222222" 
                    Padding="10,4"
                    Height="28">
                <TextBlock Text="{Binding DefaultText}" 
                          FontSize="11" 
                          Foreground="#666666" 
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>
            </Border>
        </DataTemplate>

        <DataTemplate DataType="{x:Type notificationvm:NotificationWorkspaceViewModel}">
            <!-- Notification workspace layout - Domain-agnostic notification display -->
            <Border Background="#222222" 
                    Padding="10,4"
                    Height="28"
                    Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- LLM Status -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Ellipse Width="8" Height="8" 
                                Fill="{Binding LlmStatusColor}" 
                                VerticalAlignment="Center" 
                                Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding LlmStatusText}" 
                                  FontSize="11" 
                                  Foreground="#BBBBBB" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Current Requirement Verification Method -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" 
                               HorizontalAlignment="Right"
                               Margin="0,0,8,0"
                               Visibility="{Binding CurrentRequirementVerificationMethod, Converter={StaticResource EmptyStringToCollapsedConverter}}">
                        <TextBlock Text="Method:" 
                                  Width="50"
                                  FontSize="11" 
                                  Foreground="#999999" 
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding CurrentRequirementVerificationMethod}" 
                                  FontSize="11" 
                                  Foreground="#DDDDDD" 
                                  VerticalAlignment="Center"
                                  FontWeight="SemiBold"/>
                        <TextBlock Text=" | " 
                                  FontSize="11" 
                                  Foreground="#666666" 
                                  VerticalAlignment="Center"
                                  Margin="8,0,0,0"/>
                    </StackPanel>
                    
                    <!-- Requirements Progress -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                        <TextBlock Text="{Binding RequirementsProgressText}" 
                                  FontSize="11" 
                                  Foreground="#BBBBBB" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- TestCaseGeneratorMainVM DataTemplate - Added for AI Guide compliance -->
        <DataTemplate DataType="{x:Type tcgvm:TestCaseGeneratorMainVM}">
            <tcgmodeviews:TestCaseGeneratorMainView />
        </DataTemplate>

        <!-- Startup ViewModels DataTemplates -->
        <DataTemplate DataType="{x:Type startupvm:StartUp_TitleViewModel}">
            <startupviews:StartUp_TitleView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type startupvm:StartUp_HeaderViewModel}">
            <startupviews:StartUp_HeaderView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type startupvm:StartUp_MainViewModel}">
            <startupviews:StartUp_MainView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type startupvm:StartUp_NavigationViewModel}">
            <startupviews:StartUp_NavigationView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type startupvm:StartUp_NotificationViewModel}">
            <startupviews:StartUp_NotificationView />
        </DataTemplate>

        <!-- NEW-STYLE Dummy ViewModels DataTemplates (AI Guide compliant) -->
        <DataTemplate DataType="{x:Type dummyvm:Dummy_TitleViewModel}">
            <dummyviews:Dummy_TitleView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type dummyvm:Dummy_HeaderViewModel}">
            <dummyviews:Dummy_HeaderView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type dummyvm:Dummy_MainViewModel}">
            <dummyviews:Dummy_MainView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type dummyvm:Dummy_NavigationViewModel}">
            <dummyviews:Dummy_NavigationView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type dummyvm:Dummy_NotificationViewModel}">
            <dummyviews:Dummy_NotificationView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:PlaceholderViewModel}">
            <Border Padding="10" Background="Transparent" CornerRadius="6">
                <TextBlock Text="{Binding Title}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Border>
        </DataTemplate>

        <!--<DataTemplate DataType="{x:Type startupvm:StartUp_MainViewModel}">
            <startupviews:StartUp_MainView />
        </DataTemplate>-->

        <!--<DataTemplate DataType="{x:Type vm:ProjectViewModel}">
            <views:ProjectView />
        </DataTemplate>-->

        <DataTemplate DataType="{x:Type reqvm:Requirements_MainViewModel}">
            <reqviews:RequirementsMainView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type reqvm:Requirements_HeaderViewModel}">
            <reqviews:RequirementsHeaderView />
        </DataTemplate>

        <!-- Requirements uses shared NavigationViewModel and NotificationWorkspaceViewModel -->

        <DataTemplate DataType="{x:Type vm:LLMLearningViewModel}">
            <views:LLMLearningView />
        </DataTemplate>

        <!-- App Icon Style -->
        <Style x:Key="AppIconStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Button Container Style with background hover -->
        <Style x:Key="IconButtonContainer" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#33FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Header Container Style with hover background -->
        <Style x:Key="HeaderContainerStyle" TargetType="StackPanel">
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#22FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Window Control Button Style with background and color hover -->
        <Style x:Key="WindowControlButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource MenuForeground}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Bd"
                                    Width="{TemplateBinding Width}"
                                    Height="{TemplateBinding Height}"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border x:Name="KbdFocus" CornerRadius="8" BorderBrush="{StaticResource FocusRing}" BorderThickness="1" Opacity="0" Margin="-2"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource MenuHover}"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource MenuPressed}"/>
                                <Setter TargetName="Bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Setter Property="Foreground" Value="{StaticResource DisabledBrush}"/>
                            </Trigger>

                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsKeyboardFocused" Value="True"/>
                                    <Condition Property="IsEnabled" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="KbdFocus" Property="Opacity" Value="1"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Window Control Icon Style with orange hover -->
        <Style x:Key="WindowControlIconStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="DarkOrange"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataTemplate for NavigationViewModel (shared navigation for working domains) -->
        <DataTemplate DataType="{x:Type tcgvm:NavigationViewModel}">
            <tcgmodeviews:TestCaseGenerator_NavigationControl />
        </DataTemplate>

        <!-- Modal ViewModels DataTemplates -->
        <DataTemplate DataType="{x:Type vm:WorkspaceSelectionViewModel}">
            <views:WorkspaceSelectionView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ApiKeyConfigViewModel}">
            <views:ApiKeyConfigView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ImportMethodSelectionViewModel}">
            <views:ImportMethodSelectionView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ImportWorkflowViewModel}">
            <views:ImportWorkflowView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ImportRequirementsWorkflowViewModel}">
            <views:ImportRequirementsWorkflowView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type wmvm:NewProjectWorkflowViewModel}">
            <wmviews:NewProject_MainView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type wmvm:NewProjectHeaderViewModel}">
            <wmviews:NewProjectHeaderView />
        </DataTemplate>

        <!-- NewProject Domain Title and Navigation ViewModels -->
        <DataTemplate DataType="{x:Type wmvm:DummyNewProjectTitleViewModel}">
            <wmviews:DummyNewProjectTitleView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type wmvm:DummyNewProjectNavigationViewModel}">
            <wmviews:DummyNewProjectNavigationView />
        </DataTemplate>

        <!-- OpenProject Domain ViewModels -->
        <DataTemplate DataType="{x:Type opvm:OpenProject_TitleViewModel}">
            <opviews:OpenProject_TitleView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type opvm:OpenProject_HeaderViewModel}">
            <opviews:OpenProject_HeaderView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type opvm:OpenProject_NavigationViewModel}">
            <opviews:OpenProject_NavigationView />
        </DataTemplate>

        <!-- Project Domain DataTemplates -->
        <DataTemplate DataType="{x:Type projvm:Project_MainViewModel}">
            <projviews:Project_MainView />
        </DataTemplate>

        <!-- DUMMY DOMAIN DataTemplates - Perfect AI Guide Reference Implementation -->
        <DataTemplate DataType="{x:Type dummyvm:DummyMainWorkspaceViewModel}">
            <dummyviews:DummyMainWorkspaceView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type dummyvm:DummyHeaderWorkspaceViewModel}">
            <dummyviews:DummyHeaderWorkspaceView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type dummyvm:DummyNavigationWorkspaceViewModel}">
            <dummyviews:DummyNavigationWorkspaceView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type dummyvm:DummyTitleWorkspaceViewModel}">
            <dummyviews:DummyTitleWorkspaceView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type dummyvm:DummyNotificationWorkspaceViewModel}">
            <dummyviews:DummyNotificationWorkspaceView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:RequirementDescriptionEditorViewModel}">
            <views:RequirementDescriptionEditorView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:SplitTextEditorViewModel}">
            <views:SplitTextEditorView />
        </DataTemplate>

        <DataTemplate x:Key="StepDescriptorTemplate" DataType="{x:Type models:StepDescriptor}">
            <RadioButton Style="{StaticResource MenuButtonTheme}"
                     IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected, Mode=TwoWay}"
                     Margin="0,2,0,2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding DisplayName}" Foreground="White"/>
                    <TextBlock Text="{Binding Badge}" Foreground="DarkOrange" Margin="6,0,0,0"/>
                </StackPanel>
            </RadioButton>
        </DataTemplate>

        <!-- local fallbacks are defined elsewhere; these keys expect MainWindowResources.xaml to be merged -->
    </Window.Resources>

    <Border Background="#252525"
            MouseDown="Border_MouseDown"
            CornerRadius="20">
        <Grid Margin="0">
            <Grid.ColumnDefinitions>
                <!-- left menu: auto-size to content but keep a reasonable minimum to preserve layout -->
                <ColumnDefinition Width="Auto" MinWidth="260"/>
                <!-- left menu auto width (min 260px) -->
                <ColumnDefinition Width="4"/>
                <!-- gutter -->
                <ColumnDefinition Width="*"/>
                <!-- main content -->
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- title bar -->
                <RowDefinition Height="4"/>
                <!-- gap between title and notification -->
                <RowDefinition Height="Auto"/>
                <!-- notification area -->
                <RowDefinition Height="4"/>
                <RowDefinition Height="60"/>
                <!-- workspace header / summary -->
                <RowDefinition Height="4"/>
                <RowDefinition Height="*"/>
                <!-- workspace content -->
                <RowDefinition Height="4"/>
                <RowDefinition Height="Auto"/>
                <!-- bottom navigation area -->
            </Grid.RowDefinitions>

            <!-- Top title bar -->
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                    Style="{StaticResource ContentBorderStyle}">
                <Grid HorizontalAlignment="Stretch">
                    <!-- Dynamic Title Area - managed by ViewAreaCoordinator -->
                    <ContentPresenter Content="{Binding TitleWorkspace}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      Margin="4,0,0,0"/>
                    
                    <DockPanel HorizontalAlignment="Right" Margin="3">
                        
                        <Grid VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <!-- Save Status button -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Undo button -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Minimize, Maximize, Close -->
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Save Status button - clean icon only -->
                            <Button Grid.Column="0"
                                    Command="{Binding HeaderWorkspace.SaveWorkspaceCommand}"
                                    ToolTip="{Binding HeaderWorkspace.LastSaveTimestamp}"
                                    Visibility="{Binding HeaderWorkspace.WorkspaceFilePath, Converter={StaticResource NullToVisibilityConverter}}"
                                    Style="{StaticResource MainWindowButtonControls}">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="&#xE74E;"/> <!-- Save icon - 3.5" disc -->
                                            <Setter Property="Foreground" Value="#4CAF50"/> <!-- Green = Saved -->
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HeaderWorkspace.IsDirty}" Value="True">
                                                    <Setter Property="Foreground" Value="#9E9E9E"/> <!-- Light Grey = Unsaved -->
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Button>

                            <!-- Undo last save button - always visible but enabled/disabled -->
                            <Button Grid.Column="1"
                                    Style="{StaticResource MainWindowButtonControls}"
                                    Command="{Binding HeaderWorkspace.UndoLastSaveCommand}"
                                    IsEnabled="{Binding HeaderWorkspace.CanUndoLastSave}"
                                    ToolTip="Undo last save operation">
                                <TextBlock Text="&#xE7A7;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           Style="{StaticResource WindowControlIconStyle}"/>
                            </Button>

                            <!-- Minimize -->
                            <Button Grid.Column="2"
                                    Style="{StaticResource MainWindowButtonControls}"
                                    Click="ButtonMinimize_Click">
                                <TextBlock Text="&#xE90F;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           Style="{StaticResource WindowControlIconStyle}"/>
                            </Button>

                            <!-- Maximize/Restore -->
                            <Button Grid.Column="3"
                                    Style="{StaticResource MainWindowButtonControls}"
                                    Click="WindowStateButton_Click"
                                    Margin="4,0">
                                <TextBlock Text="&#xE923;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           Style="{StaticResource WindowControlIconStyle}"/>
                            </Button>

                            <!-- Close -->
                            <Button Grid.Column="4"
                                    Style="{StaticResource MainWindowCloseButton}"
                                    Click="CloseButton_Click"
                                    Margin="4,0">
                                <TextBlock Text="✕"
                                           FontSize="14"
                                           Style="{StaticResource WindowControlIconStyle}"/>
                            </Button>
                        </Grid>
                    </DockPanel>
                </Grid>
            </Border>

            <!-- Workspace header -->
            <Border Grid.Row="4" Grid.Column="2" Style="{StaticResource HeaderBorderStyle}" Padding="0" Margin="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.ColumnSpan="4" Margin="0">
                        <!-- Header content rendered via the HeaderViewModel (DataTemplate or UserControl) -->
                        <ContentControl Content="{Binding HeaderWorkspace}" />
                    </Grid>
                </Grid>
            </Border>

            <!-- Left menu section: Test Case / Test Flow, with one-open-at-a-time behavior -->
            <views:NewSideMenuView Grid.Column="0" Grid.Row="4" Grid.RowSpan="5" 
                               DataContext="{Binding SideMenuWorkspace}"/>
            
            <!-- Notification area - positioned directly below title with full width -->
            <Border Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" Style="{StaticResource ContentBorderStyle}">
                <ContentControl Content="{Binding NotificationWorkspace}" />
            </Border>

            <!-- Content area -->
            <Border Grid.Column="2" Grid.Row="6" Style="{StaticResource ContentBorderStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <!-- use relative stars that are easy to reason about -->
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ContentControl Grid.Row="1" Grid.ColumnSpan="4" Margin="6"
                                    Content="{Binding MainWorkspace}" />
                </Grid>
            </Border>

            <!-- Navigation workspace area - uses proper workspace coordination -->
            <Border Grid.Column="2" Grid.Row="8" Style="{StaticResource ContentBorderStyle}">
                <ContentControl Content="{Binding NavigationWorkspace}" 
                              HorizontalAlignment="Stretch" 
                              VerticalAlignment="Stretch"/>
            </Border>
            
            <!-- Modal overlay system - TEMPORARILY DISABLED while debugging -->
            <Grid Grid.Row="0" Grid.RowSpan="9" Grid.Column="0" Grid.ColumnSpan="3"
                  Panel.ZIndex="9998"
                  Visibility="Collapsed"
                  x:Name="ModalOverlay"
                  IsEnabled="False">
                  <!-- Visibility="{Binding ModalViewModel, Converter={StaticResource NullToVisibilityConverter}}"> -->
                <!-- Semi-transparent overlay background -->
                <Border Background="#80000000" />
                
                <!-- Modal content container -->
                <Border Background="#2B2B2B"
                        BorderBrush="{StaticResource Brush.Accent.Primary}"
                        BorderThickness="2"
                        CornerRadius="8"
                        MinWidth="400"
                        MinHeight="200"
                        MaxWidth="800"
                        MaxHeight="600"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="50">
                    <Border.Effect>
                        <DropShadowEffect Color="{StaticResource Accent.Primary}" 
                                         BlurRadius="12" 
                                         ShadowDepth="0" 
                                         Opacity="0.3"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Modal header with close button -->
                        <Border Grid.Row="0" 
                                Background="#333333" 
                                BorderBrush="{StaticResource Brush.Accent.Primary}"
                                BorderThickness="0,0,0,2"
                                CornerRadius="8,8,0,0"
                                Padding="15,10">
                            <Grid>
                                <TextBlock Text="{Binding ModalTitle, FallbackValue='Modal Dialog'}" 
                                          Foreground="{StaticResource Brush.Accent.Primary}" 
                                          FontSize="16" 
                                          FontWeight="SemiBold"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"/>
                                
                                <Button Content="✕"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Width="28" Height="28"
                                        Background="Transparent"
                                        BorderThickness="1"
                                        BorderBrush="Transparent"
                                        Foreground="#CCCCCC"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Command="{Binding CloseModalCommand}"
                                        ToolTip="Close"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border"
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                CornerRadius="4"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"
                                                                            TextElement.Foreground="{TemplateBinding Foreground}"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="{StaticResource Brush.Background.Menu.Hover}"/>
                                                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Brush.Accent.Primary}"/>
                                                                <Setter Property="Foreground" Value="{StaticResource Brush.Accent.Primary}"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="{StaticResource Brush.Accent.Primary}"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>
                        
                        <!-- Modal content area -->
                        <ContentControl Grid.Row="1" 
                                       Content="{Binding ModalViewModel}" 
                                       Margin="15"/>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Toast notification container - bottom-right corner -->
            <ItemsControl Grid.Row="0" Grid.RowSpan="7" Grid.Column="0" Grid.ColumnSpan="3"
                         ItemsSource="{Binding ToastNotifications}"
                         VerticalAlignment="Bottom"
                         HorizontalAlignment="Right"
                         Margin="0,0,20,20"
                         Panel.ZIndex="9999">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <views:ToastNotificationView DataContext="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</Window>