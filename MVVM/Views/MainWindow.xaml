<!-- Updated MainWindow.xaml: title changed to "Systems App", persistent workspace header aligned
     with the content area's internal column grid and side menu fills from below the title bar to the bottom. -->
<Window x:Class="TestCaseEditorApp.MVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:TestCaseEditorApp.MVVM.ViewModels"
        xmlns:views="clr-namespace:TestCaseEditorApp.MVVM.Views"
        xmlns:models="clr-namespace:TestCaseEditorApp.MVVM.Models"
        Height="665" Width="1200"
        d:DataContext="{d:DesignInstance vm:MainViewModelDesignStub, IsDesignTimeCreatable=True}"
        WindowStyle="None"
        Title="{Binding DisplayName}"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        d:DesignHeight="665" d:DesignWidth="1200">

    <!-- NOTE: DataContext is set from DI in MainWindow.xaml.cs constructor -->

    <Window.Resources>
        <ResourceDictionary>
            <!-- Resource dictionary is merged at application startup (App.OnStartup)
                 so we don't merge it again here. This avoids duplication and load-order issues. -->

            <!-- DataTemplates map VM types to Views (vm prefix is available here) -->
            <DataTemplate DataType="{x:Type vm:RequirementsViewModel}">
                <views:RequirementsView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ClarifyingQuestionsViewModel}">
                <views:ClarifyingQuestionsView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:TestCaseCreationViewModel}">
                <views:TestCaseCreationView />
            </DataTemplate>

            <!-- Workspace header DataTemplate: maps WorkspaceHeaderViewModel -> WorkspaceHeaderView -->
            <DataTemplate DataType="{x:Type vm:WorkspaceHeaderViewModel}">
                <views:WorkspaceHeaderView />
            </DataTemplate>

            <!-- Placeholder viewmodel template -->
            <DataTemplate DataType="{x:Type vm:PlaceholderViewModel}">
                <Border Padding="10" Background="White" CornerRadius="6">
                    <TextBlock Text="{Binding Title}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </Border>
            </DataTemplate>

            <!-- Reusable StepDescriptor template used as ItemTemplate for menu listboxes.
                 It references the MenuButtonTheme style which is provided by the application-level merged dictionary. -->
            <DataTemplate x:Key="StepDescriptorTemplate" DataType="{x:Type models:StepDescriptor}">
                <RadioButton Style="{StaticResource MenuButtonTheme}"
                             IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected, Mode=TwoWay}"
                             Margin="0,2,0,2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding DisplayName}" Foreground="White"/>
                        <TextBlock Text="{Binding Badge}" Foreground="DarkOrange" Margin="6,0,0,0"/>
                    </StackPanel>
                </RadioButton>
            </DataTemplate>

        </ResourceDictionary>
    </Window.Resources>

    <!-- rest of XAML unchanged -->
    <Border Background="#2e2e2e"
            MouseDown="Border_MouseDown"
            CornerRadius="20">
        <Grid Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <!-- Top title bar -->
                <RowDefinition Height="4"/>
                <RowDefinition Height="Auto"/>
                <!-- Workspace header (navigation) -->
                <RowDefinition Height="4"/>
                <RowDefinition Height="*"/>
                <!-- Main content -->
            </Grid.RowDefinitions>

            <!-- Top title bar (original) -->
            <Border 
                Grid.Row="0"
                Grid.Column="0" 
                Grid.ColumnSpan="3"
                CornerRadius="5" 
                BorderBrush="DarkOrange" 
                BorderThickness="2">
                <Grid HorizontalAlignment="Stretch">
                    <TextBlock 
                        Text="Systems App"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Foreground="DarkOrange"
                        FontSize="25"
                        Margin="2,0,0,0"/>
                    <DockPanel Width="150" HorizontalAlignment="Right" Margin="3">
                        <Grid VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Minimize -->
                            <Button Grid.Column="0"
                                    Content="&#xE90F;"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="14"
                                    Style="{StaticResource MainWindowButtonControls}"
                                    Click="ButtonMinimize_Click"/>

                            <!-- Maximize/Restore -->
                            <Button Grid.Column="1"
                                    Content="&#xE923;"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="14"
                                    Style="{StaticResource MainWindowButtonControls}"
                                    Click="WindowStateButton_Click"
                                    Margin="4,0"/>

                            <!-- Close -->
                            <Button Grid.Column="2"
                                    Content="✕"
                                    FontSize="14"
                                    Style="{StaticResource MainWindowCloseButton}"
                                    Click="CloseButton_Click"
                                    Margin="4,0"/>
                        </Grid>
                    </DockPanel>
                </Grid>
            </Border>

            <!-- spacer row (Grid.Row=1) left intentionally blank -->

            <!-- Workspace header (persistent navigation) -->
            <!-- This is placed in its own row beneath the top title bar and above the content area.
                 It binds to MainViewModel.HeaderViewModel so it remains visible while CurrentStepViewModel changes. -->
            <Border
                Grid.Row="2"
                Grid.Column="2"
                Grid.ColumnSpan="1"
                CornerRadius="5"
                BorderBrush="DarkOrange"
                BorderThickness="2"
                Background="Transparent"
                Height="75"
                Padding="0"
                Margin="0,0,0,0"
                HorizontalAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="141*"/>
                        <ColumnDefinition Width="639*"/>
                        <ColumnDefinition Width="122*"/>
                        <ColumnDefinition Width="65*"/>
                    </Grid.ColumnDefinitions>

                    <ContentControl Content="{Binding HeaderViewModel}" Grid.ColumnSpan="4" Margin="5,5,5,5"/>
                </Grid>
            </Border>

            <!-- Side Menu: start immediately below the title bar and fill to the bottom of the window -->
            <Border 
                Grid.Column="0" 
                Grid.Row="2"
                Grid.RowSpan="3"
                CornerRadius="5" 
                BorderBrush="DarkOrange" 
                BorderThickness="2">
                <Grid Background="#252525" Margin="5">
                    <StackPanel>

                        <!-- File header (click to open menu) -->
                        <ToggleButton x:Name="FileToggle"
                          Style="{StaticResource MenuHeaderToggleStyle}"
                          HorizontalAlignment="Stretch"
                          Cursor="Hand">
                            <TextBlock Text="File" Style="{StaticResource MenuHeaderTheme}" />
                        </ToggleButton>

                        <!-- Popup for the File menu -->
                        <Popup IsOpen="{Binding IsChecked, ElementName=FileToggle, Mode=TwoWay}"
                   PlacementTarget="{Binding ElementName=FileToggle}"
                   Placement="Bottom"
                   StaysOpen="False"
                   AllowsTransparency="True"
                   Focusable="False">

                            <Border Background="{StaticResource MenuListBackground}"
                        BorderBrush="#33000000"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="4"
                        MinWidth="220"
                        SnapsToDevicePixels="True">
                                <StackPanel>
                                    <Button Command="{Binding ImportWordCommand}"
                                Style="{StaticResource MenuPopupButtonStyle}">
                                        <TextBlock Text="Import New Requirements…" />
                                    </Button>

                                    <Button Command="{Binding LoadWorkspaceCommand}"
                                Style="{StaticResource MenuPopupButtonStyle}">
                                        <TextBlock Text="Import In-Process Requirements…" />
                                    </Button>

                                    <Separator Margin="0,4"/>

                                    <Button Command="{Binding SaveWorkspaceCommand}"
                                Style="{StaticResource MenuPopupButtonStyle}">
                                        <TextBlock Text="Save Workspace" />
                                    </Button>

                                    <Separator Margin="0,4"/>

                                    <Button Command="{Binding ReloadCommand}"
                                Style="{StaticResource MenuPopupButtonStyle}">
                                        <TextBlock Text="Reload Source (from DOCX)" />
                                    </Button>

                                    <Button Command="{Binding ExportAllToJamaCommand}"
                                Style="{StaticResource MenuPopupButtonStyle}">
                                        <TextBlock Text="Export All to Jama…" />
                                    </Button>

                                    <Separator Margin="0,8"/>

                                    <Button Command="{Binding HelpCommand}"
                                Style="{StaticResource MenuPopupButtonStyle}">
                                        <TextBlock Text="Help" />
                                    </Button>
                                </StackPanel>
                            </Border>
                        </Popup>

                        <!-- Test Cases group -->
                        <TextBlock Text="Test Case Creator" Style="{StaticResource MenuHeaderTheme}"/>

                        <ListBox ItemsSource="{Binding TestCaseCreationSteps, PresentationTraceSources.TraceLevel=High}"
                     SelectedItem="{Binding SelectedStep, Mode=TwoWay}"
                     ItemTemplate="{StaticResource StepDescriptorTemplate}"
                     Background="Transparent"
                     BorderThickness="0"
                     SelectionMode="Single"
                     Margin="0" d:ItemsSource="{d:SampleData ItemCount=5}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>

                        <!-- Repair group -->
                        <TextBlock Text="Repair" Style="{StaticResource MenuHeaderTheme}"/>
                        <ListBox ItemsSource="{Binding RepairSteps}"
                     ItemContainerStyle="{StaticResource MenuListBoxItemStyle}"
                     SelectedItem="{Binding SelectedStep, Mode=TwoWay}"
                     ItemTemplate="{StaticResource StepDescriptorTemplate}"
                     Background="Transparent"
                     BorderThickness="0"
                     SelectionMode="Single"
                     Margin="0"/>

                        <!-- Reports group -->
                        <TextBlock Text="Reports" Style="{StaticResource MenuHeaderTheme}"/>
                        <ListBox ItemsSource="{Binding ReportsSteps}"
                     ItemContainerStyle="{StaticResource MenuListBoxItemStyle}"
                     SelectedItem="{Binding SelectedStep, Mode=TwoWay}"
                     ItemTemplate="{StaticResource StepDescriptorTemplate}"
                     Background="Transparent"
                     BorderThickness="0"
                     SelectionMode="Single"
                     Margin="0"/>

                        <!-- General group -->
                        <TextBlock Text="General" Style="{StaticResource MenuHeaderTheme}"/>
                        <ListBox ItemsSource="{Binding GeneralSteps}"
                     ItemContainerStyle="{StaticResource MenuListBoxItemStyle}"
                     SelectedItem="{Binding SelectedStep, Mode=TwoWay}"
                     ItemTemplate="{StaticResource StepDescriptorTemplate}"
                     Background="Transparent"
                     BorderThickness="0"
                     SelectionMode="Single"
                     Margin="0"/>

                        <!-- Quick Links group -->
                        <TextBlock Text="Quick Links" Style="{StaticResource MenuHeaderTheme}"/>
                        <ListBox ItemsSource="{Binding QuickLinksSteps}"
                     ItemContainerStyle="{StaticResource MenuListBoxItemStyle}"
                     SelectedItem="{Binding SelectedStep, Mode=TwoWay}"
                     ItemTemplate="{StaticResource StepDescriptorTemplate}"
                     Background="Transparent"
                     BorderThickness="0"
                     SelectionMode="Single"
                     Margin="0"/>

                        <TextBlock VerticalAlignment="Bottom"
                       Text="{Binding SapStatus}"
                       HorizontalAlignment="Center"
                       Foreground="{Binding SapForegroundStatus}"
                       Style="{StaticResource MenuHeaderTheme}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content area -->
            <Border 
                Grid.Column="2" 
                Grid.Row="4" 
                Margin="0,0,0,0" 
                CornerRadius="5" 
                BorderBrush="DarkOrange" 
                BorderThickness="2">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="141*"/>
                        <ColumnDefinition Width="639*"/>
                        <ColumnDefinition Width="122*"/>
                        <ColumnDefinition Width="65*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Potential place for a local toolbar inside content -->
                        <RowDefinition Height="*"/>
                        <!-- Actual step/content -->
                    </Grid.RowDefinitions>

                    <!-- If you want an extra local toolbar inside the content area, it can go in Row 0 -->

                    <ContentControl 
                        Grid.Row="1"
                        Margin="5,5,5,5"
                        Background="Transparent"
                        Content="{Binding CurrentStepViewModel}" Grid.ColumnSpan="4"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>