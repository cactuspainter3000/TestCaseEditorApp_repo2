<!-- Updated MainWindow.xaml
     - Uses Border styles (MenuSectionBorderStyle, ContentBorderStyle, HeaderBorderStyle) from MainWindowResources.xaml
     - Replaced rigid column star values with readable relative stars and fixed widths where appropriate
     - Kept your layout and bindings unchanged except for replacing inline Border attributes with styles
     - Made workspace header columns use sensible proportions instead of large numeric star values
-->
<Window x:Class="TestCaseEditorApp.MVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:TestCaseEditorApp.MVVM.ViewModels"
        xmlns:views="clr-namespace:TestCaseEditorApp.MVVM.Views"
        xmlns:models="clr-namespace:TestCaseEditorApp.MVVM.Models"
        Height="665" Width="1200"
        d:DataContext="{d:DesignInstance vm:MainViewModelDesignStub, IsDesignTimeCreatable=True}"
        WindowStyle="None"
        Title="{Binding DisplayName}"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        d:DesignHeight="665" d:DesignWidth="1200">

    <Window.Resources>
        <ResourceDictionary>
            <!-- Keep previously defined DataTemplates; assume style resources are merged in MainWindowResources.xaml -->
            <DataTemplate DataType="{x:Type vm:RequirementsViewModel}">
                <views:RequirementsView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ClarifyingQuestionsViewModel}">
                <views:ClarifyingQuestionsView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:TestCaseCreationViewModel}">
                <views:TestCaseCreationView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:WorkspaceHeaderViewModel}">
                <views:WorkspaceHeaderView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:PlaceholderViewModel}">
                <Border Padding="10" Background="White" CornerRadius="6">
                    <TextBlock Text="{Binding Title}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </Border>
            </DataTemplate>

            <DataTemplate x:Key="StepDescriptorTemplate" DataType="{x:Type models:StepDescriptor}">
                <RadioButton Style="{StaticResource MenuButtonTheme}"
                             IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected, Mode=TwoWay}"
                             Margin="0,2,0,2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding DisplayName}" Foreground="White"/>
                        <TextBlock Text="{Binding Badge}" Foreground="DarkOrange" Margin="6,0,0,0"/>
                    </StackPanel>
                </RadioButton>
            </DataTemplate>

            <!-- local fallbacks are defined elsewhere; these keys expect MainWindowResources.xaml to be merged -->
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="#2e2e2e"
            MouseDown="Border_MouseDown"
            CornerRadius="20">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <!-- left menu fixed width -->
                <ColumnDefinition Width="4"/>
                <!-- gutter -->
                <ColumnDefinition Width="*"/>
                <!-- main content -->
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <!-- title bar -->
                <RowDefinition Height="4"/>
                <RowDefinition Height="Auto"/>
                <!-- workspace header / summary -->
                <RowDefinition Height="4"/>
                <RowDefinition Height="*"/>
                <!-- workspace content -->
                <RowDefinition Height="4"/>
                <RowDefinition Height="auto"/>
                <!-- bottom navigation area -->
            </Grid.RowDefinitions>

            <!-- Top title bar -->
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                    Style="{StaticResource ContentBorderStyle}">
                <Grid HorizontalAlignment="Stretch">
                    <TextBlock Text="Systems App"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Foreground="DarkOrange"
                               FontSize="25"
                               Margin="4,0,0,0"/>
                    <DockPanel Width="150" HorizontalAlignment="Right" Margin="3">
                        <Grid VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Minimize -->
                            <Button Grid.Column="0"
                                    Content="&#xE90F;"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="14"
                                    Style="{StaticResource MainWindowButtonControls}"
                                    Click="ButtonMinimize_Click"/>

                            <!-- Maximize/Restore -->
                            <Button Grid.Column="1"
                                    Content="&#xE923;"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="14"
                                    Style="{StaticResource MainWindowButtonControls}"
                                    Click="WindowStateButton_Click"
                                    Margin="4,0"/>

                            <!-- Close -->
                            <Button Grid.Column="2"
                                    Content="✕"
                                    FontSize="14"
                                    Style="{StaticResource MainWindowCloseButton}"
                                    Click="CloseButton_Click"
                                    Margin="4,0"/>
                        </Grid>
                    </DockPanel>
                </Grid>
            </Border>

            <!-- Workspace header -->
            <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource HeaderBorderStyle}" Height="75" Padding="0" Margin="0">
                <Grid>
                    <!-- cleaned up column widths: use simple proportional stars for clarity -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <!-- left area -->
                        <ColumnDefinition Width="3*"/>
                        <!-- main center stretch -->
                        <ColumnDefinition Width="1*"/>
                        <!-- right-side controls -->
                        <ColumnDefinition Width="0.6*"/>
                        <!-- small area -->
                    </Grid.ColumnDefinitions>

                    <Grid Grid.ColumnSpan="4" Margin="6">
                        <!-- Keep the existing header content -->
                        <ContentPresenter Content="{Binding HeaderViewModel}" />

                        <!-- Status text overlay at bottom-left of header.
                             Bind explicitly to the Window's DataContext.StatusMessage (MainViewModel).
                             Adjust Margin/HorizontalAlignment/VerticalAlignment to taste. -->

                        <TextBlock
                            Text="{Binding DataContext.StatusMessage, RelativeSource={RelativeSource AncestorType=Window}}"
                            FontSize="12"
                            Padding="4,2"
                            Margin="8,0,0,6"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                            TextTrimming="CharacterEllipsis"
                            ToolTip="{Binding DataContext.StatusMessage, RelativeSource={RelativeSource AncestorType=Window}}"
                            />
                    </Grid>
                </Grid>
            </Border>

            <!-- Left side menu (unchanged content, but apply MenuSectionBorderStyle) -->
            <Border Grid.Column="0" Grid.Row="2" Grid.RowSpan="5"
                    Style="{StaticResource MenuSectionBorderStyle}">
                <Grid Background="#252525" Margin="5">
                    <StackPanel>

                        <!-- File header (click to open menu) -->
                        <ToggleButton x:Name="FileToggle"
                                      Style="{StaticResource MenuHeaderToggleStyle}"
                                      HorizontalAlignment="Stretch"
                                      Cursor="Hand">
                            <TextBlock Text="File" Style="{StaticResource MenuHeaderTheme}" />
                        </ToggleButton>

                        <!-- Popup for the File menu -->
                        <Popup IsOpen="{Binding IsChecked, ElementName=FileToggle, Mode=TwoWay}"
                               PlacementTarget="{Binding ElementName=FileToggle}"
                               Placement="Bottom"
                               StaysOpen="False"
                               AllowsTransparency="True"
                               Focusable="False">
                            <Border Background="{StaticResource MenuListBackground}"
                                    BorderBrush="#33000000"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="4"
                                    MinWidth="220"
                                    SnapsToDevicePixels="True">
                                <StackPanel>
                                    <Button Command="{Binding ImportWordCommand}"
                                            Style="{StaticResource MenuPopupButtonStyle}">
                                        <TextBlock Text="Import New Requirements…" />
                                    </Button>

                                    <Button Command="{Binding LoadWorkspaceCommand}"
                                            Style="{StaticResource MenuPopupButtonStyle}">
                                        <TextBlock Text="Import In-Process Requirements…" />
                                    </Button>

                                    <Separator Margin="0,4"/>

                                    <Button Command="{Binding SaveWorkspaceCommand}"
                                            Style="{StaticResource MenuPopupButtonStyle}">
                                        <TextBlock Text="Save Workspace" />
                                    </Button>

                                    <Separator Margin="0,4"/>

                                    <Button Command="{Binding ReloadCommand}"
                                            Style="{StaticResource MenuPopupButtonStyle}">
                                        <TextBlock Text="Reload Source (from DOCX)" />
                                    </Button>

                                    <Button Command="{Binding ExportAllToJamaCommand}"
                                            Style="{StaticResource MenuPopupButtonStyle}">
                                        <TextBlock Text="Export All to Jama…" />
                                    </Button>

                                    <Separator Margin="0,8"/>

                                    <Button Command="{Binding HelpCommand}"
                                            Style="{StaticResource MenuPopupButtonStyle}">
                                        <TextBlock Text="Help" />
                                    </Button>
                                </StackPanel>
                            </Border>
                        </Popup>

                        <!-- Test Cases group -->
                        <TextBlock Text="Test Case Creator" Style="{StaticResource MenuHeaderTheme}"/>

                        <ListBox ItemsSource="{Binding TestCaseCreationSteps}"
                                 SelectedItem="{Binding SelectedStep, Mode=TwoWay}"
                                 ItemTemplate="{StaticResource StepDescriptorTemplate}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 SelectionMode="Single"
                                 Margin="0" d:ItemsSource="{d:SampleData ItemCount=5}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>

                        <!-- Test Flow Creator group (new, replaces placeholders) -->
                        <TextBlock Text="Test Flow Creator" Style="{StaticResource MenuHeaderTheme}"/>
                        <ListBox ItemsSource="{Binding TestFlowSteps}"
                                 ItemContainerStyle="{StaticResource MenuListBoxItemStyle}"
                                 SelectedItem="{Binding SelectedStep, Mode=TwoWay}"
                                 ItemTemplate="{StaticResource StepDescriptorTemplate}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 SelectionMode="Single"
                                 Margin="0"/>

                        <TextBlock VerticalAlignment="Bottom"
                                   Text="{Binding SapStatus}"
                                   HorizontalAlignment="Center"
                                   Foreground="{Binding SapForegroundStatus}"
                                   Style="{StaticResource MenuHeaderTheme}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content area -->
            <Border Grid.Column="2" Grid.Row="4" Style="{StaticResource ContentBorderStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <!-- use relative stars that are easy to reason about -->
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ContentControl Grid.Row="1" Grid.ColumnSpan="4" Margin="6"
                                    Content="{Binding CurrentStepViewModel}" />
                </Grid>
            </Border>

            <!-- Navigation area: compact, responsive controls (keeps your original placement) -->
            <!-- Bottom requirement navigation (Grid.Column=2 Grid.Row=6) -->
            <views:RequirementsNavigationControl Grid.Column="2" Grid.Row="6"
                                    DataContext="{Binding Navigation.RequirementsNav}" />

        </Grid>
    </Border>
</Window>