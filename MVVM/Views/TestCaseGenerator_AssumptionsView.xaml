<UserControl x:Class="TestCaseEditorApp.MVVM.Views.TestCaseGenerator_AssumptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TestCaseEditorApp.MVVM.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="520" d:DesignWidth="800"
             Background="{StaticResource Brush.Background.Menu}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="0,0,8,0">
        <ScrollViewer.Resources>
            <!-- Make scrollbar nearly invisible -->
            <Style TargetType="ScrollBar">
                <Setter Property="Width" Value="8"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Opacity" Value="0.3"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="0.6"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ScrollViewer.Resources>
        
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Explanation panel -->
            <RowDefinition Height="Auto"/>
            <!-- Chips -->
            <RowDefinition Height="Auto"/>
            <!-- Status/tips area -->
            <RowDefinition Height="Auto"/>
            <!-- Custom Instructions -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="ðŸŽ¯ Verification Method Assumptions" FontSize="16" FontWeight="SemiBold" 
                   Foreground="{StaticResource Accent}" Margin="0,0,0,12"/>

        <!-- Explanation panel: what assumptions are for -->
        <Border Grid.Row="1" Background="{StaticResource MenuBackground}" Padding="16" CornerRadius="8" 
                BorderBrush="{StaticResource CardBorderBrush}" BorderThickness="1" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock TextWrapping="Wrap" Foreground="{StaticResource MenuForeground}" Margin="0,0,0,8">
                    <Run FontWeight="SemiBold">Purpose:</Run>
                    <Run>These assumptions help the AI focus on the important clarifying questions by establishing common test conditions upfront.</Run>
                </TextBlock>

                <TextBlock TextWrapping="Wrap" Foreground="{StaticResource MenuForeground}" Margin="0,0,0,8">
                    <Run FontWeight="SemiBold">How it works:</Run>
                    <Run>When you enable assumptions below, the AI will skip trivial questions about those conditions and concentrate on the ambiguities in your requirement that truly matter.</Run>
                </TextBlock>

                <TextBlock TextWrapping="Wrap" Foreground="{StaticResource MenuForeground}">
                    <Run FontWeight="SemiBold">Quick start:</Run>
                    <Run>Assumptions are pre-selected based on your verification method. Review and adjust them to match your specific test conditions.</Run>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Chips section -->
        <StackPanel Grid.Row="2" Margin="0,0,0,12">
            <DockPanel Margin="0,0,0,8">
                <TextBlock Text="Available Assumptions" FontWeight="SemiBold" FontSize="13" 
                           Foreground="{StaticResource Accent}" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                
                <Button Content="Reset All" 
                        Command="{Binding ResetAssumptionsCommand}" 
                        Style="{StaticResource MenuPopupButtonStyle}" 
                        Padding="8,3" 
                        DockPanel.Dock="Right" 
                        VerticalAlignment="Center"/>
                
                <TextBlock DockPanel.Dock="Right" VerticalAlignment="Center" 
                           Foreground="{StaticResource MenuForeground}" FontStyle="Italic" FontSize="11"
                           Margin="12,0,12,0">
                    <Run Text="Pre-selected for"/>
                    <Run Text="{Binding DataContext.RequirementMethod, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}" FontWeight="SemiBold"/>
                    <Run Text="verification"/>
                </TextBlock>
            </DockPanel>

            <ItemsControl ItemsSource="{Binding VisiblePills}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ToggleButton Style="{StaticResource PillToggleStyle}"
                                      Content="{Binding Name}"
                                      IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                      ToolTip="{Binding Description}" 
                                      Margin="4,4,0,0">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border x:Name="border"
                                            Background="{StaticResource MenuListBackground}"
                                            BorderBrush="{StaticResource CardBorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="12"
                                            Padding="10,4">
                                        <TextBlock x:Name="text"
                                                   Text="{TemplateBinding Content}"
                                                   Foreground="{StaticResource MenuForeground}"
                                                   FontSize="11"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <!-- Checked/Enabled state: normal, readable appearance -->
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{StaticResource MenuListBackground}"/>
                                            <Setter TargetName="text" Property="Foreground" Value="{StaticResource MenuForeground}"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
                                        </Trigger>
                                        <!-- Unchecked/Disabled state: faded out with strikethrough -->
                                        <Trigger Property="IsChecked" Value="False">
                                            <Setter TargetName="border" Property="Opacity" Value="0.35"/>
                                            <Setter TargetName="text" Property="TextDecorations" Value="Strikethrough"/>
                                        </Trigger>
                                        <!-- Hover state: accent border -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Accent}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- Status/tips area - Collapsible -->
        <Border Grid.Row="3" BorderThickness="1" BorderBrush="{StaticResource CardBorderBrush}" 
                CornerRadius="4" Padding="12" Background="Transparent" Margin="0,0,0,8">
            <Expander Header="ðŸ’¡ Tips" IsExpanded="False" Background="Transparent" 
                      Foreground="{StaticResource Accent}" FontWeight="SemiBold" FontSize="13">
                <StackPanel Margin="0,8,0,0">
                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource MenuForeground}" Margin="0,0,0,6">
                        <Run>â€¢</Run>
                        <Run FontWeight="SemiBold">Click chips to toggle</Run>
                        <Run>- enabled chips (normal) are sent to the AI, disabled chips (faded/strikethrough) are excluded</Run>
                    </TextBlock>

                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource MenuForeground}" Margin="0,0,0,6">
                        <Run>â€¢</Run>
                        <Run FontWeight="SemiBold">Environment assumptions</Run>
                        <Run>(temperature, humidity) skip questions about testing conditions</Run>
                    </TextBlock>

                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource MenuForeground}" Margin="0,0,0,6">
                        <Run>â€¢</Run>
                        <Run FontWeight="SemiBold">Equipment assumptions</Run>
                        <Run>(calibrated tools) prevent questions about measurement accuracy</Run>
                    </TextBlock>

                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource MenuForeground}" Margin="0,0,0,6">
                        <Run>â€¢</Run>
                        <Run FontWeight="SemiBold">Verification Method assumptions</Run>
                        <Run>(sample size, power supply) establish baseline test parameters</Run>
                    </TextBlock>

                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource MenuForeground}">
                        <Run>â€¢</Run>
                        <Run FontWeight="SemiBold">Analysis assumptions</Run>
                        <Run>(validated models, worst-case) define analysis approach</Run>
                    </TextBlock>

                    <Separator Margin="0,12"/>

                    <TextBlock Text="{Binding StatusHint}" TextWrapping="Wrap" 
                               FontStyle="Italic" Foreground="{StaticResource AccentForeground}" 
                               HorizontalAlignment="Center" TextAlignment="Center"/>
                </StackPanel>
            </Expander>
        </Border>

        <!-- Custom Instructions for LLM -->
        <Border Grid.Row="4" BorderThickness="1" BorderBrush="{StaticResource CardBorderBrush}" 
                CornerRadius="4" Padding="12" Background="{StaticResource MenuBackground}">
            <Expander IsExpanded="False" Background="Transparent">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸŽ“ Custom Instructions for " 
                                   Foreground="{StaticResource Accent}" 
                                   FontWeight="SemiBold" 
                                   FontSize="13"/>
                        <TextBlock Text="{Binding DataContext.RequirementMethod, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}" 
                                   Foreground="{StaticResource Accent}" 
                                   FontWeight="Bold" 
                                   FontSize="13"/>
                    </StackPanel>
                </Expander.Header>
                <StackPanel Margin="0,8,0,0">
                    <TextBlock TextWrapping="Wrap" 
                               Foreground="{StaticResource MenuForeground}" 
                               Margin="0,0,0,8"
                               FontSize="11">
                        <Run>Add custom instructions that will be sent to the AI when working with</Run>
                        <Run Text="{Binding DataContext.RequirementMethod, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}" FontWeight="SemiBold"/>
                        <Run>requirements. These instructions are saved and applied automatically.</Run>
                    </TextBlock>

                    <TextBlock TextWrapping="Wrap" 
                               Foreground="#999999" 
                               FontStyle="Italic"
                               FontSize="11"
                               Margin="0,0,0,8">
                        Examples: "Prioritize worst-case scenarios", "I prefer comprehensive analysis over speed", "Focus on practical execution steps"
                    </TextBlock>

                    <TextBox Text="{Binding CustomInstructions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MinHeight="80"
                             MaxHeight="200"
                             VerticalScrollBarVisibility="Auto"
                             Background="#2D2D30"
                             Foreground="White"
                             BorderBrush="{StaticResource Accent}"
                             BorderThickness="1"
                             Padding="8"
                             FontSize="11"
                             ToolTip="Enter any special instructions for the AI when generating clarifying questions and test cases"/>
                    
                    <TextBlock Text="Instructions are auto-saved when you navigate away from this page" 
                               Foreground="#999999"
                               FontStyle="Italic"
                               FontSize="10"
                               Margin="0,4,0,0"
                               HorizontalAlignment="Right"/>
                </StackPanel>
            </Expander>
        </Border>
    </Grid>
    </ScrollViewer>
</UserControl>
