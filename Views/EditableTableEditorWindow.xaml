<Window x:Class="TestCaseEditorApp.MVVM.Views.EditableTableEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:edc="clr-namespace:EditableDataControl.Controls;assembly=EditableDataControl"
        Title="Edit Table" Width="960" Height="640" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- named so code-behind can set EditorViewModel explicitly -->
        <edc:EditableDataControl x:Name="EditorControl" Grid.Row="0"
                                 EditorViewModel="{Binding}" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Bottom"
                    HorizontalAlignment="Right" Margin="0,12,12,5">
            <Button Content="OK" Width="80" Height="28" IsDefault="True" Margin="0,0,8,0" Click="Ok_Click"/>
            <Button Content="Cancel" Width="80" Height="28" IsCancel="True" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>