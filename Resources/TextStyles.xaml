<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =========================== -->
    <!-- TEXTBLOCK STYLES            -->
    <!-- =========================== -->

    <!-- Menu Header Theme - for section headers in menus -->
    <Style x:Key="MenuHeaderTheme" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource Accent}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="6,4,6,4"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Title Text - for workspace/header titles -->
    <Style x:Key="TitleText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource HeaderTextBrush}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <!-- Header Small Text - for counts and status in headers -->
    <Style x:Key="HeaderSmallText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource HeaderStatusTextBrush}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Header Status Message - for bottom status messages -->
    <Style x:Key="HeaderStatusMessageStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource HeaderStatusTextBrush}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Padding" Value="4,2" />
    </Style>

    <!-- LLM Status Text - for connection status indicators -->
    <Style x:Key="LlmStatusTextStyle" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{StaticResource HeaderStatusTextBrush}" />
    </Style>

    <!-- Meta Text - small metadata labels -->
    <Style x:Key="MetaText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Opacity" Value="0.95"/>
        <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}"/>
    </Style>

    <!-- Description Text - for requirement descriptions -->
    <Style x:Key="DescriptionText" TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Foreground" Value="{StaticResource HeaderTextBrush}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <!-- Menu Item Text - standard menu text -->
    <Style x:Key="MenuItemText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource MenuForeground}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Badge Text - for badge indicators -->
    <Style x:Key="BadgeText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>
