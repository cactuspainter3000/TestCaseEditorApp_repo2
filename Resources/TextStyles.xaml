<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========================================== -->
    <!-- TEXT STYLES - TYPOGRAPHY                  -->
    <!-- ========================================== -->
    <!-- All text styles now reference DesignSystem.xaml tokens.
         These are specialized variants of the core typography styles. -->

    <!-- Merge DesignSystem for access to typography tokens -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="DesignSystem.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- ========================================== -->
    <!-- SPECIALIZED TEXT STYLES                   -->
    <!-- ========================================== -->

    <!-- Menu Header Theme - for section headers in menus -->
    <Style x:Key="MenuHeaderTheme" TargetType="TextBlock" BasedOn="{StaticResource Text.H1}">
        <Setter Property="Margin" Value="6,4,6,4"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>

    <!-- Title Text - for workspace/header titles -->
    <Style x:Key="TitleText" TargetType="TextBlock" BasedOn="{StaticResource Text.H1}">
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- Header Small Text - for counts and status in headers -->
    <Style x:Key="HeaderSmallText" TargetType="TextBlock" BasedOn="{StaticResource Text.Body.Small}">
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Secondary}"/>
    </Style>

    <!-- Header Status Message - for bottom status messages -->
    <Style x:Key="HeaderStatusMessageStyle" TargetType="TextBlock" BasedOn="{StaticResource Text.Body.Small}">
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Secondary}"/>
        <Setter Property="Padding" Value="4,2"/>
    </Style>

    <!-- LLM Status Text - for connection status indicators -->
    <Style x:Key="LlmStatusTextStyle" TargetType="TextBlock" BasedOn="{StaticResource Text.Body.Small}">
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Secondary}"/>
    </Style>

    <!-- Meta Text - small metadata labels -->
    <Style x:Key="MetaText" TargetType="TextBlock" BasedOn="{StaticResource Text.Caption}">
        <Setter Property="Opacity" Value="0.95"/>
    </Style>

    <!-- Description Text - for requirement descriptions -->
    <Style x:Key="DescriptionText" TargetType="TextBlock" BasedOn="{StaticResource Text.Body}">
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="LineHeight" Value="22"/>
        <Setter Property="TextTrimming" Value="None"/>
        <Setter Property="Margin" Value="0,2"/>
        <!-- Better spacing for readability -->
        <Setter Property="Opacity" Value="0.95"/>
    </Style>

    <!-- Menu Item Text - standard menu text -->
    <Style x:Key="MenuItemText" TargetType="TextBlock" BasedOn="{StaticResource Text.Body}">
        <!-- Inherits from Text.Body -->
    </Style>

    <!-- Badge Text - for badge indicators -->
    <Style x:Key="BadgeText" TargetType="TextBlock" BasedOn="{StaticResource Text.Caption}">
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.OnAccent}"/>
    </Style>

    <!-- Dropdown Section Header - for section headers in dropdown menus -->
    <Style x:Key="DropdownSectionHeader" TargetType="TextBlock" BasedOn="{StaticResource Text.Body}">
        <Setter Property="Foreground" Value="{StaticResource Brush.Accent.Primary}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Margin" Value="4,0,0,4"/>
        <Setter Property="Cursor" Value="Arrow"/>
    </Style>

    <!-- Dropdown Section Icon - for icons in dropdown section headers -->
    <Style x:Key="DropdownSectionIcon" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource Brush.Accent.Primary}"/>
        <Setter Property="Margin" Value="0,0,6,0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Style.Triggers>
            <!-- Direct hover on the icon -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{StaticResource Brush.Accent.Primary.Light}"/>
            </Trigger>
            <!-- Also respond to parent container hover -->
            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=StackPanel}}" Value="True">
                <Setter Property="Foreground" Value="{StaticResource Brush.Accent.Primary.Light}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Dropdown Section Text - for text in dropdown section headers -->
    <Style x:Key="DropdownSectionText" TargetType="TextBlock" BasedOn="{StaticResource Text.Body}">
        <Setter Property="Foreground" Value="{StaticResource Brush.Accent.Primary}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>

    <!-- Dropdown Item Text - for clickable dropdown item labels with hover effect -->
    <Style x:Key="DropdownItemText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Secondary}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Background" Value="Transparent"/>
        <Style.Triggers>
            <!-- Use EventTrigger for more reliable hover detection -->
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                        To="#E6E6E6"
                                        Duration="0:0:0.1"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                        To="#CCCCCC"
                                        Duration="0:0:0.1"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <!-- Dropdown Section Container - for section headers container -->
    <Style x:Key="DropdownSectionContainer" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="4,0,0,4"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

</ResourceDictionary>
