<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =========================== -->
    <!-- BORDER STYLES               -->
    <!-- =========================== -->

    <!-- Card - basic card container -->
    <Style x:Key="Card" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="4"/>
    </Style>

    <!-- Menu Section Border - main menu container style -->
    <Style x:Key="MenuSectionBorderStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Background" Value="{StaticResource MenuBackground}"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- Content Border - for main content areas -->
    <Style x:Key="ContentBorderStyle" TargetType="Border" BasedOn="{StaticResource MenuSectionBorderStyle}">
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="6"/>
    </Style>

    <!-- Header Border - for header sections -->
    <Style x:Key="HeaderBorderStyle" TargetType="Border" BasedOn="{StaticResource MenuSectionBorderStyle}">
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="4"/>
    </Style>

    <!-- Header Description Border - for description areas with highlight capability -->
    <Style x:Key="HeaderDescriptionBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="4" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding RequirementDescriptionHighlight}" Value="True">
                <Setter Property="BorderThickness" Value="1.5" />
                <Setter Property="BorderBrush" Value="{StaticResource HeaderHighlightBorderBrush}" />
                <Setter Property="Background" Value="{StaticResource HeaderHighlightBackground}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Meta Chip - small rounded indicator chips -->
    <Style x:Key="MetaChip" TargetType="Border">
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Background" Value="#F6F8FB"/>
        <Setter Property="BorderBrush" Value="#D6DFEF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="0,4,6,0"/>
        <Setter Property="Padding" Value="8,2"/>
    </Style>

    <!-- Badge Border - for count badges -->
    <Style x:Key="BadgeStyle" TargetType="Border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="6,2"/>
        <Setter Property="MinWidth" Value="34"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- Badge with Background - filled badge variant -->
    <Style x:Key="BadgeFilledStyle" TargetType="Border" BasedOn="{StaticResource BadgeStyle}">
        <Setter Property="Background" Value="{StaticResource Accent}"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>


    <!-- =========================== -->
    <!-- SHAPE STYLES                -->
    <!-- =========================== -->

    <!-- LLM Status Ellipse - connection indicator -->
    <Style x:Key="LlmEllipseStyle" TargetType="Ellipse">
        <Setter Property="Width" Value="10" />
        <Setter Property="Height" Value="10" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,0,6,0" />
        <Setter Property="Fill" Value="Gray" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsLlmConnected}" Value="True">
                <Setter Property="Fill" Value="Green" />
            </DataTrigger>
            <DataTrigger Binding="{Binding IsLlmConnected}" Value="False">
                <Setter Property="Fill" Value="Red" />
            </DataTrigger>
        </Style.Triggers>
    </Style>


    <!-- =========================== -->
    <!-- GRID STYLES                 -->
    <!-- =========================== -->

    <!-- Step Item Grid - for menu step items -->
    <Style x:Key="StepItemGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="0,2,0,2"/>
    </Style>

</ResourceDictionary>
